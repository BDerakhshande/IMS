<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | نرم افزار صدرا تجهیز مهرگان</title>
    <link href="https://cdn.jsdelivr.net/gh/rastikerdar/vazirmatn@v33.003/fonts.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/main3.css" asp-append-version="true" />
</head>
<body class="bg-light">
    <div class="system-access-container">
        <header class="system-header bg-primary text-white p-3">
            <div class="container d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <img src="~/img/logo.png" alt="لوگوی شرکت" class="system-logo" style="height: 50px;">
                    <h1 class="h4 mb-0 mr-2">نرم افزار یکپارچه صدرا تجهیز مهرگان</h1>
                </div>
                <div class="user-menu text-white">
                    <span class="username">کاربر: مدیر سیستم</span>
                    <i class="fas fa-user-circle fa-lg mr-2"></i>
                </div>
            </div>
        </header>

        <main role="main" class="container my-4">
            @RenderBody()
        </main>

        <footer class="system-footer bg-dark text-white p-3">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 text-center text-md-right">
                        <a href="#" class="text-white mx-2"><i class="fas fa-question-circle"></i> ارتباط با ما</a>
                        <a href="#" class="text-white mx-2"><i class="fas fa-envelope"></i> مدیریت کاربران</a>
                        <a href="#" class="text-white mx-2"><i class="fas fa-cog"></i> ارسال تیکت</a>
                    </div>
                    <div class="col-md-6 text-center text-md-left mt-2 mt-md-0">
                        <span>نسخه ۲.۱.۰</span>
                        <span class="mx-2">|</span>
                        <span>© ۱۴۰۲ کلیه حقوق محفوظ است</span>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/main3.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
