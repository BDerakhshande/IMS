@model IMS.Areas.AccountManagement.Models.Account;

@{
    ViewData["Title"] = "ایجاد حساب جدید";
}

<link rel="stylesheet" href="~/css/transactionstyle.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />

<div class="container py-5">
    <div class="card shadow-lg border-0 rounded-4 p-4 glass-card">
        <h2 class="text-center mb-4 fw-bold text-primary">
            <i class="bi bi-wallet2 me-2"></i> ایجاد حساب جدید
        </h2>

        <form method="post" asp-action="Create">
            @Html.AntiForgeryToken()
            <div class="row g-4">
                <div class="col-md-6 mx-auto">
                    <label asp-for="Name" class="form-label">نام حساب</label>
                    <input asp-for="Name" class="form-control rounded-3 shadow-sm" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

               @*  <div class="col-md-6 mx-auto">
                    <label asp-for="InitialBalance" class="form-label">موجودی اولیه</label>
                    <input asp-for="InitialBalance" class="form-control rounded-3 shadow-sm" />
                    <span asp-validation-for="InitialBalance" class="text-danger"></span>
                </div> *@
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success px-5 py-2 fw-bold rounded-pill shadow-lg">
                    <i class="bi bi-check-circle me-1"></i> ذخیره
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 fw-bold rounded-pill ms-2 shadow-sm">
                    بازگشت
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
