@model IMS.Areas.AccountManagement.Models.Account;

@{
    ViewData["Title"] = "ویرایش حساب";
}

<link rel="stylesheet" href="~/css/transactionstyle.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />

<div class="container py-5">
    <div class="card shadow-lg border-0 rounded-4 p-4 glass-card">
        <h2 class="text-center mb-4 fw-bold text-warning">
            <i class="bi bi-pencil-square me-2"></i> ویرایش حساب
        </h2>

        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)

            <div class="row g-4">
                <div class="col-md-6 mx-auto">
                    <label asp-for="Name" class="form-label fw-bold">نام حساب</label>
                    <input asp-for="Name" class="form-control rounded-3 shadow-sm" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                @* <div class="col-md-6 mx-auto">
                    <label asp-for="InitialBalance" class="form-label fw-bold">موجودی اولیه</label>
                    <input asp-for="InitialBalance" class="form-control rounded-3 shadow-sm" />
                    <span asp-validation-for="InitialBalance" class="text-danger"></span>
                </div> *@
            </div>

            <div class="text-center mt-4 d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 fw-bold rounded-pill shadow">
                    <i class="bi bi-arrow-left me-1"></i> بازگشت
                </a>
                <button type="submit" class="btn btn-warning px-5 py-2 fw-bold rounded-pill shadow">
                    <i class="bi bi-check2-circle me-1"></i> ذخیره تغییرات
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
