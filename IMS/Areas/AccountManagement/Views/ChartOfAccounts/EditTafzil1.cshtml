@model IMS.Areas.AccountManagement.Models.Tafzil

@{
    ViewData["Title"] = "ویرایش حساب تفصیل";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/fontawesome/css/all.min.css" />
<link href="~/vazirmatn/webfonts.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/management.css" />
<link rel="stylesheet" href="~/css/Warehouses.css" />

<style>
    .form-label i,
    .input-group-text i {
        color: #000 !important;
    }

    .form-label {
        color: #000 !important;
    }

    .form-text {
        color: #6c757d !important;
    }
</style>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<div class="container-fluid py-4" dir="rtl">
    <div class="row">
        <div class="col-12">
            <div class="card card-primary border-0 shadow">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h4 class="mb-0 text-white">
                        <i class="fas fa-layer-group me-2"></i> @ViewData["Title"]
                    </h4>
                    <a asp-area="AccountManagement"
                       asp-controller="ChartOfAccounts"
                       asp-action="Tafzils"
                       asp-route-moeinId="1"
                       class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-right me-1"></i> بازگشت به لیست
                    </a>
                </div>

                <div class="card-body">
                    <form asp-action="EditTafzil1" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Code" class="form-label fw-bold mb-2">
                                        <i class="fas fa-barcode me-1"></i> کد حساب تفصیل
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fas fa-hashtag"></i></span>
                                        <input asp-for="Code" class="form-control" maxlength="50" required />
                                    </div>
                                    <span asp-validation-for="Code" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Name" class="form-label fw-bold mb-2">
                                        <i class="fas fa-tag me-1"></i> نام حساب تفصیل
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fas fa-file-alt"></i></span>
                                        <input asp-for="Name" class="form-control" maxlength="200" required />
                                    </div>
                                    <span asp-validation-for="Name" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="MoeinId" class="form-label fw-bold mb-2">
                                        <i class="fas fa-list me-1"></i> حساب معین
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fas fa-layer-group"></i></span>
                                        @Html.DropDownListFor(
                                        model => model.MoeinId,
                                        new SelectList(ViewBag.Moeins as List<IMS.Areas.AccountManagement.Models.Moein>, "Id", "Name", Model.MoeinId),
                                        "انتخاب حساب معین",
                                        new { @class = "form-control" }
                                        )
                                    </div>
                                    <span asp-validation-for="MoeinId" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-footer border-top pt-4 mt-4 d-flex justify-content-end gap-3">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-save me-2"></i> ذخیره تغییرات
                            </button>
                            <a asp-area="AccountManagement"
                               asp-controller="ChartOfAccounts"
                               asp-action="Tafzils"
                               asp-route-moeinId="1"
                               class="btn btn-light btn-sm">
                                <i class="fas fa-arrow-right me-1"></i> بازگشت به لیست
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        // فعال سازی اعتبارسنجی فرم
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
        })();
    </script>
}
