@model IMS.Areas.AccountManagement.Models.Tafzil

<link rel="stylesheet" href="~/css/transactionstyle.css">

@{
    var errorMessage = TempData["ErrorMessage"];

    var successMessage = TempData["SuccessMessage"];
}

<style>
    .btn-edit-tafzil{
        background: #1a4a5a !important;
        border: none;
        color: #fff;
        padding: 10px 20px;
        margin-top: 15px; /* فاصله از بالا */
        border-radius: 5px;
    }
</style>

@if (errorMessage != null)

{
    <div class="alert alert-danger">
        @errorMessage
    </div>
}

@if (successMessage != null)

{
    <div class="alert alert-success">
        @successMessage
    </div>
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <form asp-action="EditTafzil1" method="post">
        @Html.AntiForgeryToken()

        <!-- فیلد کد حساب تفصیل -->
        <div class="form-group">
            <label for="Code">کد حساب تفصیل</label>
            <input type="text" id="Code" name="Code" class="form-control" value="@Model.Code" required maxlength="50" />
            <span class="text-danger" asp-validation-for="Code"></span>
        </div>

        <!-- فیلد نام حساب تفصیل -->
        <div class="form-group">
            <label for="Name">نام حساب تفصیل</label>
            <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name" required maxlength="200" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>

        <!-- فیلد حساب معین -->
        <div class="form-group">
            <label for="MoeinId">حساب معین</label>
            @Html.DropDownListFor(
                     model => model.MoeinId,
                     new SelectList(ViewBag.Moeins as List<IMS.Areas.AccountManagement.Models.Moein>, "Id", "Name", Model.MoeinId),
                     "انتخاب حساب معین",
                     new { @class = "form-control" }
                     )
            <span class="text-danger" asp-validation-for="MoeinId"></span>
        </div>

        <!-- دکمه ارسال -->
        <div class="form-group text-center">
            <button type="submit" class="btn btn-edit-tafzil">ویرایش</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
