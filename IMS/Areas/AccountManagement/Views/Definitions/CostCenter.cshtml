@model IEnumerable<IMS.Areas.AccountManagement.Models.CostCenter>
@{
    ViewData["Title"] = "لیست مراکز هزینه";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<link href="~/vazirmatn/webfonts.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/tablesstyle.css" />
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/management.css" />

<div class="d-flex">

    <div class="header-bar">
        <button class="toggle-btn" id="toggleBtn">☰</button>
        <img src="/image/logo.png" alt="لوگو" id="logo" class="logo-icon" />
    </div>

    <div class="sidebar" id="sidebar">
        <div class="sidebar-content">
            <a asp-area="WarehouseManagement" asp-controller="Dashboard" asp-action="Index" class="menu-item">
                <i class="fas fa-home"></i>
                <span>داشبورد</span>
            </a>

            <div class="menu-item has-submenu">
                <i class="fas fa-user"></i>
                <span>تعاریف</span>
                <i class="submenu-toggle fas fa-chevron-down"></i>
            </div>
            <div class="submenu">
                <a class="submenu-item" href="/AccountManagement/Definitions/CostCenter"><i class="fas fa-box"></i> <span>مدیریت مراکز هزینه</span></a>
                <a class="submenu-item" href="/AccountManagement/ChartOfAccounts/Index"><i class="fas fa-tags"></i> <span>مدیریت حساب ها</span></a>
            </div>
            <a href="/AccountManagement/Transactions/Index" class="menu-item">
                <i class="fas fa-exchange-alt"></i>
                <span>تراکنش‌ها</span>
            </a>

            <a href="/AccountManagement/Reports/Index" class="menu-item">
                <i class="fas fa-chart-bar"></i>
                <span>گزارشات</span>
            </a>

            <a asp-controller="WarehouseManagementHome" asp-action="Index" class="menu-item active">
                <i class="fas fa-right-from-bracket"></i>
                <span>خروج</span>
            </a>
        </div>
    </div>

    <div class="main-content flex-grow-1">
        <div class="container-fluid py-4">
            <div class="card shadow border-0">
                <!-- هدر کارت -->
                <div class="card-header bg-custom-dark text-white d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">
                        <i class="bi bi-building me-2"></i> لیست مراکز هزینه
                    </h3>
                    <div class="d-flex gap-2">
                        <a asp-controller="Definitions" asp-action="CostCenterCreate" class="btn btn-add-account btn-sm">
                            <i class="fa fa-plus-circle"></i> افزودن مرکز هزینه
                        </a>
                        <a href="@Url.Action("ExportToExcelCostCenter", "Definitions")" class="btn btn-light shadow-sm border btn-icon" title="خروجی اکسل" />
                        <i class="fas fa-file-excel text-success fs-5"></i>
                        </a>
                        <button onclick="window.print()" class="btn btn-light shadow-sm border btn-icon" title="پرینت">
                            <i class="fas fa-print text-primary fs-5"></i>
                        </button>
                    </div>
                </div>

                <!-- پیام‌ها -->
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger m-3">@TempData["ErrorMessage"]</div>
                }
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success m-3">@TempData["SuccessMessage"]</div>
                }

                <div class="card-body">
                    <div class="mb-3 d-flex justify-content-between align-items-center">
                        <input type="text" id="searchInput" class="form-control w-25" placeholder="جستجو بر اساس نام مرکز هزینه" />
                        <div class="text-muted small">
                            تعداد مراکز: @(Model?.Count() ?? 0)
                        </div>
                    </div>

                    <!-- جدول -->
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered text-center">
                            <thead class="table-header-dark">
                                <tr>
                                    <th style="width:50px;">ردیف</th>
                                    <th>نام مرکز هزینه</th>
                                    <th style="width:120px;">عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var center in Model)
                                {
                                    <tr class="cost-center-row"
                                        data-costcenter-id="@center.Id"
                                        style="cursor: pointer;">
                                        <td></td>
                                        <td>@center.Name</td>
                                        <td>
                                            <div class="d-flex justify-content-center gap-2">
                                                <button class="btn btn-sm btn-outline-warning"
                                                        onclick="event.stopPropagation(); window.location='@Url.Action("CostCenterEdit", "Definitions", new { id = center.Id })'">
                                                    <i class="fa fa-edit"></i>
                                                </button>
                                                <form asp-action="CostCenterDeleteConfirmed" asp-route-id="@center.Id" method="post" style="display:inline;"
                                                      onsubmit="return confirm('آیا از حذف این مرکز هزینه مطمئن هستید؟');">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="event.stopPropagation();">
                                                        <i class="fa fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>

                <!-- فوتر کارت -->
                <div class="card-footer bg-light d-flex justify-content-between align-items-center">
                    <div class="text-muted small">
                        <i class="fas fa-info-circle me-1"></i>
                        مجموع مراکز: @(Model?.Count() ?? 0)
                    </div>
                    <div>
                        <nav aria-label="Page navigation">
                            <ul class="pagination pagination-sm mb-0">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1" aria-disabled="true">قبلی</a>
                                </li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#">بعدی</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="secondTafzilsModal" tabindex="-1" aria-labelledby="secondTafzilsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="secondTafzilsModalLabel">حساب‌های تفصیل ۲</h5>
                <button type="button" class="btn-close-custom" data-bs-dismiss="modal" aria-label="بستن">
                    <i class="fa fa-times"></i>
                </button>
            </div>
            <div class="modal-body">
                <table class="table table-bordered rtl">
                    <thead class="table-light">
                        <tr>
                            <th>کد</th>
                            <th>نام</th>
                            <th>حساب تفصیل ۱</th>
                        </tr>
                    </thead>
                    <tbody id="secondTafzilsTableBody">
                        <!-- AJAX Result -->
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">بستن</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/management.js"></script>
    <script src="~/js/CostCenter.js"></script>
}

