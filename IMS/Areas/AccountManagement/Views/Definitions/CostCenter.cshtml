@model IEnumerable<IMS.Areas.AccountManagement.Models.CostCenter>
@{
    ViewData["Title"] = "لیست مراکز هزینه";
}

@section Styles {
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
}


<div class="container py-5">
    <h2 class="text-center mb-4 fw-bold text-primary">
        <i class="bi bi-building me-2"></i> لیست مراکز هزینه
    </h2>

    @if (TempData["ErrorMessage"] != null)

    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    @if (TempData["SuccessMessage"] != null)

    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <div class="d-flex justify-content-between mb-3">
        <a asp-controller="Definitions" asp-action="CostCenterCreate" class="btn btn-gradient-add px-5 py-2 rounded-pill text-white">
            <i class="bi bi-plus-circle me-2"></i> افزودن
        </a>

        <div class="d-flex gap-2 align-items-center">
            <a href="@Url.Action("ExportToExcelCostCenter", "Definitions")" class="btn btn-light shadow-sm border rounded-circle p-2" title="خروجی اکسل">
                <i class="fas fa-file-excel text-success fs-5"></i>
            </a>
            <button onclick="window.print()" class="btn btn-light shadow-sm border rounded-circle p-2" title="پرینت">
                <i class="fas fa-print text-primary fs-5"></i>
            </button>
        </div>
    </div>

    <div id="print-area" class="shadow rounded-3 overflow-auto">
        <table id="costCenterTable" class="table table-striped table-bordered display w-100">
            <thead class="table-light">
                <tr>
                    <th>ردیف</th>
                    <th>نام مرکز هزینه</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var center in Model)

                {
                    <tr class="cost-center-row" data-costcenter-id="@center.Id" style="cursor: pointer;">
                        <td></td>
                        <td>@center.Name</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-controller="Definitions" asp-action="CostCenterEdit" asp-route-id="@center.Id" class="btn-icon" title="ویرایش" onclick="event.stopPropagation();">
                                    <i class="bi bi-pencil-square icon-edit"></i>
                                </a>
                                <form asp-action="CostCenterDeleteConfirmed" asp-route-id="@center.Id" method="post" class="d-inline" onsubmit="return confirm('آیا از حذف این مرکز هزینه مطمئن هستید؟');">
                                    <button type="submit" class="btn-icon" title="حذف" onclick="event.stopPropagation();">
                                        <i class="bi bi-trash icon-delete"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="secondTafzilsModal" tabindex="-1" aria-labelledby="secondTafzilsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="secondTafzilsModalLabel">حساب‌های تفصیل ۲</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="بستن"></button>
            </div>
            <div class="modal-body">
                <table class="table table-bordered rtl">
                    <thead class="table-light">
                        <tr>
                            <th>کد</th>
                            <th>نام</th>
                            <th>حساب تفصیل ۱</th>
                        </tr>
                    </thead>
                    <tbody id="secondTafzilsTableBody">
                        <!-- AJAX Result -->
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">بستن</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            var table = $('#costCenterTable').DataTable({
                paging: true,
                searching: false,
                ordering: true,
                pageLength: 10,
                lengthMenu: [5, 10, 25, 50, 100],
                info: true,
                language: {
                    url: "https://cdn.datatables.net/plug-ins/1.13.6/i18n/fa.json"
                },
                columnDefs: [
                    { targets: 0, searchable: false, orderable: false }
                ]
            });

            table.on('draw', function () {
                table.column(0, { page: 'current' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();

            $('#costCenterTable tbody').on('click', 'tr.cost-center-row', function (e) {
                // جلوگیری از باز شدن مودال هنگام کلیک روی دکمه‌ها
                if ($(e.target).closest('.btn-icon, form').length) return;

                var costCenterId = $(this).data('costcenter-id');

                $.ajax({
                    url: '@Url.Action("GetSecondTafzilsByCostCenter", "Definitions")',
                    type: 'GET',
                    data: { costCenterId: costCenterId },
                    success: function (data) {
                        var tableBody = $('#secondTafzilsTableBody');
                        tableBody.empty();

                        if (data.length === 0) {
                            tableBody.append('<tr><td colspan="3" class="text-center">هیچ حساب تفصیل ۲ یافت نشد.</td></tr>');
                        } else {
                            $.each(data, function (index, item) {
                                tableBody.append(
                                    `<tr>
                                                <td>${item.code}</td>
                                                <td>${item.name}</td>
                                                <td>${item.tafzil?.name ?? '-'}</td>
                                            </tr>`
                                );
                            });
                        }

                        var modal = new bootstrap.Modal(document.getElementById('secondTafzilsModal'));
                        modal.show();
                    },
                    error: function () {
                        alert('خطایی در بارگذاری حساب‌های تفصیل ۲ رخ داد.');
                    }
                });
            });
        });
    </script>
}
