@model IEnumerable<IMS.Areas.AccountManagement.Models.CostCenter>
@{
    ViewData["Title"] = "مدیریت مراکز هزینه";
    Layout = "~/Areas/AccountManagement/Views/Shared/_Layout.cshtml";
    int rowIndex = 1;
}

<style>
    #secondTafzilsModal .modal-dialog {
        transform: translateY(-120px);
    }

    .highlight {
        background-color: orange;
        padding: 0 2px;
        border-radius: 2px;
    }
</style>


<div class="container-fluid py-2" dir="rtl">
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header py-1 d-flex justify-content-between align-items-center" style="background-color: #1a4959; color: white;">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-wallet me-1" style="font-size: 0.85rem; margin-left: 8px;"></i>
                        <h5 class="mb-0 fw-bold" style="font-size: 0.9rem;"> @ViewData["Title"] </h5>
                    </div>

                    <div class="d-flex align-items-center gap-1">
                        <div class="search-box" style="width: 180px;">
                            <div class="input-group input-group-sm">
                                <span class="input-group-text bg-white text-secondary p-1">
                                    <i class="fas fa-search" style="font-size: 0.8rem;"></i>
                                </span>
                                <input type="text"
                                       id="globalSearch"
                                       class="form-control form-control-sm p-1"
                                       placeholder="جستجو..."
                                       dir="rtl"
                                       style="height: 20px; font-size: 0.8rem;">
                            </div>
                        </div>

                        <a asp-action="CostCenterCreate"
                           asp-controller="Definitions"
                           class="btn btn-sm btn-light d-flex align-items-center py-1 px-2"
                           style="height: 28px; font-size: 0.8rem;">
                            <i class="fas fa-plus me-1" style="font-size: 0.8rem;"></i>
                            <span> افزودن مرکز هزینه </span>
                        </a>
                    </div>
                </div>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show mx-2 my-1 py-1" role="alert" style="font-size: 0.8rem;">
                        <i class="fas fa-check-circle me-1" style="font-size: 0.85rem;"></i>
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close p-1" data-bs-dismiss="alert" aria-label="Close" style="font-size: 0.7rem;"></button>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show mx-2 my-1 py-1" role="alert" style="font-size: 0.8rem;">
                        <i class="fas fa-exclamation-circle me-1" style="font-size: 0.85rem;"></i>
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close p-1" data-bs-dismiss="alert" aria-label="Close" style="font-size: 0.7rem;"></button>
                    </div>
                }

                <div class="card-body p-2">
                    <div class="table-responsive">
                        <table class="table table-hover table-sm mb-0" style="font-size: 0.8rem;">
                            <thead style="background-color: #f8f9fa; font-size: 0.82rem;" class="text-center">
                                <tr>
                                    <th class="py-1" style="width: 50px;">ردیف</th>
                                    <th class="py-1">نام مرکز هزینه</th>
                                    <th class="py-1" style="width: 120px;">عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var center in Model)
                                {
                                    <tr class="cost-center-row" data-costcenter-id="@center.Id" style="cursor: pointer; height: 32px;">
                                        <td class="text-center fw-bold py-1 align-middle">@rowIndex</td>
                                        <td class="text-center py-1 align-middle">@center.Name</td>
                                        <td class="text-center py-1 align-middle">
                                            <div class="d-flex justify-content-center gap-1">
                                                <a asp-action="CostCenterEdit"
                                                   asp-controller="Definitions"
                                                   asp-route-id="@center.Id"
                                                   class="btn btn-sm btn-outline-warning px-1"
                                                   style="font-size: 0.75rem; min-width: 26px; height: 26px;"
                                                   onclick="event.stopPropagation();">
                                                    <i class="fas fa-edit"></i>
                                                </a>

                                                <form asp-action="CostCenterDeleteConfirmed"
                                                      asp-route-id="@center.Id"
                                                      method="post"
                                                      class="d-inline"
                                                      onsubmit="event.stopPropagation(); return confirm('آیا از حذف این مرکز هزینه مطمئن هستید؟');">
                                                    <button type="submit"
                                                            class="btn btn-sm btn-outline-danger px-1"
                                                            style="font-size: 0.75rem; min-width: 26px; height: 26px;">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                    rowIndex++;
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="d-flex justify-content-center mt-2">
                        <nav>
                            <ul class="pagination pagination-sm mb-0" id="paginationContainer"></ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="secondTafzilsModal" tabindex="-1" aria-labelledby="secondTafzilsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content border-0">
            <div class="modal-header  py-2 px-3" style="background-color: #1a4959; color: white">
                <h5 class="modal-title" id="secondTafzilsModalLabel">حساب‌های تفصیل ۲</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="بستن"></button>
            </div>
            <div class="modal-body px-3 py-2" style="font-size: 0.8rem;">
                <div class="table-responsive">
                    <table class="table table-bordered table-sm text-center align-middle mb-0">
                        <thead class="table-light" style="font-size: 0.8rem;">
                            <tr>
                                <th>حساب تفصیل ۱</th>
                                <th>نام</th>
                                <th>کد</th>
                            </tr>
                        </thead>
                        <tbody id="secondTafzilsTableBody">
                            <tr><td colspan="3" class="text-center">در حال بارگذاری...</td></tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer py-2 px-3">
                <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">بستن</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/MenuJs.js"></script>
    <script>
        $(document).ready(function () {
            // کلیک روی ردیف برای باز کردن مودال
            $('tbody').on('click', 'tr.cost-center-row', function (e) {
                if ($(e.target).closest('button, form, a').length) return;

                var costCenterId = $(this).data('costcenter-id');

                $.ajax({
                    url: '/AccountManagement/Definitions/GetSecondTafzilsByCostCenter',
                    type: 'GET',
                    data: { costCenterId: costCenterId },
                    success: function (data) {
                        var tableBody = $('#secondTafzilsTableBody');
                        tableBody.empty();

                        if (!data || data.length === 0) {
                            tableBody.append('<tr><td colspan="3" class="text-center">هیچ حساب تفصیل ۲ یافت نشد.</td></tr>');
                        } else {
                            $.each(data, function (index, item) {
                                tableBody.append(`
                                    <tr>
                                        <td>${item.code}</td>
                                        <td>${item.name}</td>
                                        <td>${item.tafzil && item.tafzil.name ? item.tafzil.name : '-'}</td>
                                    </tr>
                                `);
                            });
                        }

                        var modal = new bootstrap.Modal(document.getElementById('secondTafzilsModal'));
                        modal.show();
                    },
                    error: function () {
                        alert('خطایی در بارگذاری حساب‌های تفصیل ۲ رخ داد.');
                    }
                });
            });

                // جستجوی جدول با هایلایت کردن نتایج
        $("#globalSearch").on("input", function () {
            var term = $(this).val().trim().toLowerCase();
            var rows = $("tbody tr.cost-center-row");
            var hasResults = false;
            var noResultsRow = $('<tr class="no-results"><td colspan="3" class="text-center text-muted py-2" style="font-size: 0.8rem;">نتیجه‌ای یافت نشد</td></tr>');

            // حذف هایلایت‌های قبلی
            $(".highlight").contents().unwrap();

            // اگر جستجو خالی است، تمام ردیف‌ها را نمایش بده
            if (term.length === 0) {
                rows.show();
                $("tbody tr.no-results").remove();
                return;
            }

            rows.each(function () {
                var row = $(this);
                var cells = row.find("td:not(:last-child)"); // فقط سلول‌های غیر از عملیات
                var rowMatches = false;

                cells.each(function () {
                    var cell = $(this);
                    var text = cell.text().toLowerCase();

                    if (text.includes(term)) {
                        rowMatches = true;

                        // هایلایت کردن متن
                        var html = cell.html();
                        var highlighted = html.replace(
                            new RegExp(term, 'gi'),
                            match => `<span class="highlight bg-warning">${match}</span>`
                        );
                        cell.html(highlighted);
                    }
                });

                if (rowMatches) {
                    row.show();
                    hasResults = true;
                } else {
                    row.hide();
                }
            });

            // نمایش پیام در صورت نبود نتیجه
            $("tbody tr.no-results").remove();
            if (!hasResults && term.length > 0) {
                $("tbody").append(noResultsRow);
            }
        });
        });
    </script>
}
