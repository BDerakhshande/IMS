@model IMS.Areas.AccountManagement.Models.TransactionReportViewModel
@using Microsoft.AspNetCore.Mvc.Rendering
@using IMS.Areas.AccountManagement.Helper

@{
    ViewData["Title"] = "گزارش تراکنش‌ها";
    Layout = "~/Areas/AccountManagement/Views/Shared/_Layout.cshtml";
}

<style>
    .btn-outline-secondary {
        background-color: white !important;
    }

        .btn-outline-secondary:hover,
        .btn-outline-secondary:active,
        .btn-outline-secondary:focus {
            background-color: white !important;
            color: #6c757d !important;
            border-color: #6c757d !important;
            box-shadow: none !important;
        }
</style>

<div class="header-sidebar-wrapper">
    <div class="container-fluid py-3" dir="rtl">
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow" style="background-color: white;">

                    <!-- Header -->
                    <div class="card-header py-2 d-flex justify-content-between align-items-center" style="background-color: #1a4959; color: white;">
                        <h5 class="mb-0 text-white">
                            <i class="fas fa-chart-bar me-2"></i> @ViewData["Title"]
                        </h5>
                    </div>

                    <div class="card-body">

                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success small py-2 mb-3">
                                <i class="fas fa-check-circle me-1"></i> @TempData["SuccessMessage"]
                            </div>
                        }

                        <!-- Filter Form -->
                        <form asp-action="Index" method="post" class="needs-validation" novalidate>
                            <div class="row g-2 mb-3">

                                <div class="col-md-3">
                                    <label asp-for="FromDate" class="form-label fw-bold small">
                                        <i class="fas fa-calendar-alt text-muted me-1"></i> از تاریخ
                                    </label>
                                    <input asp-for="FromDate" class="form-control form-control-sm persian-datepicker" placeholder="مثال: 1403/02/01" />
                                </div>

                                <div class="col-md-3">
                                    <label asp-for="ToDate" class="form-label fw-bold small">
                                        <i class="fas fa-calendar-alt text-muted me-1"></i> تا تاریخ
                                    </label>
                                    <input asp-for="ToDate" class="form-control form-control-sm persian-datepicker" placeholder="مثال: 1403/02/31" />
                                </div>

                                <div class="col-md-3">
                                    <label asp-for="MinAmount" class="form-label fw-bold small">
                                        <i class="fas fa-arrow-down text-muted me-1"></i> از مبلغ
                                    </label>
                                    <input asp-for="MinAmount" class="form-control form-control-sm" type="number" />
                                </div>

                                <div class="col-md-3">
                                    <label asp-for="MaxAmount" class="form-label fw-bold small">
                                        <i class="fas fa-arrow-up text-muted me-1"></i> تا مبلغ
                                    </label>
                                    <input asp-for="MaxAmount" class="form-control form-control-sm" type="number" />
                                </div>

                                <div class="col-md-3">
                                    <label asp-for="CostCenterId" class="form-label fw-bold small">
                                        <i class="fas fa-building text-muted me-1"></i> مرکز هزینه
                                    </label>
                                    <select asp-for="CostCenterId" class="form-control form-control-sm select2" asp-items="ViewBag.CostCenters">
                                        <option value="">انتخاب کنید</option>
                                    </select>
                                </div>

                                <div class="col-md-3">
                                    <label asp-for="MainAccountId" class="form-label fw-bold small">
                                        <i class="fas fa-layer-group text-muted me-1"></i> کد کل
                                    </label>
                                    <select asp-for="MainAccountId" class="form-control form-control-sm select2" asp-items="ViewBag.MainAccounts">
                                        <option value="">انتخاب کنید</option>
                                    </select>
                                </div>

                                <div class="col-md-3">
                                    <label asp-for="SubAccountId" class="form-label fw-bold small">
                                        <i class="fas fa-list text-muted me-1"></i> کد معین
                                    </label>
                                    <select asp-for="SubAccountId" class="form-control form-control-sm select2" asp-items="ViewBag.SubAccounts">
                                        <option value="">انتخاب کنید</option>
                                    </select>
                                </div>

                                <div class="col-md-3">
                                    <label asp-for="DetailAccount1Id" class="form-label fw-bold small">
                                        <i class="fas fa-tags text-muted me-1"></i> کد تفصیل ۱
                                    </label>
                                    <select asp-for="DetailAccount1Id" class="form-control form-control-sm select2" asp-items="ViewBag.DetailAccounts1">
                                        <option value="">انتخاب کنید</option>
                                    </select>
                                </div>

                                <div class="col-md-3">
                                    <label asp-for="DetailAccount2Id" class="form-label fw-bold small">
                                        <i class="fas fa-tags text-muted me-1"></i> کد تفصیل ۲
                                    </label>
                                    <select asp-for="DetailAccount2Id" class="form-control form-control-sm select2" asp-items="ViewBag.DetailAccounts2">
                                        <option value="">انتخاب کنید</option>
                                    </select>
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="form-footer border-top pt-3 mt-3 d-flex justify-content-between">
                                <button type="submit" class="btn btn-primary btn-sm">
                                    <i class="fas fa-chart-line me-1"></i> گزارش
                                </button>
                                <div class="d-flex gap-2">
                                    <button type="submit" formaction="@Url.Action("ExportToExcel")" class="btn btn-success btn-sm">
                                        <i class="fas fa-file-excel me-1"></i> خروجی اکسل
                                    </button>
                                    <button type="button" onclick="window.print()" class="btn btn-secondary btn-sm">
                                        <i class="fas fa-print me-1"></i> پرینت
                                    </button>
                                </div>
                            </div>
                        </form>

                        <!-- Report Table -->
                        @if (Model.Transactions.Any())
                        {
                            <div class="table-responsive mt-4">
                                <table class="table table-striped table-bordered table-sm align-middle text-center">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>تاریخ</th>
                                            <th>کد حساب کل</th>
                                            <th>کد حساب معین</th>
                                            <th>کد تفصیل ۱</th>
                                            <th>کد تفصیل ۲</th>
                                            <th>مرکز هزینه</th>
                                            <th>بدهکار</th>
                                            <th>بستانکار</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Transactions)
                                        {
                                            <tr>
                                                <td>@(item.Date.HasValue? item.Date.ConvertToPersianDate() : "—")</td>
                                                <td>@item.MainAccount</td>
                                                <td>@item.SubAccount</td>
                                                <td>@item.DetailAccount1</td>
                                                <td>@item.DetailAccount2</td>
                                                <td>@(string.IsNullOrEmpty(item.CostCenterName) ? "--" : item.CostCenterName)</td>
                                                <td>@item.Debit.ToString("N2")</td>
                                                <td>@item.Credit.ToString("N2")</td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot class="table-light">
                                        <tr>
                                            <td colspan="6" class="text-end fw-bold">جمع کل:</td>
                                            <td class="fw-bold text-success">@Model.TotalDebit.ToString("N2")</td>
                                            <td class="fw-bold text-success">@Model.TotalCredit.ToString("N2")</td>
                                        </tr>
                                        <tr>
                                            <td colspan="6" class="text-end fw-bold">مانده حساب:</td>
                                            <td colspan="2" class="fw-bold" style="color:@(Model.Balance >= 0 ? "green" : "red")">
                                                @Model.Balance.ToString("N2")
                                            </td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info mt-3 small">
                                هیچ تراکنشی با فیلترهای انتخاب‌شده یافت نشد.
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/MenuJs.js"></script>
    <script src="~/lib/select2/js/select2.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.persian-datepicker').persianDatepicker({
                format: 'YYYY/MM/DD',
                autoClose: true
            });
            $('.select2').select2({ dir: 'rtl', allowClear: true });
        });
    </script>
}
