@using IMS.Application.WarehouseManagement.DTOs
@using IMS.Models.ProMan
@using System.Linq
@model InventoryTransactionReportPdfViewModel

@functions {
    public string CleanString(string input)
    {
        if (string.IsNullOrEmpty(input))
            return input;
        return input.Replace(";#", ", ").Replace("#", "").Replace("&", "").Trim().TrimEnd(',');
    }

    public string ToPersianDate(DateTime date)
    {
        var pc = new System.Globalization.PersianCalendar();
        return $"{pc.GetYear(date)}/{pc.GetMonth(date):00}/{pc.GetDayOfMonth(date):00}";
    }

    public string GetDocTypeFa(string docType)
    {
        return docType switch
        {
            "Receipt" => "رسید",
            "Issue" => "حواله",
            "Transfer" => "انتقال",
            "Conversion" => "تبدیل",
            "InventoryAdjustment" => "اصلاح موجودی",
            "AddInventory" => "ایجاد کالا",
            _ => docType
        };
    }
}

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>گزارش تراکنش‌های کالا</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'B Nazanin', Tahoma, Arial, sans-serif;
        }

        body {
            padding: 20px;
            font-size: 14px;
            line-height: 1.6;
            color: #333;
        }

        .header {
            text-align: center;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 2px solid #1a4a5a;
        }

            .header h1 {
                color: #1a4a5a;
                font-size: 24px;
                margin-bottom: 10px;
            }

        .report-info {
            display: flex;
            justify-content: space-between;
            font-size: 12px;
            color: #7f8c8d;
            margin-bottom: 15px;
        }

        .filters-inline {
            direction: rtl;
        }

            .filters-inline .tag {
                display: inline-block;
                background-color: #e8f4fc;
                padding: 5px 10px;
                margin: 3px;
                border-radius: 3px;
                font-size: 13px;
                white-space: nowrap;
            }

        .filters {
            background-color: #f8f9fa;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 20px;
            border-right: 4px solid #1a4a5a;
        }

            .filters h4 {
                color: #1a4a5a;
                margin-bottom: 10px;
                font-size: 16px;
            }

            .filters ul {
                list-style: none;
                display: flex;
                flex-wrap: wrap;
                gap: 15px;
            }

            .filters li {
                background-color: #e8f4fc;
                padding: 5px 10px;
                border-radius: 3px;
                font-size: 13px;
            }

        .data-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
        }

            .data-table th {
                background-color: #1a4a5a;
                color: white;
                padding: 12px 8px;
                text-align: center;
                font-weight: bold;
                font-size: 13px;
            }

            .data-table td {
                padding: 10px 8px;
                border-bottom: 1px solid #ddd;
                text-align: center;
                font-size: 13px;
            }

        .summary-row {
            font-weight: bold;
            background-color: #f1f1f1 !important;
        }

            .summary-row td {
                border-top: 2px solid #1a4a5a;
                border-bottom: 2px solid #1a4a5a;
                padding: 12px 8px;
            }

        .small-text {
            font-size: 12px;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>گزارش تراکنش‌های کالا</h1>
        <div class="report-info">
            <span>تاریخ استخراج گزارش: @ToPersianDate(DateTime.Now)</span>
            <span>تعداد رکوردها: @(Model.Items?.Count() ?? 0)</span>
        </div>
    </div>
    <section class="filters">
        <h4>فیلترهای اعمال شده:</h4>
        <ul class="filters-inline">

            @* فیلتر نوع سند *@
            @if (!string.IsNullOrWhiteSpace(Model.Filter.DocumentType))
            {
                <li class="tag">نوع سند: @GetDocTypeFa(Model.Filter.DocumentType)</li>
            }

            @* فیلتر تاریخ‌ها *@
            @if (Model.Filter.FromDate.HasValue)
            {
                <li class="tag">از تاریخ: @ToPersianDate(Model.Filter.FromDate.Value)</li>
            }
            @if (Model.Filter.ToDate.HasValue)
            {
                <li class="tag">تا تاریخ: @ToPersianDate(Model.Filter.ToDate.Value)</li>
            }

            @* فیلتر سلسله‌مراتب انبار *@
            @if (!string.IsNullOrWhiteSpace(Model.Filter.WarehouseName))
            {
                <li class="tag">انبار: @Model.Filter.WarehouseName</li>
            }
            @if (!string.IsNullOrWhiteSpace(Model.Filter.ZoneName))
            {
                <li class="tag">قسمت: @Model.Filter.ZoneName</li>
            }
            @if (!string.IsNullOrWhiteSpace(Model.Filter.SectionName))
            {
                <li class="tag">بخش: @Model.Filter.SectionName</li>
            }

            @* فیلتر سلسله‌مراتب محصول *@
            @if (!string.IsNullOrWhiteSpace(Model.Filter.CategoryName))
            {
                <li class="tag">دسته‌بندی: @Model.Filter.CategoryName</li>
            }
            @if (!string.IsNullOrWhiteSpace(Model.Filter.GroupName))
            {
                <li class="tag">گروه: @Model.Filter.GroupName</li>
            }
            @if (!string.IsNullOrWhiteSpace(Model.Filter.StatusName))
            {
                <li class="tag">طبقه: @Model.Filter.StatusName</li>
            }
            @if (!string.IsNullOrWhiteSpace(Model.Filter.ProductName))
            {
                <li class="tag">کالا: @Model.Filter.ProductName</li>
            }
        </ul>
    </section>

    <table class="data-table">
        <thead>
            <tr>
                <th>تاریخ</th>
                <th>کالا</th>
                <th>مبدأ</th>
                <th>مقصد</th>
                <th>نوع سند</th>
                <th>تعداد</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Items != null && Model.Items.Any())
            {
                foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@(string.IsNullOrWhiteSpace(item.Date) ? "-" : item.Date)</td>
                        <td class="small-text">@CleanString($"{(item.CategoryName ?? "-")} - {(item.GroupName ?? "-")} - {(item.StatusName ?? "-")} - {(item.ProductName ?? "-")}")</td>
                        <td class="small-text">@CleanString($"{(item.SourceWarehouseName ?? "-")} - {(item.SourceDepartmentName ?? "-")} - {(item.SourceSectionName ?? "-")}")</td>
                        <td class="small-text">@CleanString($"{(item.DestinationWarehouseName ?? "-")} - {(item.DestinationDepartmentName ?? "-")} - {(item.DestinationSectionName ?? "-")}")</td>
                        <td>@GetDocTypeFa(item.DocumentType)</td>
                        <td>@item.Quantity.ToString("N0")</td>
                    </tr>
                }
                <tr class="summary-row">
                    <td colspan="5">جمع کل</td>
                    <td>@(Model.Items.Sum(i => i.Quantity).ToString("N0"))</td>
                </tr>
            }
            else
            {
                <tr>
                    <td colspan="6" style="text-align:center; padding:20px;">داده‌ای برای نمایش وجود ندارد</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>