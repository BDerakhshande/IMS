@using IMS.Domain.WarehouseManagement.Enums
@using System.Reflection
@using System.ComponentModel.DataAnnotations
@model List<IMS.Application.WarehouseManagement.DTOs.ReceiptOrIssueDto>

<div class="card shadow-sm mt-4">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h3 class="card-title mb-0">لیست رسید/حواله‌ها</h3>
        <a asp-action="Create" class="btn btn-light btn-sm">
            <i class="bi bi-plus-circle me-1"></i> افزودن سند جدید
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered">
                <thead class="table-light">
                    <tr>
                        <th class="text-center">شماره سند</th>
                        <th class="text-center">تاریخ</th>
                        <th class="text-center">نوع</th>
                        <th class="text-center">پروژه</th> <!-- ستون پروژه اضافه شد -->
                        <th class="text-center">توضیحات</th>
                        <th class="text-center">عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">@item.DocumentNumber</td>
                                <td class="text-center">@item.Date.ToShortDateString()</td>
                                <td class="text-center">
                                    <span class="badge @(item.Type == ReceiptOrIssueType.Receipt ? "bg-success" : "bg-warning text-dark")">
                                        @{
                                            var type = item.Type;
                                            var displayAttr = type.GetType()
                                            .GetField(type.ToString())
                                            ?.GetCustomAttribute<DisplayAttribute>();
                                            var displayName = displayAttr?.Name ?? type.ToString();
                                        }
                                        @displayName
                                    </span>
                                </td>
                                <td class="text-center">@(!string.IsNullOrWhiteSpace(item.ProjectTitle) ? item.ProjectTitle : "-")</td>

                                <td>@(string.IsNullOrEmpty(item.Description) ? "-" : item.Description)</td>
                                <td>
                                    <form asp-action="Delete" method="post" onsubmit="return confirm('آیا مطمئنید حذف شود؟');" style="display:inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-trash3"></i> حذف
                                        </button>
                                    </form>

                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-pencil"></i> ویرایش
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">موردی یافت نشد</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .table th {
        font-weight: 600;
        white-space: nowrap;
    }

    .table td {
        vertical-align: middle;
    }

    .badge {
        padding: 0.35em 0.65em;
        font-size: 0.85em;
        font-weight: 500;
    }

    .card-header {
        border-radius: 0.375rem 0.375rem 0 0 !important;
    }
</style>
