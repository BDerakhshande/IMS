@using System.Linq
@using IMS.Models.ProMan
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>پرینت رسید/حواله انبار شماره @Model.Receipt.DocumentNumber</title>
    <style>
        /* Reset and Base Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'B Nazanin', 'Iranian Sans', Tahoma, Arial, sans-serif;
        }

        @@page {
            size: A4 portrait;
            margin: 10mm;
        }

        body {
            padding: 20px;
            color: #333;
            line-height: 1.6;
            font-size: 15px;
        }

        /* Header */
        .print-header {
            text-align: center;
            margin-bottom: 25px;
            padding-bottom: 10px;
            border-bottom: 3px solid #1a4a5a;
        }

            .print-header h1 {
                color: #1a4a5a;
                font-size: 24px;
                margin-bottom: 5px;
            }

        .print-info {
            text-align: right;
            font-size: 14px;
            color: #666;
        }

        /* Header Info Section */
        .header-info {
            background-color: #f0f4f8;
            padding: 14px;
            border-radius: 5px;
            margin-bottom: 20px;
            border-right: 4px solid #1a4a5a;
            display: flex;
            flex-wrap: wrap;
            gap: 12px;
        }

        .info-item {
            background-color: #e0f0fc;
            padding: 7px 12px;
            border-radius: 4px;
            font-size: 14px;
        }

        .info-label {
            font-weight: bold;
            color: #1a4a5a;
            margin-left: 6px;
        }

        /* Table Styles */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
            page-break-inside: auto;
        }

        th {
            background-color: #1a4a5a;
            color: white;
            padding: 12px 10px;
            text-align: center;
            font-size: 14px;
        }

        td {
            padding: 10px 8px;
            border-bottom: 1px solid #ddd;
            text-align: center;
            font-size: 14px;
        }

        tr:nth-child(even) {
            background-color: #f8f9fa;
        }

        /* Footer */
        .print-footer {
            text-align: center;
            margin-top: 30px;
            padding-top: 12px;
            border-top: 1px solid #ddd;
            font-size: 13px;
            color: #666;
        }
    </style>
</head>
<body>
    <div class="print-header">
        <h1>
            @(Model.Receipt.Type == IMS.Domain.WarehouseManagement.Enums.ReceiptOrIssueType.Receipt ? "رسید انبار" :
                Model.Receipt.Type == IMS.Domain.WarehouseManagement.Enums.ReceiptOrIssueType.Issue ? "حواله انبار" :
                Model.Receipt.Type == IMS.Domain.WarehouseManagement.Enums.ReceiptOrIssueType.Transfer ? "انتقال انبار" :
                "سند انبار")
        </h1>
        <div class="print-info">
            <span>تاریخ چاپ: @DateTime.Now.ToString("yyyy/MM/dd HH:mm")</span>
        </div>
    </div>

    <div class="header-info">
        <div class="info-item">
            <span class="info-label">شماره سند:</span>
            <span class="info-value">@Model.Receipt.DocumentNumber</span>
        </div>
        <div class="info-item">
            <span class="info-label">تاریخ سند:</span>
            <span class="info-value">@Model.Receipt.Date.ToString("yyyy/MM/dd")</span>
        </div>
        <div class="info-item">
            <span class="info-label">نوع سند:</span>
            <span class="info-value">
                @(Model.Receipt.Type == IMS.Domain.WarehouseManagement.Enums.ReceiptOrIssueType.Receipt ? "رسید" :
                    Model.Receipt.Type == IMS.Domain.WarehouseManagement.Enums.ReceiptOrIssueType.Issue ? "حواله" :
                    Model.Receipt.Type == IMS.Domain.WarehouseManagement.Enums.ReceiptOrIssueType.Transfer ? "انتقال" :
                    "نامشخص")
            </span>
        </div>
        @if (!string.IsNullOrEmpty(Model.Receipt.Description))
        {
            <div class="info-item" style="width: 100%;">
                <span class="info-label">توضیحات:</span>
                <span class="info-value">@Model.Receipt.Description</span>
            </div>
        }
    </div>

    @{
        // استفاده از Count به جای Any برای جلوگیری از خطا
        bool hasItems = Model.ItemsWithProject != null && Model.ItemsWithProject.Count > 0;
    }

    @if (hasItems)
    {
        <table>
            <thead>
                <tr>
                    <th width="20%">کالا</th>
                    <th width="20%">مبدأ</th>
                    <th width="20%">مقصد</th>
                    <th width="10%">تعداد</th>
                    <th width="15%">پروژه</th>
                    <th width="15%">عنوان درخواست</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var itemWithProject in Model.ItemsWithProject)
                {
                    var item = itemWithProject.Item;
                    <tr>
                        <td>
                            @{
                                var parts = new List<string>
                    {
                    item.Category?.Name ?? "—",
                    item.Group?.Name ?? "—",
                    item.Status?.Name ?? "—",
                    item.Product?.Name ?? "—"
                    };
                                if (item.UniqueCodes != null && item.UniqueCodes.Count > 0)
                                {
                                    parts.AddRange(((List<IMS.Domain.WarehouseManagement.Entities.ReceiptOrIssueItemUniqueCode>)item.UniqueCodes)
                                    .Select(uc => uc.UniqueCode));
                                }



                                var combined = string.Join(" | ", parts.Where(p => !string.IsNullOrEmpty(p) && p != "—"));
                            }
                            @combined
                        </td>

                        <td>
                            @{
                                var srcParts = new[]
                                {
                    item.SourceWarehouse?.Name,
                    item.SourceZone?.Name,
                    item.SourceSection?.Name
                    };
                                var src = string.Join(" | ", srcParts.Where(p => !string.IsNullOrEmpty(p))) ?? "—";
                            }
                            @src
                        </td>
                        <td>
                            @{
                                var destParts = new[]
                                {
                    item.DestinationWarehouse?.Name,
                    item.DestinationZone?.Name,
                    item.DestinationSection?.Name
                    };
                                var dest = string.Join(" | ", destParts.Where(p => !string.IsNullOrEmpty(p))) ?? "—";
                            }
                            @dest
                        </td>
                        <td>@item.Quantity.ToString("0")</td>
                        <td>@(itemWithProject.ProjectName ?? "—")</td>
                        <td>@(itemWithProject.PurchaseRequestTitle ?? "—")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div style="text-align: center; padding: 30px; color: #666; font-size: 15px;">
            <p>هیچ آیتمی برای نمایش وجود ندارد.</p>
        </div>
    }

    <div class="print-footer">
        <p>سیستم مدیریت انبار - چاپ شده در تاریخ: @DateTime.Now.ToString("yyyy/MM/dd HH:mm")</p>
    </div>
</body>
</html>