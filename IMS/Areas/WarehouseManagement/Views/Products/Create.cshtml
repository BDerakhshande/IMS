@model IMS.Application.WarehouseManagement.DTOs.ProductDto
@{
    ViewData["Title"] = "کالا جدید";
    Layout = "~/Areas/WarehouseManagement/Views/Shared/_MyLayout.cshtml";
}
<link rel="stylesheet" href="~/fontawesome/css/all.min.css" />
<link href="~/vazirmatn/webfonts.css" rel="stylesheet" />

<div class="container-fluid py-3" dir="rtl">
    <!-- نمایش خطاهای کلی -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
            <h6 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i>خطا در اعتبارسنجی</h6>
            <ul class="mb-0">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow" style="box-shadow: 0 4px 8px rgba(13, 110, 253, 0.1);">
                <div class="card-header py-2 d-flex justify-content-between align-items-center"
                     style="background-color: #1a4959; color: white;">
                    <h5 class="mb-0 text-white">
                        <i class="fas fa-plus-circle me-2"></i> @ViewData["Title"]
                    </h5>
                    <a asp-action="Index" asp-route-statusId="@Model.StatusId" class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-right me-1"></i> بازگشت به لیست
                    </a>
                </div>

                <div class="card-body p-3">
                    <form asp-action="Create" method="post" class="needs-validation" novalidate>
                        <input type="hidden" asp-for="StatusId" />

                        <div class="row g-3 mb-3">
                            <!-- کد کالا -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Code" class="form-label fw-bold mb-1 small">
                                        <i class="fas fa-barcode me-1"></i> کد کالا
                                    </label>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text bg-light"><i class="fas fa-hashtag small"></i></span>
                                        <input asp-for="Code" class="form-control form-control-sm"
                                               placeholder="کد کالا را وارد کنید"
                                               required />
                                    </div>
                                    <span asp-validation-for="Code" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>

                            <!-- نام کالا -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Name" class="form-label fw-bold mb-1 small">
                                        <i class="fas fa-tag me-1"></i> نام کالا <span class="text-danger">*</span>
                                    </label>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text bg-light"><i class="fas fa-font small"></i></span>
                                        <input asp-for="Name" class="form-control form-control-sm"
                                               placeholder="نام کامل کالا را وارد کنید"
                                               required />
                                    </div>
                                    <span asp-validation-for="Name" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>

                            <!-- قیمت کالا -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Price" class="form-label fw-bold mb-1 small">
                                        <i class="fas fa-money-bill-wave me-1"></i> قیمت (ریال) <span class="text-danger">*</span>
                                    </label>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text bg-light"><i class="fas fa-dollar-sign small"></i></span>
                                        <input asp-for="Price" class="form-control form-control-sm"
                                               type="number"
                                               step="0.01"
                                               min="0"
                                               placeholder="قیمت به ریال"
                                               required />
                                        <span class="input-group-text bg-light small">ریال</span>
                                    </div>
                                    <span asp-validation-for="Price" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>

                            <!-- واحد کالا -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="UnitId" class="form-label fw-bold mb-1 small">
                                        <i class="fas fa-cube me-1"></i> واحد <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="UnitId" class="form-select form-select-sm"
                                            asp-items="ViewBag.Units" required>
                                        <option value="">-- انتخاب واحد --</option>
                                    </select>
                                    <span asp-validation-for="UnitId" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>

                            <!-- چک باکس کالا یکتا کنار متن -->
                            <div class="col-md-6 d-flex align-items-center mt-2">
                                <div class="form-check mb-0">
                                    <input asp-for="IsUnique" class="form-check-input" type="checkbox" id="IsUniqueCheck">
                                    <label asp-for="IsUnique" class="form-check-label fw-bold small mb-0 ms-2">
                                        <i class="fas fa-fingerprint me-1"></i> کالا یکتا
                                    </label>
                                </div>
                            </div>

                        </div>

                        <!-- توضیحات -->
                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label fw-bold mb-1 small">
                                <i class="fas fa-align-left me-1"></i> توضیحات
                            </label>
                            <div class="input-group input-group-sm">
                                <span class="input-group-text bg-light"><i class="fas fa-comment small"></i></span>
                                <textarea asp-for="Description" class="form-control form-control-sm"
                                          rows="3"
                                          placeholder="توضیحات تکمیلی درباره کالا"></textarea>
                            </div>
                            <span asp-validation-for="Description" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="border-top pt-3 mt-3 d-flex justify-content-end gap-2">
                            <button type="submit" class="btn btn-primary btn-sm px-4">
                                <i class="fas fa-save me-1"></i> ثبت کالا
                            </button>
                            <a asp-action="Index" asp-route-statusId="@Model.StatusId" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-times me-1"></i> انصراف
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/MenuJs.js"></script>
    <script>
        // فعال سازی اعتبارسنجی فرم
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })();

        // اعتبارسنجی real-time
        document.addEventListener('DOMContentLoaded', function () {
            const inputs = document.querySelectorAll('input, select, textarea');

            inputs.forEach(input => {
                input.addEventListener('blur', function () {
                    this.checkValidity();
                });

                input.addEventListener('input', function () {
                    if (this.classList.contains('is-invalid')) {
                        this.classList.remove('is-invalid');
                    }
                });
            });
        });

        // فرمت قیمت
        document.getElementById('Price')?.addEventListener('blur', function (e) {
            if (this.value) {
                this.value = parseFloat(this.value).toFixed(2);
            }
        });
    </script>
}