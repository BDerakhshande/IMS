@using IMS.Application.WarehouseManagement.DTOs
@model List<ProductDto>
@{
    ViewData["Title"] = "مدیریت محصولات";
    Layout = "~/Areas/WarehouseManagement/Views/Shared/_MyLayout.cshtml";
    var statusId = ViewBag.StatusId;
}
<link rel="stylesheet" href="~/fontawesome/css/all.min.css" />
<link href="~/vazirmatn/webfonts.css" rel="stylesheet" />

<div class="container-fluid py-3" dir="rtl">
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow" style="box-shadow: 0 4px 8px rgba(13, 110, 253, 0.1);">
                <div class="card-header py-2 d-flex justify-content-between align-items-center"
                     style="background-color: #1a4959; color: white;">
                    <h5 class="mb-0 text-white">
                        <i class="fas fa-boxes me-2"></i> @ViewData["Title"]
                    </h5>
                    <div>
                        <a asp-controller="Statuses" asp-action="Index" asp-route-groupId="@ViewBag.GroupId"
                           class="btn btn-light btn-sm ms-2">
                            <i class="fas fa-arrow-right me-1"></i> بازگشت به طبقه
                        </a>
                        <a asp-action="Create" asp-controller="Products" asp-route-statusId="@ViewBag.StatusId"
                           class="btn btn-light btn-sm">
                            <i class="fas fa-plus me-1"></i> محصول جدید
                        </a>
                    </div>
                </div>

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show m-2 small" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <div class="card-body p-2">
                    @if (ViewBag.GroupName != null)
                    {
                        <div class="alert alert-info mb-3 d-flex justify-content-between align-items-center small">
                            <div>
                                <i class="fas fa-filter me-2"></i>
                                فیلتر شده بر اساس گروه: <strong>@ViewBag.GroupName</strong>
                            </div>
                            <a asp-action="Index" class="btn btn-sm btn-outline-info py-0 px-2">
                                <i class="fas fa-times me-1"></i> حذف فیلتر
                            </a>
                        </div>
                    }

                    @if (!Model.Any())
                    {
                        <div class="alert alert-info rounded-3 text-center py-4 small">
                            <i class="fas fa-box-open fa-2x mb-3"></i>
                            <h5 class="fw-bold">هیچ محصولی ثبت نشده است</h5>
                            <p class="mb-0">برای افزودن محصول جدید روی دکمه "محصول جدید" کلیک کنید</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-sm">
                                <thead style="background-color: #f8f9fa;">
                                    <tr>
                                        <th class="text-center small">کد محصول</th>
                                        <th class="text-center small">نام محصول</th>
                                        <th class="text-center small">دسته‌بندی</th>
                                        <th class="text-center small">گروه</th>
                                        <th class="text-center small">طبقه</th>
                                        <th class="text-center small">توضیحات</th>
                                        <th class="text-center small">عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="text-center small fw-bold">@item.ProductsFullCode</td>
                                            <td class="text-center small">@item.Name</td>
                                            <td class="text-center small">@item.CategoryName</td>
                                            <td class="text-center small">@item.GroupName</td>
                                            <td class="text-center small">@item.StatusName</td>
                                            <td class="text-truncate text-center small" style="max-width: 200px;" title="@item.Description">
                                                @item.Description
                                            </td>
                                            <td class="text-center small">
                                                <div class="d-flex justify-content-center gap-1">
                                                    <a asp-action="Edit"
                                                       asp-controller="Products"
                                                       asp-route-id="@item.Id"
                                                       class="btn btn-sm btn-outline-warning py-0 px-2">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Details"
                                                       asp-controller="Products"
                                                       asp-route-id="@item.Id"
                                                       class="btn btn-sm btn-outline-info py-0 px-2">
                                                        <i class="fas fa-info-circle"></i>
                                                    </a>
                                                    <form asp-action="Delete" method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@item.Id" />
                                                        <input type="hidden" name="statusId" value="@ViewBag.StatusId" />
                                                        <button type="submit" class="btn btn-sm btn-outline-danger py-0 px-2" onclick="return confirm('آیا از حذف این مورد مطمئن هستید؟');">
                                                            <i class="fas fa-trash-alt"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>

                @if (ViewBag.TotalPages > 1)
                {
                    <div class="card-footer bg-light py-2">
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center mb-0 pagination-sm">
                                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                {
                                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                        <a class="page-link" href="@Url.Action("Index", new { page = i, groupId = ViewBag.GroupId })">@i</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/MenuJs.js"></script>
    <script>
        $(document).ready(function () {
            $('[title]').tooltip();
        });
    </script>
}