@using IMS.Application.WarehouseManagement.DTOs
@model List<ProductDto>
@{
    ViewData["Title"] = "مدیریت محصولات";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var statusId =ViewBag.StatusId;
}

<div class="container-fluid py-4">
   
    <div class="row">
        @if (TempData["ErrorMessage"] != null)

        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }
        <div class="col-12">
            <div class="card card-primary border-0 shadow">
                <div class="card-header bg-primary py-3 d-flex justify-content-between align-items-center">
                    <h4 class="mb-0 text-white">
                        <i class="fas fa-boxes me-2"></i>@ViewData["Title"]
                    </h4>
                    <a asp-action="Create" asp-controller="Products" asp-route-statusId="@ViewBag.StatusId" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>  محصول جدید
                    </a>


                </div>

                <div class="card-body">
                    @if (ViewBag.GroupName != null)

                    {
                        <div class="alert alert-info mb-4 d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-filter me-2"></i>
                                فیلتر شده بر اساس گروه: <strong>@ViewBag.GroupName</strong>
                            </div>
                            <a asp-action="Index" class="btn btn-sm btn-outline-info">
                                <i class="fas fa-times me-1"></i> حذف فیلتر
                            </a>
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-hover table-striped table-bordered">
                            <thead class="table-primary">
                                <tr>
                                    <th class="text-center">کد</th>
                                    <th class="text-center">نام محصول</th>
                                    <th class="text-center">دسته‌بندی</th>
                                    <th class="text-center">گروه</th>
                                    <th class="text-center">طبقه</th>
                                    <th class="text-center">توضیحات</th>
                                    <th class="text-center">عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (!Model.Any())

                                {
                                    <tr>
                                        <td colspan="7" class="text-center text-muted py-4">
                                            <i class="fas fa-box-open fa-2x mb-3"></i>
                                            <h5 class="fw-bold">هیچ محصولی ثبت نشده است</h5>
                                            <p class="mb-0">برای افزودن محصول جدید روی دکمه "افزودن محصول جدید" کلیک کنید</p>
                                        </td>
                                    </tr>
                                }

                                else

                                {
                                    @foreach (var item in Model)

                                    {
                                        <tr>
                                            <td class="fw-bold">@item.ProductsFullCode</td>
                                            <td class="text-center" >@item.Name</td>

                                            <td class="text-center">@item.CategoryName </td>
                                            <td class="text-center">@item.GroupName </td>
                                            <td class="text-center">@item.StatusName
                                            </td>
                                            <td class="text-truncate text-center" style="max-width: 200px;" title="@item.Description">
                                                @item.Description
                                            </td>
                                            <td class="text-center">
                                                <div class="d-flex justify-content-center gap-2">
                                                    <a asp-action="Edit"
                                                       asp-controller="Products"
                                                       asp-route-id="@item.Id"
                                                       class="btn btn-sm btn-outline-warning">
                                                        <i class="fas fa-edit me-1"></i> ویرایش
                                                    </a>
                                                    <a asp-action="Details"
                                                       asp-controller="Products"
                                                       asp-route-id="@item.Id"
                                                       class="btn btn-sm btn-outline-info">
                                                        <i class="fas fa-info-circle me-1"></i> جزئیات
                                                    </a>
                                                    <form asp-action="Delete" method="post">
                                                        <input type="hidden" name="id" value="@item.Id" />
                                                        <input type="hidden" name="statusId" value="@ViewBag.StatusId" />
                                                        <button type="submit" class="btn btn-danger">تایید حذف</button>
                                                    </form>

                                                </div>

                                                <!-- Modal for Delete Confirmation -->
                                                <div class="modal fade" id="deleteModal-@item.Id" tabindex="-1" aria-hidden="true">
                                                    <div class="modal-dialog modal-dialog-centered">
                                                        <div class="modal-content">
                                                            <div class="modal-header bg-danger text-white">
                                                                <h5 class="modal-title">
                                                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                                                    تایید حذف محصول
                                                                </h5>
                                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <div class="alert alert-warning">
                                                                    <i class="fas fa-exclamation-circle me-2"></i>
                                                                    آیا از حذف محصول <strong>@item.Name</strong> با کد <strong>@item.Code</strong> مطمئن هستید؟
                                                                </div>
                                                                <p class="text-muted small">این عمل غیرقابل بازگشت است و تمام اطلاعات مرتبط با این محصول نیز حذف خواهند شد.</p>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                                    <i class="fas fa-times me-1"></i> انصراف
                                                                </button>
                                                                <form asp-action="Delete" asp-controller="Products" method="post">
                                                                    <input type="hidden" name="id" value="@item.Id" />
                                                                    <button type="submit" class="btn btn-danger">
                                                                        <i class="fas fa-trash-alt me-1"></i> تایید حذف
                                                                    </button>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                @if (ViewBag.TotalPages > 1)

                {
                    <div class="card-footer bg-light">
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center mb-0">
                                @for (int i = 1; i <= ViewBag.TotalPages; i++)

                                {
                                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                        <a class="page-link" href="@Url.Action("Index", new { page = i, groupId = ViewBag.GroupId })">@i</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


    <style>
        .table {
            font-size: 0.9rem;
        }

            .table th {
                font-weight: 600;
                white-space: nowrap;
                background-color: #f8f9fa;
            }

        .table-hover tbody tr:hover {
            background-color: rgba(13, 110, 253, 0.05);
        }

        .badge {
            padding: 0.5em 0.75em;
            font-weight: 500;
        }

        .modal-header {
            border-bottom: none;
        }

        .modal-footer {
            border-top: none;
            justify-content: flex-start;
        }

        .card-footer {
            border-top: 1px solid rgba(0, 0, 0, 0.05);
        }

        .text-truncate {
            max-width: 200px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>

@section Scripts {
    <script>
        // فعال سازی tooltip برای دکمه‌ها
        $(document).ready(function () {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}