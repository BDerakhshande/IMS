@using IMS.Application.WarehouseManagement.DTOs
@model List<ProductDto>
@{
    ViewData["Title"] = "مدیریت کالا";
    Layout = "~/Areas/WarehouseManagement/Views/Shared/_MyLayout.cshtml";
    var statusId = ViewBag.StatusId;
}
<link rel="stylesheet" href="~/fontawesome/css/all.min.css" />
<link href="~/vazirmatn/webfonts.css" rel="stylesheet" />

<div class="container-fluid py-2" dir="rtl">
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header py-1 d-flex justify-content-between align-items-center" style="background-color: #1a4959; color: white;">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-boxes me-1" style="font-size: 0.85rem;"></i>
                        <h5 class="mb-0 fw-bold" style="font-size: 0.9rem;">@ViewData["Title"]</h5>
                    </div>

                    <div class="d-flex align-items-center gap-1">
                        <div class="search-box" style="width: 180px;">
                            <div class="input-group input-group-sm">
                                <span class="input-group-text bg-white text-secondary p-1">
                                    <i class="fas fa-search" style="font-size: 0.8rem;"></i>
                                </span>
                                <input type="text"
                                       id="globalSearch"
                                       class="form-control form-control-sm p-1"
                                       placeholder="جستجو..."
                                       dir="rtl"
                                       style="height: 20px; font-size: 0.8rem;">
                            </div>
                        </div>

                        <div class="d-flex gap-1">
                            <a asp-controller="Statuses"
                               asp-action="Index"
                               asp-route-status="@ViewBag.StatusId"
                               class="btn btn-sm btn-light d-flex align-items-center py-1 px-2"
                               style="height: 28px; font-size: 0.8rem;">
                                <i class="fas  me-1" style="font-size: 0.8rem;"></i>
                                <span>بازگشت به طبقه</span>
                            </a>
                            <a asp-action="Create"
                               asp-controller="Products"
                               asp-route-statusId="@ViewBag.StatusId"
                               class="btn btn-sm btn-light d-flex align-items-center py-1 px-2"
                               style="height: 28px; font-size: 0.8rem;">
                                <i class="fas fa-plus me-1" style="font-size: 0.8rem;"></i>
                                <span>محصول جدید</span>
                            </a>
                        </div>
                    </div>
                </div>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show mx-2 my-1 py-1" role="alert" style="font-size: 0.8rem;">
                        <i class="fas fa-check-circle me-1" style="font-size: 0.85rem;"></i>
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close p-1" data-bs-dismiss="alert" aria-label="Close" style="font-size: 0.7rem;"></button>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show mx-2 my-1 py-1" role="alert" style="font-size: 0.8rem;">
                        <i class="fas fa-exclamation-circle me-1" style="font-size: 0.85rem;"></i>
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close p-1" data-bs-dismiss="alert" aria-label="Close" style="font-size: 0.7rem;"></button>
                    </div>
                }

                <div class="card-body p-1">
                    @if (ViewBag.GroupName != null)
                    {
                        <div class="alert alert-info alert-dismissible fade show mx-2 my-1 py-1 d-flex justify-content-between align-items-center" role="alert" style="font-size: 0.8rem;">
                            <div>
                                <i class="fas fa-filter me-1" style="font-size: 0.85rem;"></i>
                                فیلتر شده بر اساس گروه: <strong>@ViewBag.GroupName</strong>
                            </div>
                            <a asp-action="Index" class="btn btn-sm btn-outline-info py-0 px-2" style="font-size: 0.75rem;">
                                <i class="fas fa-times me-1"></i> حذف فیلتر
                            </a>
                        </div>
                    }

                    @if (!Model.Any())
                    {
                        <div class="alert alert-info alert-dismissible fade show mx-2 my-1 py-1 text-center" role="alert" style="font-size: 0.8rem;">
                            <i class="fas fa-box-open me-1" style="font-size: 0.85rem;"></i>
                            هیچ محصولی ثبت نشده است
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-sm mb-0">
                                <thead style="background-color: #f8f9fa; font-size: 0.82rem;">
                                    <tr>
                                        <th class="text-center py-1">کد محصول</th>
                                        <th class="text-center py-1">دسته‌بندی</th>
                                        <th class="text-center py-1">گروه</th>
                                        <th class="text-center py-1">طبقه</th>
                                        <th class="text-center py-1">نام محصول</th>
                                        <th class="text-center py-1">توضیحات</th>
                                   
                                        <th class="text-center py-1">عملیات</th>
                                    </tr>
                                </thead>
                                <tbody style="font-size: 0.8rem;">
                                    @foreach (var item in Model)
                                    {
                                        <tr data-product-item-url="@Url.Action("Index", "ProductItems", new { productId = item.Id })"
                                            style="cursor: pointer; height: 32px;">


                                            <td class="text-center fw-bold py-1 align-middle">@item.ProductsFullCode</td>
                                            <td class="text-center py-1 align-middle">@item.CategoryName</td>
                                            <td class="text-center py-1 align-middle">@item.GroupName</td>
                                            <td class="text-center py-1 align-middle">@item.StatusName</td>
                                            <td class="text-center py-1 align-middle">@item.Name</td>
                                            <td class="text-truncate text-center py-1 align-middle" style="max-width: 200px;" title="@item.Description">
                                                @item.Description
                                            </td>
                                         


                                            <td class="text-center py-1 align-middle">
                                                <div class="d-flex justify-content-center gap-1">
                                                    <a asp-action="Edit"
                                                       asp-controller="Products"
                                                       asp-route-id="@item.Id"
                                                       class="btn btn-sm btn-outline-warning px-1"
                                                       style="font-size: 0.75rem; min-width: 26px; height: 26px;">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Details"
                                                       asp-controller="Products"
                                                       asp-route-id="@item.Id"
                                                       class="btn btn-sm btn-outline-info px-1"
                                                       style="font-size: 0.75rem; min-width: 26px; height: 26px;">
                                                        <i class="fas fa-info-circle"></i>
                                                    </a>
                                                    <form asp-action="Delete" method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@item.Id" />
                                                        <input type="hidden" name="statusId" value="@ViewBag.StatusId" />
                                                        <button type="submit"
                                                                class="btn btn-sm btn-outline-danger px-1"
                                                                style="font-size: 0.75rem; min-width: 26px; height: 26px;"
                                                                onclick="return confirm('آیا از حذف این مورد مطمئن هستید؟');">
                                                            <i class="fas fa-trash-alt"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>

                <div class="d-flex justify-content-center mt-2">
                    <nav>
                        <ul class="pagination pagination-sm mb-0" id="paginationContainer"></ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/MenuJs.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const rowsPerPage = 10;
            const table = document.querySelector('table');
            const tbody = table.querySelector('tbody');
            const allRows = Array.from(tbody.querySelectorAll('tr'));
            let filteredRows = [...allRows];
            let currentPage = 1;

            const noResultsRow = document.createElement('tr');
            noResultsRow.classList.add('no-results');
            noResultsRow.innerHTML = '<td colspan="8" class="text-center py-2 text-muted" style="font-size: 0.8rem;">نتیجه‌ای یافت نشد</td>';

            const globalSearch = document.getElementById('globalSearch');

            // ذخیره متن اصلی سلول‌ها (به جز ستون 7 و 8)
            allRows.forEach(row => {
                const cells = row.querySelectorAll('td');
                cells.forEach((cell, index) => {
                    if (index === 6 || index === 7) return; // ستون کالا یکتا و عملیات را ذخیره نکن
                    cell.dataset.originalText = cell.textContent;
                });
            });

            function updateTableDisplay() {
                const start = (currentPage - 1) * rowsPerPage;
                const end = start + rowsPerPage;

                allRows.forEach(row => row.style.display = 'none');
                filteredRows.slice(start, end).forEach(row => row.style.display = '');

                if (filteredRows.length === 0) {
                    if (!tbody.contains(noResultsRow)) tbody.appendChild(noResultsRow);
                } else if (tbody.contains(noResultsRow)) {
                    noResultsRow.remove();
                }

                updatePaginationControls();
                highlightSearchTerm();
            }

            function updatePaginationControls() {
                const pageCount = Math.ceil(filteredRows.length / rowsPerPage);
                const paginationContainer = document.getElementById('paginationContainer');
                paginationContainer.innerHTML = '';

                for (let i = 1; i <= pageCount; i++) {
                    const li = document.createElement('li');
                    li.className = `page-item ${i === currentPage ? 'active' : ''}`;
                    li.innerHTML = `<a class="page-link" href="#">${i}</a>`;
                    li.addEventListener('click', e => {
                        e.preventDefault();
                        currentPage = i;
                        updateTableDisplay();
                    });
                    paginationContainer.appendChild(li);
                }
            }

            function highlightSearchTerm() {
                if (!globalSearch) return;
                const term = globalSearch.value.trim().toLowerCase();

                filteredRows.forEach(row => {
                    const cells = row.querySelectorAll('td');
                    cells.forEach((cell, index) => {
                        if (index === 6 || index === 7) return; // ستون badge و عملیات را تغییر نده
                        const originalText = cell.dataset.originalText || cell.textContent;
                        if (term.length === 0) {
                            cell.innerHTML = originalText;
                        } else {
                            const highlighted = originalText.replace(
                                new RegExp(term, 'gi'),
                                match => `<span class="bg-warning text-dark">${match}</span>`
                            );
                            cell.innerHTML = highlighted;
                        }
                    });
                });
            }

            if (globalSearch) {
                globalSearch.addEventListener('input', function () {
                    const term = this.value.trim().toLowerCase();
                    currentPage = 1;

                    filteredRows = allRows.filter(row => {
                        const cells = row.querySelectorAll('td');
                        return Array.from(cells).some((cell, index) => {
                            if (index === 6 || index === 7) return false; // badge و عملیات را چک نکن
                            return cell.dataset.originalText.toLowerCase().includes(term);
                        });
                    });

                    updateTableDisplay();
                });
            }

            // کلیک روی ردیف
               document.addEventListener('click', function (e) {
            const row = e.target.closest('tbody tr[data-product-item-url]');
            if (!row || e.target.closest('a, button, input, .btn, form')) return;

            const productItemUrl = row.dataset.productItemUrl;
            if (productItemUrl) window.location.href = productItemUrl;
        });


            // مقداردهی اولیه
            updateTableDisplay();
        });
    </script>
}
