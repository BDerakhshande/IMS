@using IMS.Application.WarehouseManagement.DTOs
@model ProductDto
@{
    ViewData["Title"] = "ویرایش کالا";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var statusId = ViewBag.StatusId;
}

<div class="header-sidebar-wrapper" dir="rtl">
    <div class="container-fluid py-3">
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow" style="box-shadow: var(--card-shadow); background-color: white;">
                    <div class="card-header py-2 d-flex justify-content-between align-items-center" style="background-color: var(--primary-color); border-bottom: 1px solid var(--border-color);">
                        <h5 class="mb-0 text-white">
                            <i class="fas fa-box me-2"></i> @ViewData["Title"]
                        </h5>
                        <a asp-action="Index" asp-route-statusId="@ViewBag.StatusId" class="btn btn-light btn-sm">
                            <i class="fas fa-arrow-right me-1"></i> بازگشت به لیست
                        </a>
                    </div>

                    <div class="card-body" style="background-color: white;">
                        <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger small"></div>
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="StatusId" />

                            <div class="row g-2">
                                <div class="col-md-6">
                                    <label asp-for="Code" class="form-label fw-bold text-dark small">
                                        <i class="fas fa-barcode me-1 text-muted"></i> کد کالا
                                    </label>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text bg-light"><i class="fas fa-hashtag text-primary"></i></span>
                                        <input asp-for="Code" class="form-control" placeholder="کد کالا را وارد کنید" />
                                    </div>
                                    <span asp-validation-for="Code" class="text-danger small mt-1 d-block"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Name" class="form-label fw-bold text-dark small">
                                        <i class="fas fa-tag me-1 text-muted"></i> نام کالا
                                    </label>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text bg-light"><i class="fas fa-font text-primary"></i></span>
                                        <input asp-for="Name" class="form-control" placeholder="نام کامل کالا را وارد کنید" />
                                    </div>
                                    <span asp-validation-for="Name" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>

                            <div class="row g-2 mt-2">
                                <div class="col-md-6">
                                    <label asp-for="Price" class="form-label fw-bold text-dark small">
                                        <i class="fas fa-money-bill-wave me-1 text-muted"></i> قیمت (ریال)
                                    </label>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text bg-light"><i class="fas fa-dollar-sign text-primary"></i></span>
                                        <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="قیمت به ریال" />
                                        <span class="input-group-text bg-light">ریال</span>
                                    </div>
                                    <span asp-validation-for="Price" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>

                            <div class="form-group mt-3">
                                <label asp-for="Description" class="form-label fw-bold text-dark small">
                                    <i class="fas fa-align-left me-1 text-muted"></i> توضیحات
                                </label>
                                <div class="input-group input-group-sm">
                                    <span class="input-group-text bg-light"><i class="fas fa-comment text-primary"></i></span>
                                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="توضیحات تکمیلی درباره کالا"></textarea>
                                </div>
                                <span asp-validation-for="Description" class="text-danger small mt-1 d-block"></span>
                            </div>

                            <div class="form-footer border-top pt-3 mt-3 d-flex gap-2" style="border-top-color: #dee2e6 !important;">
                                <button type="submit" class="btn btn-primary px-4" style="background-color: var(--accent-color); border-color: var(--accent-color); font-size: 0.875rem;">
                                    <i class="fas fa-save me-2"></i> ذخیره تغییرات
                                </button>
                                <a asp-action="Index" asp-route-statusId="@ViewBag.StatusId" class="btn btn-outline-secondary" style="color: #6c757d; border-color: #6c757d; font-size: 0.875rem;">
                                    <i class="fas fa-times me-2"></i> انصراف
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // فعال سازی اعتبارسنجی فرم
        (function () {
            'use strict'

            var forms = document.querySelectorAll('.needs-validation')

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}