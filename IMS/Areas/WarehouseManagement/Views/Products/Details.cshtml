@model IMS.Application.WarehouseManagement.DTOs.ProductDto
@{
    ViewData["Title"] = "جزئیات محصول";
    Layout = "~/Areas/WarehouseManagement/Views/Shared/_MyLayout.cshtml";
    var statusId = ViewBag.StatusId;
}

<link rel="stylesheet" href="~/fontawesome/css/all.min.css" />
<link href="~/vazirmatn/webfonts.css" rel="stylesheet" />

<div class="container-fluid py-3" dir="rtl">
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow" style="box-shadow: 0 4px 8px rgba(13, 110, 253, 0.1);">
                <div class="card-header py-2 d-flex justify-content-between align-items-center"
                     style="background-color: #1a4959; color: white;">
                    <h5 class="mb-0 text-white">
                        <i class="fas fa-box me-2"></i> @ViewData["Title"]
                    </h5>
                    <a asp-route-statusId="@ViewBag.StatusId" asp-action="Index" class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-right me-1"></i> بازگشت به لیست
                    </a>
                </div>

                <div class="card-body p-3">
                    <div class="row g-3 mb-3">
                        <!-- کد کالا -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label fw-bold mb-1 small">
                                    <i class="fas fa-barcode me-1 text-muted"></i> کد کالا
                                </label>
                                <div class="input-group input-group-sm bg-light rounded p-2">
                                    @Model.Code
                                </div>
                            </div>
                        </div>

                        <!-- نام کالا -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label fw-bold mb-1 small">
                                    <i class="fas fa-tag me-1 text-muted"></i> نام کالا
                                </label>
                                <div class="input-group input-group-sm bg-light rounded p-2">
                                    @Model.Name
                                </div>
                            </div>
                        </div>

                        <!-- قیمت کالا -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label fw-bold mb-1 small">
                                    <i class="fas fa-money-bill-wave me-1 text-muted"></i> قیمت
                                </label>
                                <div class="input-group input-group-sm bg-light rounded p-2">
                                    @Model.Price.ToString("N0") تومان
                                </div>
                            </div>
                        </div>

                        <!-- وضعیت کالا -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label fw-bold mb-1 small">
                                    <i class="fas fa-info-circle me-1 text-muted"></i> وضعیت
                                </label>
                                <div class="input-group input-group-sm bg-light rounded p-2">
                                    @ViewBag.StatusName
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- توضیحات -->
                    <div class="form-group mb-3">
                        <label class="form-label fw-bold mb-1 small">
                            <i class="fas fa-align-left me-1 text-muted"></i> توضیحات
                        </label>
                        <div class="input-group input-group-sm bg-light rounded p-2" style="min-height: 80px;">
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                @Model.Description
                            }
                            else
                            {
                                <span class="text-muted small">توضیحاتی ثبت نشده است</span>
                            }
                        </div>
                    </div>

                    <div class="border-top pt-3 mt-3 d-flex justify-content-end">
                        <a asp-action="Index" asp-route-statusId="@ViewBag.StatusId" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-arrow-right me-1"></i> بازگشت
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/js/MenuJs.js"></script>