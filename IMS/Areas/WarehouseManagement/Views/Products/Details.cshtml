@model IMS.Application.WarehouseManagement.DTOs.ProductDto
@{
    ViewData["Title"] = "جزئیات محصول";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var statusId = ViewBag.StatusId;

}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card card-primary border-0 shadow">
                <div class="card-header bg-primary py-3 d-flex justify-content-between align-items-center">
                    <h4 class="mb-0 text-white">
                        <i class="fas fa-box me-2"></i>@ViewData["Title"]
                    </h4>
                    <a asp-route-statusId="@ViewBag.StatusId" asp-action="Index"  class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-right me-1"></i> بازگشت به لیست
                    </a>
                </div>
                
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="detail-item mb-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-barcode me-1 text-muted"></i> کد کالا
                                </label>
                                <div class="detail-value bg-light p-3 rounded">
                                    @Model.Code
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="detail-item mb-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-tag me-1 text-muted"></i> نام کالا
                                </label>
                                <div class="detail-value bg-light p-3 rounded">
                                    @Model.Name
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="detail-item mb-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-money-bill-wave me-1 text-muted"></i> قیمت
                                </label>
                                <div class="detail-value bg-light p-3 rounded">
                                    @Model.Price.ToString("N0") تومان
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="detail-item mb-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-info-circle me-1 text-muted"></i> وضعیت
                                </label>
                                <div class="detail-value bg-light p-3 rounded">
                                    @ViewBag.StatusName
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="detail-item mb-4">
                        <label class="form-label fw-bold">
                            <i class="fas fa-align-left me-1 text-muted"></i> توضیحات
                        </label>
                        <div class="detail-value bg-light p-3 rounded" style="min-height: 100px">
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                @Model.Description
                            }
                            else
                            {
                                <span class="text-muted">توضیحاتی ثبت نشده است</span>
                            }
                        </div>
                    </div>

                    <div class="form-footer border-top pt-4 mt-3">
                        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary px-5">
                            <i class="fas fa-edit me-2"></i> ویرایش
                        </a>
                        <a asp-action="Index" asp-route-statusId="@ViewBag.StatusId" class="btn btn-outline-secondary me-2">
                            <i class="fas fa-arrow-right me-2"></i> بازگشت
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


    <style>
        .detail-item {
            margin-bottom: 1.5rem;
        }
        
        .detail-value {
            background-color: #f8f9fa;
            padding: 0.75rem 1rem;
            border-radius: 0.5rem;
            font-size: 1rem;
            min-height: 50px;
            display: flex;
            align-items: center;
        }
        
        .form-footer {
            display: flex;
            justify-content: flex-start;
            gap: 1rem;
        }
        
        .card {
            border-radius: 0.75rem;
            overflow: hidden;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        }
        
        .card-header {
            border-bottom: none;
            padding: 1.25rem 1.5rem;
        }
        
        .form-label {
            margin-bottom: 0.5rem;
            color: #495057;
            font-weight: 600;
        }
        
        .btn-primary {
            background-color: #4e73df;
            border-color: #4e73df;
        }
        
        .btn-primary:hover {
            background-color: #3a5ec4;
            border-color: #3a5ec4;
        }
        
        .btn-outline-secondary {
            color: #6c757d;
            border-color: #6c757d;
        }
        
        .btn-outline-secondary:hover {
            background-color: #6c757d;
            color: white;
        }
    </style>
