@using IMS.Domain.WarehouseManagement.Enums
@using System.ComponentModel.DataAnnotations
@using System.Reflection
@model IMS.Application.WarehouseManagement.DTOs.ProductItemDto
@{
    ViewData["Title"] = "ویرایش آیتم محصول";
    Layout = "~/Areas/WarehouseManagement/Views/Shared/_MyLayout.cshtml";
}

<link rel="stylesheet" href="~/fontawesome/css/all.min.css" />
<link href="~/vazirmatn/webfonts.css" rel="stylesheet" />

<div class="container-fluid py-3" dir="rtl">
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow" style="box-shadow: 0 4px 8px rgba(13, 110, 253, 0.1);">
                <div class="card-header py-2 d-flex justify-content-between align-items-center"
                     style="background-color: #1a4959; color: white;">
                    <h5 class="mb-0 text-white">
                        <i class="fas fa-edit me-2"></i> @ViewData["Title"]
                    </h5>
                    <a asp-action="Index" asp-route-productId="@Model.ProductId" class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-right me-1"></i> بازگشت به لیست
                    </a>
                </div>

                <div class="card-body p-3">
                    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger small"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ProductId" />

                        <div class="row g-3 mb-3">
                            <!-- کد یکتا -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Sequence" class="form-label fw-bold mb-1 small">
                                        <i class="fas fa-hashtag me-1 text-muted"></i> کد یکتا
                                    </label>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text bg-light"><i class="fas fa-barcode small"></i></span>
                                        <input asp-for="Sequence" type="number" class="form-control form-control-sm"
                                               placeholder="کد یکتا به صورت خودکار تعیین می‌شود" readonly />
                                    </div>
                                    <span asp-validation-for="Sequence" class="text-danger small mt-1 d-block"></span>
                                    <small class="form-text text-muted small mt-1 d-block">
                                        <i class="fas fa-info-circle me-1"></i> شماره محصول به صورت خودکار تعیین شده است.
                                    </small>
                                </div>
                            </div>

                            <!-- پروژه -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ProjectId" class="form-label fw-bold mb-1 small">
                                        <i class="fas fa-project-diagram me-1 text-muted"></i> پروژه
                                    </label>
                                    <select asp-for="ProjectId" class="form-select form-select-sm" asp-items="ViewBag.Projects">
                                        <option value="">-- انتخاب پروژه --</option>
                                    </select>
                                    <span asp-validation-for="ProjectId" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>

                            <!-- وضعیت -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ItemStatus" class="form-label fw-bold mb-1 small">
                                        <i class="fas fa-info-circle me-1 text-muted"></i> وضعیت
                                    </label>
                                    <select asp-for="ItemStatus" class="form-select form-select-sm" required>
                                        <option value="">-- انتخاب وضعیت --</option>
                                        @foreach (ProductItemStatus status in Enum.GetValues(typeof(ProductItemStatus)))
                                        {
                                            var displayAttr = status.GetType()
                                            .GetMember(status.ToString())
                                            .First()
                                            .GetCustomAttribute<DisplayAttribute>();
                                            var displayName = displayAttr?.Name ?? status.ToString();
                                            <option value="@status" selected="@(Model.ItemStatus == status ? "selected" : null)">@displayName</option>
                                        }
                                    </select>
                                    <span asp-validation-for="ItemStatus" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>
                        </div>

                        <div class="border-top pt-3 mt-3 d-flex justify-content-end gap-2">
                            <button type="submit" class="btn btn-primary btn-sm px-3">
                                <i class="fas fa-save me-1"></i> ذخیره تغییرات
                            </button>
                            <a asp-action="Index" asp-route-productId="@Model.ProductId" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-times me-1"></i> انصراف
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/MenuJs.js"></script>
    <script>
        // فعال سازی اعتبارسنجی فرم
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })();

        // اعتبارسنجی real-time
        document.addEventListener('DOMContentLoaded', function () {
            const inputs = document.querySelectorAll('input, select, textarea');

            inputs.forEach(input => {
                input.addEventListener('blur', function () {
                    this.checkValidity();
                });

                input.addEventListener('input', function () {
                    if (this.classList.contains('is-invalid')) {
                        this.classList.remove('is-invalid');
                    }
                });
            });
        });
    </script>
}