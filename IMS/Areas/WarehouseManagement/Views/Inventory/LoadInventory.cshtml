@model IMS.Application.WarehouseManagement.DTOs.InventoryCreateDto
@{
    ViewData["Title"] = "مدیریت موجودی کالا";
    Layout = "~/Areas/WarehouseManagement/Views/Shared/_MyLayout.cshtml";
}
<style>
    .form-group {
        margin-bottom: 0.5rem;
    }
    /* انتقال فلش به سمت چپ برای حالت RTL */
    .form-select {
        background-position: left 0.5rem center !important;
        padding-right: 0.5rem !important;
        padding-left: 1.5rem !important;
    }

    .form-control-sm, .form-select-sm {
        font-size: 0.8rem;
        padding: 0.25rem 0.5rem;
    }

    .input-group-sm > .form-control,
    .input-group-sm > .form-select {
        font-size: 0.8rem;
    }
    /* استایل برای Select2 در حالت RTL */
    .select2-container {
        width: 100% !important;
        direction: rtl;
    }

    .select2-container--default .select2-selection--single {
        height: 28px !important;
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
        padding: 0.25rem 0.5rem;
        font-size: 0.8rem;
    }

        .select2-container--default .select2-selection--single .select2-selection__rendered {
            line-height: 20px;
        }

        .select2-container--default .select2-selection--single .select2-selection__arrow {
            left: 10px !important;
            right: auto !important;
            top: 50% !important;
            transform: translateY(-50%);
        }

    .select2-container--default .select2-search--dropdown .select2-search__field {
        font-size: 0.8rem;
        direction: rtl;
    }

    .select2-dropdown {
        direction: rtl;
        font-size: 0.8rem;
    }
</style>
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<div class="container-fluid py-2" dir="rtl">
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header py-1 d-flex justify-content-between align-items-center" style="background-color: #1a4959; color: white;">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-boxes me-1" style="font-size: 0.85rem;"></i>
                        <h5 class="mb-0 fw-bold" style="font-size: 0.9rem;">@ViewData["Title"]</h5>
                    </div>
                </div>

                <form asp-action="LoadInventory" method="post" class="needs-validation" novalidate>
                    @Html.AntiForgeryToken()

                    <div class="card-body p-1">
                        <!-- Section 1: اطلاعات محل نگهداری -->
                        <div class="card mb-3 border-0 shadow-sm">
                            <div class="card-header py-1 d-flex align-items-center" style="background-color: #f8f9fa;">
                                <i class="fas fa-warehouse me-1" style="font-size: 0.85rem;"></i>
                                <h6 class="mb-0 fw-bold" style="font-size: 0.85rem;">اطلاعات محل نگهداری</h6>
                            </div>
                            <div class="card-body p-2">
                                <div class="row g-2">
                                    <div class="col-md-4">
                                        <div class="form-group mb-2">
                                            <label asp-for="WarehouseId" class="form-label small">انبار</label>
                                            <select asp-for="WarehouseId" class="form-select form-select-sm select2-dropdown" asp-items="Model.Warehouses" id="WarehouseId">
                                                <option value="">-- انتخاب کنید --</option>
                                            </select>
                                        </div>
                                    </div>
                                    <!-- ناحیه -->
                                    <div class="col-md-4">
                                        <div class="form-group mb-2">
                                            <label asp-for="ZoneId" class="form-label small">ناحیه</label>
                                            <select asp-for="ZoneId" class="form-select form-select-sm select2-dropdown" asp-items="Model.Zones" id="ZoneId">
                                                <option value="">-- انتخاب کنید --</option>
                                            </select>
                                        </div>
                                    </div>
                                    <!-- بخش -->
                                    <div class="col-md-4">
                                        <div class="form-group mb-2">
                                            <label asp-for="SectionId" class="form-label small">بخش</label>
                                            <select asp-for="SectionId" class="form-select form-select-sm select2-dropdown" asp-items="Model.Sections" id="SectionId">
                                                <option value="">-- انتخاب کنید --</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Section 2: اطلاعات کالا -->
                        <div class="card mb-3 border-0 shadow-sm">
                            <div class="card-header py-1 d-flex align-items-center" style="background-color: #f8f9fa;">
                                <i class="fas fa-box me-1" style="font-size: 0.85rem;"></i>
                                <h6 class="mb-0 fw-bold" style="font-size: 0.85rem;">اطلاعات کالا</h6>
                            </div>
                            <div class="card-body p-2">
                                <div class="row g-2">
                                    <!-- دسته‌بندی -->
                                    <div class="col-md-3">
                                        <div class="form-group mb-2">
                                            <label asp-for="CategoryId" class="form-label small">دسته‌بندی</label>
                                            <select asp-for="CategoryId" class="form-select form-select-sm select2-dropdown" asp-items="Model.Categories" id="CategoryId">
                                                <option value="">-- انتخاب کنید --</option>
                                            </select>
                                        </div>
                                    </div>
                                    <!-- گروه -->
                                    <div class="col-md-3">
                                        <div class="form-group mb-2">
                                            <label asp-for="GroupId" class="form-label small">گروه</label>
                                            <select asp-for="GroupId" class="form-select form-select-sm select2-dropdown" asp-items="Model.Groups" id="GroupId">
                                                <option value="">-- انتخاب کنید --</option>
                                            </select>
                                        </div>
                                    </div>
                                    <!-- وضعیت -->
                                    <div class="col-md-3">
                                        <div class="form-group mb-2">
                                            <label asp-for="StatusId" class="form-label small">وضعیت</label>
                                            <select asp-for="StatusId" class="form-select form-select-sm select2-dropdown" asp-items="Model.Statuses" id="StatusId">
                                                <option value="">-- انتخاب کنید --</option>
                                            </select>
                                        </div>
                                    </div>
                                    <!-- کالا -->
                                    <div class="col-md-3">
                                        <div class="form-group mb-2">
                                            <label asp-for="ProductId" class="form-label small">کالا</label>
                                            <select asp-for="ProductId" class="form-select form-select-sm select2-dropdown" asp-items="Model.Products" id="ProductId">
                                                <option value="">-- انتخاب کنید --</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- بخش نمایش و مدیریت موجودی -->
                        <div class="card border-0 shadow-sm mb-3">
                            <div class="card-header py-1 d-flex align-items-center" style="background-color: #f8f9fa;">
                                <i class="fas fa-box-open me-1" style="font-size: 0.85rem;"></i>
                                <h6 class="mb-0 fw-bold" style="font-size: 0.85rem;">مدیریت موجودی انبار</h6>
                            </div>
                            <div class="card-body p-2">
                                <div class="row align-items-center g-2">
                                    <!-- نمایش موجودی فعلی -->
                                    <div class="col-md-4">
                                        <div class="form-group mb-2">
                                            <label class="form-label small">موجودی فعلی</label>
                                            <div class="input-group input-group-sm">
                                                <span class="input-group-text bg-light"><i class="fas fa-cubes text-muted"></i></span>
                                                <input asp-for="Quantity" class="form-control" readonly style="background-color: #f8f9fa;" id="Quantity">
                                                <span class="input-group-text bg-light">عدد</span>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- دکمه‌های عملیاتی -->
                                    <div class="col-md-8">
                                        <div class="d-flex justify-content-end gap-1 mt-3">
                                            <a asp-area="WarehouseManagement" asp-controller="WarehouseManagementHome" asp-action="Index" class="btn btn-sm btn-outline-secondary d-flex align-items-center py-1 px-2" style="height: 28px; font-size: 0.8rem;">
                                                <i class="fas fa-arrow-right me-1" style="font-size: 0.8rem;"></i>
                                                <span>بازگشت</span>
                                            </a>
                                            <button type="button" id="btnLoadInventory" class="btn btn-sm btn-primary d-flex align-items-center py-1 px-2" style="height: 28px; font-size: 0.8rem;">
                                                <span class="spinner-border spinner-border-sm me-1 d-none" id="loadingSpinner" role="status" aria-hidden="true"></span>
                                                <i class="fas fa-search me-1 d-inline" id="searchIcon" style="font-size: 0.8rem;"></i>
                                                <span>دریافت موجودی</span>
                                            </button>
                                            <button type="button" id="btnEditInventory" class="btn btn-sm btn-warning d-flex align-items-center py-1 px-2" disabled style="height: 28px; font-size: 0.8rem;">
                                                <i class="fas fa-edit me-1" style="font-size: 0.8rem;"></i>
                                                <span>ویرایش</span>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <!-- فرم ویرایش موجودی (مخفی شده) -->
                                <div id="editForm" class="mt-3 pt-3 border-top" style="display: none;">
                                    <div class="row g-3 align-items-end">
                                        <!-- فیلد مقدار جدید -->
                                        <div class="col-md-5 col-lg-4">
                                            <div class="form-group mb-0">
                                                <label for="newQuantity" class="form-label small fw-semibold text-muted mb-1">مقدار جدید موجودی</label>
                                                <div class="input-group input-group-sm">
                                                    <input type="number" class="form-control form-control-sm border-secondary" id="newQuantity" min="0" step="1" aria-label="مقدار جدید موجودی">
                                                    <span class="input-group-text bg-light">عدد</span>
                                                </div>
                                                <div class="form-text small text-muted mt-1">مقدار باید عددی و غیرمنفی باشد</div>
                                            </div>
                                        </div>
                                        <!-- دکمه‌های عملیات -->
                                        <div class="col-md-7 col-lg-5">
                                            <div class="d-flex align-items-center gap-2">
                                                <button type="button" id="btnSaveEdit" class="btn btn-sm btn-success d-flex align-items-center justify-content-center" style="min-width: 90px; height: 32px;">
                                                    <span class="d-flex align-items-center">
                                                        <i class="fas fa-check-circle me-1" style="font-size: 0.75rem;"></i>
                                                        <span style="font-size: 0.8rem;">ذخیره تغییرات</span>
                                                    </span>
                                                </button>
                                                <button type="button" id="btnCancelEdit" class="btn btn-sm btn-outline-secondary d-flex align-items-center justify-content-center" style="min-width: 80px; height: 32px;">
                                                    <span class="d-flex align-items-center">
                                                        <i class="fas fa-ban me-1" style="font-size: 0.75rem;"></i>
                                                        <span style="font-size: 0.8rem;">انصراف</span>
                                                    </span>
                                                </button>
                                            </div>
                                        </div>
                                        <!-- پیام وضعیت (اختیاری) -->
                                        <div class="col-12">
                                            <div id="editStatusMessage" class="small mt-1" style="display: none;"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer bg-light py-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="text-muted small" style="font-size: 0.8rem;">
                                <i class="fas fa-info-circle me-1" style="font-size: 0.85rem;"></i>
                                لطفا اطلاعات مورد نیاز را وارد نمایید
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal برای تأیید تغییرات -->
<div class="modal fade" id="confirmEditModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">تأیید تغییر موجودی</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>آیا از تغییر موجودی از <span id="currentQtyDisplay" class="fw-bold"></span> به <span id="newQtyDisplay" class="fw-bold"></span> اطمینان دارید؟</p>
                <p class="mb-0">علت: <span id="reasonDisplay" class="fst-italic text-muted"></span></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">انصراف</button>
                <button type="button" id="btnConfirmEdit" class="btn btn-primary">تأیید تغییر</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/js/MenuJs.js"></script>
    <script>
        $(function () {
            // تنظیمات اولیه Select2 برای همه دراپ‌داون‌ها
            $('.select2-dropdown').select2({
                dir: 'rtl', // پشتیبانی از راست به چپ
                placeholder: '-- انتخاب کنید --',
                allowClear: true,
                minimumResultsForSearch: 2, // حداقل تعداد کاراکتر برای نمایش جستجو
                language: {
                    noResults: function () {
                        return 'نتیجه‌ای یافت نشد';
                    },
                    searching: function () {
                        return 'در حال جستجو...';
                    }
                }
            });

            // توابع کمکی
            function populateDropdown(selector, data, defaultText) {
                var dropdown = $(selector);
                dropdown.empty();
                dropdown.append($('<option>').text(defaultText).attr('value', ''));

                if (Array.isArray(data)) {
                    data.forEach(function (item) {
                        dropdown.append($('<option>').text(item.text).attr('value', item.value));
                    });
                    console.log(`Dropdown ${selector} populated with ${data.length} items`);
                    // بازنویسی Select2 پس از پر کردن دراپ‌داون
                    dropdown.trigger('change');
                } else {
                    console.warn(`Data for ${selector} is not an array`, data);
                }
            }

            // بارگذاری دراپ‌داون‌ها
            $('#CategoryId').change(function () {
                var catId = $(this).val();
                console.log('CategoryId changed:', catId);

                $.get('/WarehouseManagement/Inventory/GetGroups', { categoryId: catId }, function (data) {
                    console.log('Data received from GetGroups:', data);
                    populateDropdown('#GroupId', data, '-- انتخاب گروه --');
                    $('#StatusId, #ProductId').empty().append('<option>-- انتخاب --</option>').trigger('change');
                    console.log('StatusId and ProductId dropdowns reset.');
                }).fail(function (xhr, status, error) {
                    console.error('Error in GetGroups:', status, error);
                });
            });

            $('#GroupId').change(function () {
                var groupId = $(this).val();
                console.log('GroupId changed:', groupId);

                $.get('/WarehouseManagement/Inventory/GetStatuses', { groupId: groupId }, function (data) {
                    console.log('Data received from GetStatuses:', data);
                    populateDropdown('#StatusId', data, '-- انتخاب وضعیت --');
                    $('#ProductId').empty().append('<option>-- انتخاب کالا --</option>').trigger('change');
                    console.log('ProductId dropdown reset.');
                }).fail(function (xhr, status, error) {
                    console.error('Error in GetStatuses:', status, error);
                });
            });

            $('#StatusId').change(function () {
                var statusId = $(this).val();
                console.log('StatusId changed:', statusId);

                $.get('/WarehouseManagement/Inventory/GetProducts', { statusId: statusId }, function (data) {
                    console.log('Data received from GetProducts:', data);
                    populateDropdown('#ProductId', data, '-- انتخاب کالا --');
                }).fail(function (xhr, status, error) {
                    console.error('Error in GetProducts:', status, error);
                });
            });

            $('#WarehouseId').change(function () {
                var warehouseId = $(this).val();
                $.get('/WarehouseManagement/Inventory/GetZones', { warehouseId: warehouseId }, function (data) {
                    populateDropdown('#ZoneId', data, '-- انتخاب ناحیه --');
                    $('#SectionId').empty().append('<option>-- انتخاب بخش --</option>').trigger('change');
                });
            });

            $('#ZoneId').change(function () {
                var zoneId = $(this).val();
                $.get('/WarehouseManagement/Inventory/GetSections', { zoneId: zoneId }, function (data) {
                    populateDropdown('#SectionId', data, '-- انتخاب بخش --');
                });
            });

            // ---------- مدیریت دکمه دریافت موجودی ----------
            $('#btnLoadInventory').click(function () {
                var data = {
                    WarehouseId: $('#WarehouseId').val(),
                    ZoneId: $('#ZoneId').val(),
                    SectionId: $('#SectionId').val(),
                    CategoryId: $('#CategoryId').val(),
                    GroupId: $('#GroupId').val(),
                    StatusId: $('#StatusId').val(),
                    ProductId: $('#ProductId').val(),
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                };

                if (!data.WarehouseId || !data.ProductId) {
                    alert('لطفاً ابتدا انبار و کالا را انتخاب کنید.');
                    return;
                }

                $('#loadingSpinner').removeClass('d-none');
                $('#searchIcon').addClass('d-none');
                $('#btnLoadInventory').prop('disabled', true);

                $.ajax({
                    url: '@Url.Action("LoadInventory", "Inventory", new { area = "WarehouseManagement" })',
                    type: 'POST',
                    data: data,
                    success: function (result) {
                        if (result && result.quantity !== undefined) {
                            $('#Quantity').val(result.quantity);
                            $('#btnEditInventory').prop('disabled', false);
                        } else {
                            alert('موجودی یافت نشد.');
                            $('#Quantity').val('');
                            $('#btnEditInventory').prop('disabled', true);
                        }
                    },
                    error: function () {
                        alert('خطا در دریافت موجودی!');
                        $('#Quantity').val('');
                        $('#btnEditInventory').prop('disabled', true);
                    },
                    complete: function () {
                        $('#loadingSpinner').addClass('d-none');
                        $('#searchIcon').removeClass('d-none');
                        $('#btnLoadInventory').prop('disabled', false);
                    }
                });
            });

            // ---------- مدیریت دکمه ویرایش ----------
            $('#btnEditInventory').click(function () {
                $('#editForm').slideDown();
                $('#newQuantity').val($('#Quantity').val());
                $('#btnEditInventory').prop('disabled', true);
                $('#btnLoadInventory').prop('disabled', true);
                $('#Quantity').prop('readonly', true).css('background-color', '#f8f9fa');
            });

            // ---------- دکمه انصراف ----------
            $('#btnCancelEdit').click(function () {
                resetEditForm();
            });

            // ---------- دکمه ذخیره ----------
            $('#btnSaveEdit').click(function () {
                const newQty = parseInt($('#newQuantity').val());

                if (isNaN(newQty)) {
                    alert('لطفاً مقدار معتبر وارد کنید.');
                    return;
                }
                if (newQty < 0) {
                    alert('مقدار نمی‌تواند منفی باشد.');
                    return;
                }

                var data = {
                    ProductId: $('#ProductId').val(),
                    WarehouseId: $('#WarehouseId').val(),
                    ZoneId: $('#ZoneId').val(),
                    SectionId: $('#SectionId').val(),
                    NewQuantity: newQty,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                };

                $('#btnSaveEdit').prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-1"></span> در حال ذخیره...');

                $.ajax({
                    url: '@Url.Action("UpdateInventory", "Inventory", new { area = "WarehouseManagement" })',
                    type: 'POST',
                    data: data,
                    success: function (response) {
                        if (response.success) {
                            $('#Quantity').val(response.newQuantity);
                            alert('موجودی با موفقیت به‌روزرسانی شد.');
                            resetEditForm();
                        } else {
                            alert(response.message || 'خطا در به‌روزرسانی موجودی.');
                        }
                    },
                    error: function () {
                        alert('خطا در ارتباط با سرور.');
                    },
                    complete: function () {
                        $('#btnSaveEdit').prop('disabled', false).html('<i class="fas fa-check me-1"></i> ذخیره');
                    }
                });
            });

            // ---------- تابع بازنشانی فرم ویرایش ----------
            function resetEditForm() {
                $('#editForm').slideUp();
                $('#newQuantity').val('');
                $('#btnEditInventory').prop('disabled', false);
                $('#btnLoadInventory').prop('disabled', false);
                $('#Quantity').prop('readonly', false);
            }
        });
    </script>
}