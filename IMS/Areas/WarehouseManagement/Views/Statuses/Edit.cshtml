@model IMS.Application.WarehouseManagement.DTOs.StatusDto

@{
    ViewData["Title"] = "ویرایش طبقه";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h4 class="mb-0"><i class="fas fa-edit me-2"></i> ویرایش </h4>
        </div>

        <div class="card-body p-4">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.GroupId)

                <!-- نام وضعیت -->
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">نام طبقه</label>
                    <input asp-for="Name" class="form-control rounded-pill shadow-sm" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <!-- کد وضعیت -->
                <div class="mb-3">
                    <label asp-for="Code" class="form-label fw-bold">کد طبقه</label>
                    <input asp-for="Code" class="form-control rounded-pill shadow-sm" />
                    <span asp-validation-for="Code" class="text-danger small"></span>
                </div>


                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" asp-route-groupId="@Model.GroupId" class="btn btn-secondary rounded-pill px-4">
                        <i class="fas fa-arrow-right"></i> بازگشت
                    </a>
                    <button type="submit" class="btn btn-success rounded-pill px-4">
                        <i class="fas fa-save"></i> ذخیره تغییرات
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
