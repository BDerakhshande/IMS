@model List<IMS.Application.WarehouseManagement.DTOs.StatusDto>
@{
    var groupName = ViewBag.GroupName as string;
    ViewData["Title"] = "مدیریت طبقه‌ها";
    Layout = "~/Areas/WarehouseManagement/Views/Shared/_MyLayout.cshtml";
    var groupId = ViewBag.GroupId;
}
<link rel="stylesheet" href="~/fontawesome/css/all.min.css" />
<link href="~/vazirmatn/webfonts.css" rel="stylesheet" />

<div class="container-fluid py-2" dir="rtl">
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header py-1 d-flex justify-content-between align-items-center" style="background-color: #1a4959; color: white;">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-layer-group me-1" style="font-size: 0.85rem;"></i>
                        <h5 class="mb-0 fw-bold" style="font-size: 0.9rem;"> @ViewData["Title"] </h5>
                    </div>
                    <div class="d-flex align-items-center gap-1">
                        <div class="search-box" style="width: 180px;">
                            <div class="input-group input-group-sm">
                                <span class="input-group-text bg-white text-secondary p-1">
                                    <i class="fas fa-search" style="font-size: 0.8rem;"></i>
                                </span>
                                <input type="text" id="globalSearch" class="form-control form-control-sm p-1"
                                       placeholder="جستجو..." dir="rtl" style="height: 20px; font-size: 0.8rem;">
                            </div>
                        </div>
                        <div class="d-flex gap-1">
                            <a asp-controller="Groups"
                               asp-action="Index"
                               asp-route-categoryId="@Model.FirstOrDefault()?.CategoryId"
                               class="btn btn-sm btn-light d-flex align-items-center py-1 px-2"
                               style="height: 28px; font-size: 0.8rem;">
                                <i class="fas me-1"></i>
                                <span>بازگشت به گروه</span>
                            </a>
                            <a asp-action="Create"
                               asp-route-groupId="@groupId"
                               class="btn btn-sm btn-light d-flex align-items-center py-1 px-2"
                               style="height: 28px; font-size: 0.8rem;">
                                <i class="fas fa-plus me-1"></i>
                                <span>افزودن طبقه</span>
                            </a>
                        </div>
                    </div>
                </div>

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show mx-2 my-1 py-1" role="alert" style="font-size: 0.8rem;">
                        <i class="fas fa-exclamation-circle me-1"></i>
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close p-1" data-bs-dismiss="alert"></button>
                    </div>
                }

                <div class="card-body p-1">
                    @if (!Model.Any())
                    {
                        <div class="alert alert-info mx-2 my-1 py-1 text-center" style="font-size: 0.8rem;">
                            <i class="fas fa-info-circle me-1"></i>
                            هیچ طبقه‌ای ثبت نشده است
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table id="statusTable" class="table table-hover table-sm mb-0">
                                <thead class="table-light" style="font-size: 0.82rem;">
                                    <tr>
                                        <th class="text-center py-1">کد طبقه</th>
                                        <th class="text-center py-1">نام دسته‌بندی</th>
                                        <th class="text-center py-1">نام گروه</th>
                                        <th class="text-center py-1">نام طبقه</th>
                                        <th class="text-center py-1">عملیات</th>
                                    </tr>
                                </thead>
                                <tbody style="font-size: 0.8rem;">
                                    @foreach (var status in Model)
                                    {
                                        <tr data-url="@Url.Action("Index", "Products", new { statusId = status.Id })" style="cursor: pointer;">
                                            <td class="text-center fw-bold py-1 align-middle">@status.FullCode</td>
                                            <td class="text-center fw-bold py-1 align-middle">@status.CategoryName</td>
                                            <td class="text-center fw-bold py-1 align-middle">@status.GroupName</td>
                                            <td class="text-center py-1 align-middle">@status.Name</td>
                                            <td class="text-center py-1 align-middle">
                                                <div class="d-flex justify-content-center gap-1">
                                                    <a asp-action="Edit" asp-route-id="@status.Id"
                                                       class="btn btn-sm btn-outline-warning px-1"
                                                       style="font-size: 0.75rem; min-width: 26px; height: 26px;">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <form asp-action="Delete" method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@status.Id" />
                                                        <button type="submit" class="btn btn-sm btn-outline-danger px-1"
                                                                style="font-size: 0.75rem; min-width: 26px; height: 26px;"
                                                                onclick="return confirm('آیا از حذف این مورد مطمئن هستید؟');">
                                                            <i class="fas fa-trash-alt"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>

                <div class="d-flex justify-content-center mt-2">
                    <nav>
                        <ul class="pagination pagination-sm mb-0" id="paginationContainer"></ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/MenuJs.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const globalSearch = document.getElementById('globalSearch');
            const table = document.querySelector('table');
            const tbody = table.querySelector('tbody');
            const allRows = Array.from(tbody.querySelectorAll('tr'));
            const noResultsRow = document.createElement('tr');
            noResultsRow.innerHTML = '<td colspan="3" class="text-center py-2 text-muted" style="font-size: 0.8rem;">نتیجه‌ای یافت نشد</td>';
            noResultsRow.classList.add('no-results');

            let filteredRows = [...allRows];
            const rowsPerPage = 10;
            let currentPage = 1;

            function renderTable() {
                tbody.innerHTML = '';

                const term = globalSearch.value.trim().toLowerCase();

                const start = (currentPage - 1) * rowsPerPage;
                const end = start + rowsPerPage;
                const rowsToShow = filteredRows.slice(start, end);

                if (rowsToShow.length === 0 && term.length > 0) {
                    tbody.appendChild(noResultsRow);
                    return;
                }

                rowsToShow.forEach(originalRow => {
                    const newRow = originalRow.cloneNode(true);

                    if (term.length > 0) {
                        const cells = newRow.querySelectorAll('td:not(:last-child)');
                        cells.forEach(cell => {
                            const text = cell.textContent;
                            const highlighted = text.replace(
                                new RegExp(term, 'gi'),
                                match => `<span class="bg-warning">${match}</span>`
                            );
                            cell.innerHTML = highlighted;
                        });
                    }

                    // کلیک روی ردیف
                    newRow.addEventListener('click', function (e) {
                        if (!e.target.closest('a, button, input, .btn, form')) {
                            const url = originalRow.dataset.url;
                            if (url) {
                                window.location.href = url;
                            }
                        }
                    });

                    tbody.appendChild(newRow);
                });
            }

            function updatePagination() {
                const paginationContainer = document.getElementById('paginationContainer');
                paginationContainer.innerHTML = '';

                const totalPages = Math.ceil(filteredRows.length / rowsPerPage);
                for (let i = 1; i <= totalPages; i++) {
                    const li = document.createElement('li');
                    li.classList.add('page-item');
                    if (i === currentPage) li.classList.add('active');

                    const a = document.createElement('a');
                    a.classList.add('page-link');
                    a.href = '#';
                    a.style.fontSize = '0.75rem';
                    a.innerText = i;

                    a.addEventListener('click', function (e) {
                        e.preventDefault();
                        currentPage = i;
                        renderTable();
                        updatePagination();
                    });

                    li.appendChild(a);
                    paginationContainer.appendChild(li);
                }
            }

            globalSearch.addEventListener('input', function () {
                const searchTerm = this.value.toLowerCase().trim();

                filteredRows = allRows.filter(row => {
                    const cells = row.querySelectorAll('td:not(:last-child)');
                    return Array.from(cells).some(cell => cell.textContent.toLowerCase().includes(searchTerm));
                });

                currentPage = 1;
                renderTable();
                updatePagination();
            });

            renderTable();
            updatePagination();
        });
    </script>
}
