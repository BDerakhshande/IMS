@model IMS.Application.WarehouseManagement.DTOs.UnitDto

@{
    ViewData["Title"] = "ویرایش واحد";
    Layout = "~/Areas/WarehouseManagement/Views/Shared/_MyLayout.cshtml";
}

<div class="container-fluid py-3" dir="rtl">
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow">
                <div class="card-header py-2 d-flex justify-content-between align-items-center" style="background-color: #1a4959; color: white;">
                    <h5 class="mb-0 text-white">
                        <i class="fas fa-edit me-2"></i> @ViewData["Title"]
                    </h5>
                    <a asp-action="Index" class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-right me-1"></i> بازگشت به لیست
                    </a>
                </div>
                <div class="card-body p-3">
                    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger small"></div>

                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold mb-1">نام واحد</label>
                            <input asp-for="Name" class="form-control form-control-sm" placeholder="نام واحد را وارد کنید" />
                            <span asp-validation-for="Name" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Symbol" class="form-label fw-bold mb-1">نماد واحد</label>
                            <input asp-for="Symbol" class="form-control form-control-sm" placeholder="نماد واحد (مثلاً pcs)" />
                            <span asp-validation-for="Symbol" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <button type="submit" class="btn btn-primary btn-sm px-3">
                                <i class="fas fa-save me-1"></i> ذخیره تغییرات
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-times me-1"></i> انصراف
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/MenuJs.js"></script>
    <script>
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}
