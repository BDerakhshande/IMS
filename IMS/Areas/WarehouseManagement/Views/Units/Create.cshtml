@model IMS.Application.WarehouseManagement.DTOs.UnitDto
@{
    ViewData["Title"] = "ایجاد واحد جدید";

    Layout = "~/Areas/WarehouseManagement/Views/Shared/_MyLayout.cshtml";
}
<link rel="stylesheet" href="~/fontawesome/css/all.min.css" />
<link href="~/vazirmatn/webfonts.css" rel="stylesheet" />

<div class="container-fluid py-3" dir="rtl">
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow" style="box-shadow: 0 4px 8px rgba(13, 110, 253, 0.1);">
                <div class="card-header py-2 d-flex justify-content-between align-items-center"
                     style="background-color: #1a4959; color: white;">
                    <h5 class="mb-0 text-white">
                        <i class="fas fa-plus-circle me-2"></i> @ViewData["Title"]
                    </h5>
                    <a asp-action="Index" class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-right me-1"></i> بازگشت به لیست
                    </a>
                </div>

                <div class="card-body p-3">
                    @if (!ViewData.ModelState.IsValid)

                    {
                        <div class="alert alert-danger alert-dismissible fade show mb-3 py-2" role="alert" style="font-size: 0.8rem;">
                            <i class="fas fa-exclamation-circle me-1" style="font-size: 0.85rem;"></i>
                            لطفاً خطاهای فرم را بررسی کنید.
                            <button type="button" class="btn-close p-1" data-bs-dismiss="alert" aria-label="Close" style="font-size: 0.7rem;"></button>
                        </div>
                    }

                    <form asp-action="Create" method="post" class="needs-validation" novalidate>
                        <div class="row g-3 mb-3">
                            <!-- نام واحد -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Name" class="form-label fw-bold mb-1 small">
                                        <i class="fas fa-tag me-1"></i> نام واحد
                                    </label>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text bg-light"><i class="fas fa-font small"></i></span>
                                        <input asp-for="Name" class="form-control form-control-sm"
                                               placeholder="نام واحد را وارد کنید (مثلاً: عدد، کیلوگرم)"
                                               required />
                                    </div>
                                    <span asp-validation-for="Name" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>

                            <!-- نماد واحد -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Symbol" class="form-label fw-bold mb-1 small">
                                        <i class="fas fa-code me-1"></i> نماد واحد
                                    </label>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text bg-light"><i class="fas fa-hashtag small"></i></span>
                                        <input asp-for="Symbol" class="form-control form-control-sm"
                                               placeholder="نماد واحد را وارد کنید (مثلاً: pcs, kg)" />
                                    </div>
                                    <span asp-validation-for="Symbol" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>
                        </div>

                        <div class="border-top pt-3 mt-3 d-flex justify-content-end gap-2">
                            <button type="submit" class="btn btn-primary btn-sm px-3">
                                <i class="fas fa-save me-1"></i> ثبت
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-times me-1"></i> انصراف
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/MenuJs.js"></script>
    <script>
        // فعال سازی اعتبارسنجی فرم
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}