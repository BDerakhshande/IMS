@model IMS.Application.WarehouseManagement.DTOs.WarehouseDto

@{
    ViewData["Title"] = "ویرایش انبار";
    Layout = "~/Areas/WarehouseManagement/Views/Shared/_MyLayout.cshtml";
}

<div class="header-sidebar-wrapper">
    <div class="container-fluid py-3" dir="rtl">
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow" style="box-shadow: var(--card-shadow); background-color: white;">
                    <div class ="card-header py-2 d-flex justify-content-between align-items-center"
                              style="background-color: #1a4959; color: white;">
                        <h5 class="mb-0 text-white">
                            <i class="fas fa-warehouse me-2"></i> @ViewData["Title"]
                        </h5>
                        <a asp-action="Index" class="btn btn-light btn-sm">
                            <i class="fas fa-arrow-right me-1"></i> بازگشت به لیست
                        </a>
                    </div>

                    <div class="card-body" style="background-color: white;">
                        <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                            <input type="hidden" asp-for="Id" />

                            <div class="row g-2 mb-3">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Code" class="form-label fw-bold mb-1 small">
                                            <i class="fas fa-barcode me-1 text-muted"></i> کد انبار
                                        </label>
                                        <div class="input-group input-group-sm">
                                            <span class="input-group-text bg-light"><i class="fas fa-hashtag text-primary"></i></span>
                                            <input asp-for="Code" class="form-control" />
                                        </div>
                                        <span asp-validation-for="Code" class="text-danger small mt-1 d-block"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Name" class="form-label fw-bold mb-1 small">
                                            <i class="fas fa-tag me-1 text-muted"></i> نام انبار
                                        </label>
                                        <div class="input-group input-group-sm">
                                            <span class="input-group-text bg-light"><i class="fas fa-building text-primary"></i></span>
                                            <input asp-for="Name" class="form-control" placeholder="نام کامل انبار را وارد کنید" />
                                        </div>
                                        <span asp-validation-for="Name" class="text-danger small mt-1 d-block"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row g-2 mb-3">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Location" class="form-label fw-bold mb-1 small">
                                            <i class="fas fa-map-marker-alt me-1 text-muted"></i> موقعیت مکانی
                                        </label>
                                        <div class="input-group input-group-sm">
                                            <span class="input-group-text bg-light"><i class="fas fa-location-arrow text-primary"></i></span>
                                            <input asp-for="Location" class="form-control" placeholder="موقعیت فیزیکی انبار" />
                                        </div>
                                        <span asp-validation-for="Location" class="text-danger small mt-1 d-block"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Manager" class="form-label fw-bold mb-1 small">
                                            <i class="fas fa-user-tie me-1 text-muted"></i> مدیر انبار
                                        </label>
                                        <div class="input-group input-group-sm">
                                            <span class="input-group-text bg-light"><i class="fas fa-user text-primary"></i></span>
                                            <input asp-for="Manager" class="form-control" placeholder="نام و نام خانوادگی مدیر" />
                                        </div>
                                        <span asp-validation-for="Manager" class="text-danger small mt-1 d-block"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" role="switch" asp-for="IsActive" id="IsActiveCheckbox">
                                            <label class="form-check-label fw-bold text-dark small" for="IsActiveCheckbox">
                                                <i class="fas fa-power-off me-1 text-muted"></i>
                                                @(Model.IsActive ? "انبار فعال است" : "انبار غیرفعال است")
                                            </label>
                                        </div>
                                        <div class="form-text text-muted mt-1 small">
                                            با تغییر این وضعیت، دسترسی به انبار کنترل می‌شود
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-footer border-top pt-3 mt-3 d-flex justify-content-end gap-2" style="border-top-color: #dee2e6 !important;">
                                <button type="submit" class="btn btn-primary px-3" style="background-color: var(--accent-color); border-color: var(--accent-color); font-size: 0.875rem;">
                                    <i class="fas fa-save me-2"></i> ذخیره تغییرات
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary" style="color: #6c757d; border-color: #6c757d; font-size: 0.875rem;">
                                    <i class="fas fa-times me-2"></i> انصراف
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/MenuJs.js"></script>
    <script>
        // فعال سازی اعتبارسنجی فرم
        (function () {
            'use strict'

            var forms = document.querySelectorAll('.needs-validation')

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()

        // تغییر متن وضعیت انبار هنگام تغییر سوئیچ
        document.getElementById('IsActiveCheckbox').addEventListener('change', function() {
            const label = this.nextElementSibling;
            label.textContent = this.checked ? "انبار فعال است" : "انبار غیرفعال است";
        });
    </script>
}