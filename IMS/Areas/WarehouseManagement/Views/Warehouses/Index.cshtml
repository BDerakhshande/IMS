@model List<IMS.Application.WarehouseManagement.DTOs.WarehouseDto>

@{
    ViewData["Title"] = "مدیریت انبارها";
       Layout = "~/Areas/WarehouseManagement/Views/Shared/_MyLayout.cshtml";

}

<div>


    <div class="container-fluid py-3" dir="rtl">
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow" style="box-shadow: var(--card-shadow); background-color: white;">
                    <div class="card-header py-2 d-flex justify-content-between align-items-center" style="background-color: var(--primary-color); border-bottom: 1px solid var(--border-color);">
                        <h5 class="mb-0 text-white">
                            <i class="fas fa-warehouse me-2"></i> @ViewData["Title"]
                        </h5>
                        <a asp-action="Create" asp-controller="Warehouses" class="btn btn-light btn-sm">
                            <i class="fas fa-plus me-1"></i> افزودن انبار
                        </a>
                    </div>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show m-2 small" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show m-2 small" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div class="card-body p-2">
                        <div class="table-responsive">
                            <table class="table table-hover table-sm">
                                <thead style="background-color: #f8f9fa;">
                                    <tr>
                                        <th class="text-center small">کد انبار</th>
                                        <th class="text-center small">نام انبار</th>
                                        <th class="text-center small">موقعیت</th>
                                        <th class="text-center small">مدیر</th>
                                        <th class="text-center small">وضعیت</th>
                                        <th class="text-center small">عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var warehouse in Model)
                                    {
                                        <tr data-url="@Url.Action("Index", "Zones", new { area = "WarehouseManagement", id = warehouse.Id })" style="cursor: pointer;">
                                            <td class="text-center small fw-bold">@warehouse.DisplayCode</td>
                                            <td class="text-center small">@warehouse.Name</td>
                                            <td class="text-center small">@warehouse.Location</td>
                                            <td class="text-center small">@warehouse.Manager</td>
                                            <td class="text-center small">
                                                <span class="badge rounded-pill @(warehouse.IsActive ? "bg-success" : "bg-secondary") small">
                                                    <i class="fas @(warehouse.IsActive ? "fa-check-circle" : "fa-times-circle") me-1"></i>
                                                    @(warehouse.IsActive ? "فعال" : "غیرفعال")
                                                </span>
                                            </td>
                                            <td class="text-center small">
                                                <div class="d-flex justify-content-center gap-1">
                                                    <a asp-action="Edit"
                                                       asp-controller="Warehouses"
                                                       asp-area="WarehouseManagement"
                                                       asp-route-id="@warehouse.Id"
                                                       class="btn btn-sm btn-outline-warning py-0 px-2">
                                                        <i class="fas fa-edit"></i>
                                                    </a>

                                                    <form asp-controller="Warehouses" asp-action="Delete" method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@warehouse.Id" />
                                                        <button type="submit" class="btn btn-sm btn-outline-danger py-0 px-2" onclick="return confirm('آیا از حذف انبار مطمئن هستید؟');">
                                                            <i class="fas fa-trash-alt"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="card-footer bg-light py-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="text-muted small">
                                <i class="fas fa-info-circle me-1"></i>
                                تعداد انبارها: @Model.Count
                            </div>
                            <div>
                                <nav aria-label="Page navigation">
                                    <ul class="pagination pagination-sm mb-0">
                                        <li class="page-item disabled">
                                            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">قبلی</a>
                                        </li>
                                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                                        <li class="page-item">
                                            <a class="page-link" href="#">بعدی</a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('tbody tr[data-url]').on('click', function (e) {
                if ($(e.target).closest('a, button').length === 0) {
                    window.location.href = $(this).data('url');
                }
            });
        });
    </script>
}