@model List<IMS.Application.WarehouseManagement.DTOs.WarehouseDto>

@{
    ViewData["Title"] = "مدیریت انبارها";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/fontawesome/css/all.min.css" />
<link href="~/vazirmatn/webfonts.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/management.css" />
<link rel="stylesheet" href="~/css/Warehouses.css"/>

<div class="header-sidebar-wrapper">
@await Html.PartialAsync("_Sidebar")

    <div class="container-fluid py-4" dir="rtl">
        <div class="row">
            <div class="col-12">
                <div class="card card-primary border-0 shadow">
                    <div class="card-header py-3 d-flex justify-content-between align-items-center">
                        <h4 class="mb-0 text-white">
                            <i class="fas fa-warehouse me-2"></i> @ViewData["Title"]
                        </h4>
                        <a asp-action="Create" asp-controller="Warehouses" class="btn btn-light btn-sm">
                            <i class="fas fa-plus me-1"></i> افزودن انبار
                        </a>
                    </div>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped table-bordered">
                                <thead class="table-primary">
                                    <tr>
                                        <th class="text-center">کد انبار</th>
                                        <th class="text-center">نام انبار</th>
                                        <th class="text-center">موقعیت</th>
                                        <th class="text-center">مدیر</th>
                                        <th class="text-center">وضعیت</th>
                                        <th class="text-center">عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var warehouse in Model)
                                    {
                                        <tr data-url="@Url.Action("Index", "Zones", new { area = "WarehouseManagement", id = warehouse.Id })" style="cursor: pointer;">
                                            <td class="fw-bold">@warehouse.DisplayCode</td>
                                            <td>@warehouse.Name</td>
                                            <td>@warehouse.Location</td>
                                            <td>@warehouse.Manager</td>
                                            <td>
                                                <span class="badge rounded-pill @(warehouse.IsActive ? "bg-success" : "bg-secondary")">
                                                    <i class="fas @(warehouse.IsActive ? "fa-check-circle" : "fa-times-circle") me-1"></i>
                                                    @(warehouse.IsActive ? "فعال" : "غیرفعال")
                                                </span>
                                            </td>
                                            <td>
                                                <div class="d-flex justify-content-center gap-2">
                                                    <a asp-action="Edit"
                                                       asp-controller="Warehouses"
                                                       asp-area="WarehouseManagement"
                                                       asp-route-id="@warehouse.Id"
                                                       class="btn btn-sm btn-outline-warning">
                                                        <i class="fas fa-edit me-1"></i>
                                                    </a>

                                                    <form asp-controller="Warehouses" asp-action="Delete" method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@warehouse.Id" />
                                                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('آیا از حذف انبار مطمئن هستید؟');">
                                                            <i class="fas fa-trash-alt me-1"></i>
                                                        </button>
                                                    </form>

                                                </div>

                                              
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="card-footer bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="text-muted small">
                                <i class="fas fa-info-circle me-1"></i>
                                تعداد انبارها: @Model.Count
                            </div>
                            <div>
                                <nav aria-label="Page navigation">
                                    <ul class="pagination pagination-sm mb-0">
                                        <li class="page-item disabled">
                                            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">قبلی</a>
                                        </li>
                                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                                        <li class="page-item">
                                            <a class="page-link" href="#">بعدی</a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/management.js"></script>
    <script>
        $(document).ready(function () {
            $('[data-bs-toggle="tooltip"]').tooltip();

            $('tbody tr[data-url]').on('click', function (e) {
                if ($(e.target).closest('a, button').length === 0) {
                    window.location.href = $(this).data('url');
                }
            });
        });
    </script>
}
