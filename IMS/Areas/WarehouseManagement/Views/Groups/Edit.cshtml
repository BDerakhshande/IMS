@model IMS.Application.WarehouseManagement.DTOs.GroupDto
@{
    ViewData["Title"] = "ویرایش گروه";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card card-primary border-0 shadow">
                <div class="card-header bg-primary py-3 d-flex justify-content-between align-items-center">
                    <h4 class="mb-0 text-white">
                        <i class="fas fa-object-group me-2"></i>@ViewData["Title"]
                    </h4>
                    <a asp-action="Index" asp-route-categoryId="@Model.CategoryId" class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-right me-1"></i> بازگشت به لیست
                    </a>
                </div>

                <div class="card-body">
                    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="CategoryId" />
                        <input type="hidden" asp-for="CategoryCode" />


                        <div class="row">

                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    <label asp-for="Code" class="form-label fw-bold">
                                        <i class="fas fa-barcode me-1 text-muted"></i> کد گروه
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fas fa-hashtag text-primary"></i></span>
                                        <input asp-for="Code" class="form-control form-control-lg" placeholder="کد گروه را وارد کنید" required />
                                    </div>
                                    <span asp-validation-for="Code" class="text-danger small mt-1 d-block"></span>
                                    <div class="form-text small text-muted">مثال: 01، 02، A1</div>
                                </div>
                            </div>

                            <!-- نام گروه -->
                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    <label asp-for="Name" class="form-label fw-bold">
                                        <i class="fas fa-tag me-1 text-muted"></i> نام گروه
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fas fa-font text-primary"></i></span>
                                        <input asp-for="Name" class="form-control form-control-lg" placeholder="نام جدید گروه را وارد کنید" required />
                                    </div>
                                    <span asp-validation-for="Name" class="text-danger small mt-1 d-block"></span>
                                    <div class="form-text small text-muted">مثال: گروه A، گروه B، گروه ویژه</div>
                                </div>
                            </div>
                        </div>

                        @* نمایش خطاهای کلی مدل *@
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <div>@error.ErrorMessage</div>
                                }
                            </div>
                        }

                        <div class="form-footer border-top pt-4 mt-3">
                            <button type="submit" class="btn btn-primary btn-lg px-5">
                                <i class="fas fa-save me-2"></i> ذخیره تغییرات
                            </button>
                            <a asp-action="Index" asp-route-categoryId="@Model.CategoryId" class="btn btn-outline-secondary btn-lg me-2">
                                <i class="fas fa-times me-2"></i> انصراف
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control-lg {
        padding: 0.75rem 1rem;
        font-size: 1rem;
        border-radius: 0.375rem;
    }

    .input-group-text {
        min-width: 45px;
        justify-content: center;
    }

    .form-footer {
        display: flex;
        justify-content: flex-start;
        gap: 1rem;
    }

    .card {
        border-radius: 0.5rem;
        overflow: hidden;
    }

    .card-header {
        border-bottom: none;
    }

    .form-label {
        margin-bottom: 0.5rem;
        color: #495057;
    }

    .was-validated .form-control:invalid,
    .was-validated .form-control.is-invalid {
        border-color: #dc3545;
        padding-right: calc(1.5em + 0.75rem);
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 12 12' width='12' height='12' fill='none' stroke='%23dc3545'%3e%3ccircle cx='6' cy='6' r='4.5'/%3e%3cpath stroke-linejoin='round' d='M5.8 3.6h.4L6 6.5z'/%3e%3ccircle cx='6' cy='8.2' r='.6' fill='%23dc3545' stroke='none'/%3e%3c/svg%3e");
        background-repeat: no-repeat;
        background-position: right calc(0.375em + 0.1875rem) center;
        background-size: calc(0.75em + 0.375rem) calc(0.75em + 0.375rem);
    }

    .form-control[readonly] {
        background-color: #f8f9fa;
        opacity: 1;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // فعال سازی اعتبارسنجی فرم بوت‌استرپ 5
        (function () {
            'use strict'

            var forms = document.querySelectorAll('.needs-validation')

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}
