@model List<IMS.Application.WarehouseManagement.DTOs.GroupDto>
@{
    ViewData["Title"] = "مدیریت گروه‌ها";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int categoryId = (int)ViewData["CategoryId"]!;
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card card-primary border-0 shadow">
                <div class="card-header bg-primary py-3 d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-0 text-white">
                            <i class="fas fa-object-group me-2"></i>@ViewData["Title"]
                        </h4>
                       
                    </div>
                    <div>
                        <a asp-action="Index" asp-controller="Categories" class="btn btn-light btn-sm me-2">
                            <i class="fas fa-arrow-right me-1"></i> بازگشت به دسته‌بندی‌ها
                        </a>
                        <a asp-action="Create" asp-route-categoryId="@categoryId" class="btn btn-light btn-sm">
                            <i class="fas fa-plus me-1"></i> ایجاد گروه جدید
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="بستن"></button>
                        </div>
                    }

                    @if (!Model.Any())
                    {
                        <div class="alert alert-info rounded-3 text-center py-4">
                            <i class="fas fa-info-circle fa-2x mb-3"></i>
                            <h5 class="fw-bold">هیچ گروهی برای این دسته‌بندی ثبت نشده است</h5>
                            <p class="mb-0">برای افزودن گروه جدید روی دکمه "ایجاد گروه جدید" کلیک کنید</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-striped table-bordered">
                                <thead class="table-primary">
                                    <tr>
                                        <th class="text-center">کد</th>
                                        <th class="text-center">نام گروه</th>
                                        <th class="text-center">طبقه‌ها</th>
                                        <th class="text-center">عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var group in Model)
                                    {
                                        <tr>
                                            <td class="fw-bold">@group.GroupCode</td>
                                           
                                            <td>@group.Name</td>
                                            <td class="text-center">
                                                <a asp-controller="Statuses"
                                                   asp-action="Index"
                                                   asp-route-groupId="@group.Id"
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-list-check me-1"></i> مدیریت طبقه‌ها
                                                </a>
                                            </td>
                                            <td class="text-center">
                                                <div class="d-flex justify-content-center gap-2">
                                                    <a asp-action="Edit"
                                                       asp-route-id="@group.Id"
                                                       class="btn btn-sm btn-outline-warning">
                                                        <i class="fas fa-edit me-1"></i> ویرایش
                                                    </a>

                                                    <button type="button"
                                                            class="btn btn-sm btn-outline-danger"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#deleteModal-@group.Id">
                                                        <i class="fas fa-trash-alt me-1"></i> حذف
                                                    </button>
                                                </div>

                                                <!-- Modal for Delete Confirmation -->
                                                <div class="modal fade" id="deleteModal-@group.Id" tabindex="-1" aria-hidden="true">
                                                    <div class="modal-dialog modal-dialog-centered">
                                                        <div class="modal-content">
                                                            <div class="modal-header bg-danger text-white">
                                                                <h5 class="modal-title">
                                                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                                                    تایید حذف گروه
                                                                </h5>
                                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <div class="alert alert-warning">
                                                                    <i class="fas fa-exclamation-circle me-2"></i>
                                                                    آیا از حذف گروه <strong>@group.Name</strong> با کد <strong>@group.GroupCode</strong> مطمئن هستید؟
                                                                </div>
                                                                <p class="text-muted small">این عمل غیرقابل بازگشت است و تمام وضعیت‌های این گروه نیز حذف خواهند شد.</p>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                                    <i class="fas fa-times me-1"></i> انصراف
                                                                </button>
                                                                <form asp-action="Delete" method="post">
                                                                    <input type="hidden" name="id" value="@group.Id" />
                                                                    <button type="submit" class="btn btn-danger">
                                                                        <i class="fas fa-trash-alt me-1"></i> تایید حذف
                                                                    </button>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>

                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="text-muted small">
                            <i class="fas fa-info-circle me-1"></i>
                            تعداد گروه‌ها: @Model.Count
                        </div>
                        <div>
                            <nav aria-label="Page navigation">
                                <ul class="pagination pagination-sm mb-0">
                                    <li class="page-item disabled">
                                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">قبلی</a>
                                    </li>
                                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">بعدی</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


    <style>
        .table {
            font-size: 0.9rem;
        }

            .table th {
                font-weight: 600;
                white-space: nowrap;
                background-color: #f8f9fa;
            }

        .table-hover tbody tr:hover {
            background-color: rgba(13, 110, 253, 0.05);
        }

        .badge {
            padding: 0.5em 0.75em;
            font-weight: 500;
        }

        .modal-header {
            border-bottom: none;
        }

        .modal-footer {
            border-top: none;
            justify-content: flex-start;
        }

        .card-footer {
            border-top: 1px solid rgba(0, 0, 0, 0.05);
        }
    </style>

@section Scripts {
    <script>
        // فعال سازی tooltip برای دکمه‌ها
        $(document).ready(function () {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}