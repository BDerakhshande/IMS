@model List<IMS.Application.WarehouseManagement.DTOs.GroupDto>
@{
    ViewData["Title"] = "مدیریت گروه‌ها";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int categoryId = (int)ViewData["CategoryId"]!;
}
<link rel="stylesheet" href="~/fontawesome/css/all.min.css" />
<link href="~/vazirmatn/webfonts.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/management.css" />
<link rel="stylesheet" href="~/css/Warehouses.css" />

<style>
    .table {
        font-size: 0.9rem;
    }

        .table th {
            font-weight: 600;
            white-space: nowrap;
            background-color: #f8f9fa;
            cursor: pointer;
            transition: all 0.2s;
        }

            .table th:hover {
                background-color: #e9ecef;
            }

    .table-hover tbody tr:hover {
        background-color: rgba(13, 110, 253, 0.05);
    }

    .badge {
        padding: 0.5em 0.75em;
        font-weight: 500;
    }

    .modal-header {
        border-bottom: none;
    }

    .modal-footer {
        border-top: none;
        justify-content: flex-start;
    }

    .card-footer {
        border-top: 1px solid rgba(0, 0, 0, 0.05);
    }

    .form-label i,
    .input-group-text i {
        color: #000 !important;
    }

    .form-label {
        color: #000 !important;
    }

    .form-text {
        color: #6c757d !important;
    }
</style>

<div class="header-sidebar-wrapper">
    @await Html.PartialAsync("_Sidebar")

    <div class="container-fluid py-4" dir="rtl">
        <div class="row">
            <div class="col-12">
                <div class="card card-primary border-0 shadow">
                    <div class="card-header py-3 d-flex justify-content-between align-items-center">
                        <h4 class="mb-0 text-white">
                            <i class="fas fa-object-group me-2"></i> @ViewData["Title"]
                        </h4>
                        <div>
                            <a asp-action="Index" asp-controller="Categories" class="btn btn-light btn-sm me-2">
                                <i class="fas fa-arrow-right me-1"></i> بازگشت به دسته‌بندی‌ها
                            </a>
                            <a asp-action="Create" asp-route-categoryId="@categoryId" class="btn btn-light btn-sm">
                                <i class="fas fa-plus me-1"></i> افزودن گروه
                            </a>
                        </div>
                    </div>

                    <div class="card-body">
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                                <i class="fas fa-exclamation-circle me-2"></i>
                                @TempData["ErrorMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="بستن"></button>
                            </div>
                        }

                        @if (!Model.Any())
                        {
                            <div class="alert alert-info rounded-3 text-center py-4">
                                <i class="fas fa-info-circle fa-2x mb-3"></i>
                                <h5 class="fw-bold">هیچ گروهی برای این دسته‌بندی ثبت نشده است</h5>
                                <p class="mb-0">برای افزودن گروه جدید روی دکمه "افزودن گروه" کلیک کنید</p>
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-hover table-striped table-bordered">
                                    <thead class="table-primary">
                                        <tr>
                                            <th class="text-center">کد</th>
                                            <th class="text-center" onclick="navigateToStatuses('@Model.First().Id')">نام گروه</th>
                                            <th class="text-center">عملیات</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var group in Model)
                                        {
                                            <tr>
                                                <td class="fw-bold text-center">@group.GroupCode</td>
                                                <td class="text-center" style="cursor: pointer;"
                                                    onclick="navigateToStatuses('@group.Id')">
                                                    @group.Name
                                                </td>
                                                <td class="text-center">
                                                    <div class="d-flex justify-content-center gap-2">
                                                        <a asp-action="Edit"
                                                           asp-route-id="@group.Id"
                                                           class="btn btn-sm btn-outline-warning">
                                                            <i class="fas fa-edit me-1"></i> 
                                                        </a>

                                                        <form asp-action="Delete" method="post" onsubmit="return confirm('آیا از حذف این گروه مطمئن هستید؟');" class="d-inline">
                                                            <input type="hidden" name="id" value="@group.Id" />
                                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                                <i class="fas fa-trash-alt me-1"></i> 
                                                            </button>
                                                        </form>

                                                    </div>

                                                   
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>

                    <div class="card-footer bg-light py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="text-muted small">
                                <i class="fas fa-info-circle me-1"></i>
                                تعداد گروه‌ها: <span class="fw-bold">@Model.Count</span>
                            </div>
                            <div>
                                <nav aria-label="Page navigation">
                                    <ul class="pagination pagination-sm mb-0">
                                        <li class="page-item disabled">
                                            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">قبلی</a>
                                        </li>
                                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                                        <li class="page-item">
                                            <a class="page-link" href="#">بعدی</a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // فعال سازی tooltip برای دکمه‌ها
        $(document).ready(function () {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });

        // تابع برای هدایت به صفحه وضعیت‌ها
        function navigateToStatuses(groupId) {
            window.location.href = '@Url.Action("Index", "Statuses")' + '?groupId=' + groupId;
        }
    </script>
}