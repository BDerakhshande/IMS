            $(document).on('click', '.save-item', function () {
            const $row = $(this).closest('tr[data-index]').filter(function () {
                return !$(this).hasClass('validation-row');
            }).first();

            const index = $row.data('index');
            if (index === undefined) {
                console.error('Index not found for this row');
                return;
            }

            // تشخیص نوع آیتم (مصرفی یا تولیدی)
            const isProduced = $row.closest('#producedItemsTable').length > 0;
            const prefix = isProduced ? 'ProducedItems' : 'ConsumedItems';
            const itemType = isProduced ? 'produced' : '';

            // دریافت مقادیر
            const productId = $row.find(`select[name="${prefix}[${index}].ProductId"]`).val();
            const quantity = $row.find(`input[name="${prefix}[${index}].Quantity"]`).val();
            const sectionId = $row.find(`select[name="${prefix}[${index}].SectionId"]`).val();
            const zoneId = $row.find(`select[name="${prefix}[${index}].ZoneId"]`).val();
            const warehouseId = $row.find(`select[name="${prefix}[${index}].WarehouseId"]`).val();
            const statusId = $row.find(`select[name="${prefix}[${index}].StatusId"]`).val();
            const groupId = $row.find(`select[name="${prefix}[${index}].GroupId"]`).val();
            const categoryId = $row.find(`select[name="${prefix}[${index}].CategoryId"]`).val();

            // اعتبارسنجی
            let errorMessages = [];
            if (!productId) errorMessages.push("کالا انتخاب نشده است.");
            if (!sectionId) errorMessages.push("بخش انتخاب نشده است.");
            if (!zoneId) errorMessages.push("زون انتخاب نشده است.");
            if (!warehouseId) errorMessages.push("انبار انتخاب نشده است.");
            if (!quantity || parseInt(quantity) <= 0) errorMessages.push("مقدار باید بزرگ‌تر از صفر باشد.");

            const $errorRow = $(`tr.validation-row[data-index="${index}"]`);
            const $errorBox = $errorRow.find('.error-message-list');

            if (errorMessages.length > 0) {
                $errorBox.html(`<ul>${errorMessages.map(msg => `<li>${msg}</li>`).join('')}</ul>`);
                $errorRow.show();
                return;
            } else {
                $errorBox.empty();
                $errorRow.hide();
            }

            // گرفتن متن انتخاب‌شده‌ها
            const productText = $row.find(`select[name="${prefix}[${index}].ProductId"] option:selected`).text();
            const groupText = $row.find(`select[name="${prefix}[${index}].GroupId"] option:selected`).text();
            const categoryText = $row.find(`select[name="${prefix}[${index}].CategoryId"] option:selected`).text();
            const statusText = $row.find(`select[name="${prefix}[${index}].StatusId"] option:selected`).text();
            const warehouseText = $row.find(`select[name="${prefix}[${index}].WarehouseId"] option:selected`).text();
            const zoneText = $row.find(`select[name="${prefix}[${index}].ZoneId"] option:selected`).text();
            const sectionText = $row.find(`select[name="${prefix}[${index}].SectionId"] option:selected`).text();

            // ساخت خلاصه‌ها
            const productSummary = `${categoryText} / ${groupText} / ${statusText} / ${productText}`;
            const storageSummary = `${warehouseText} / ${zoneText} / ${sectionText}`;

            // به‌روزرسانی هدر آکاردئون کالا
            const productCollapseId = isProduced ? `producedProductCollapse_${index}` : `productCollapse_${index}`;
            const $productHeader = $row.find(`#${productCollapseId}`).closest('.accordion-item').find('.accordion-button');
            const $productCollapse = $row.find(`#${productCollapseId}`);
            if ($productHeader.length > 0) {
                $productHeader.html(productSummary);
                bootstrap.Collapse.getOrCreateInstance($productCollapse[0]).hide();
            }

            // به‌روزرسانی هدر آکاردئون محل نگهداری
            const locationCollapseId = isProduced ? `producedLocationCollapse_${index}` : `locationCollapse_${index}`;
