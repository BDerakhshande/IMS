            const $warehouseCollapse = $row.find(`#${locationCollapseId}`);
            if ($warehouseHeader.length > 0) {
                $warehouseHeader.html(storageSummary);
                bootstrap.Collapse.getOrCreateInstance($warehouseCollapse[0]).hide();
            }
        });


