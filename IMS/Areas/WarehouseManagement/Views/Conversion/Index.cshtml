@model List<IMS.Application.WarehouseManagement.DTOs.ConversionDocumentDto>

@{
    ViewData["Title"] = "لیست اسناد تبدیل";
    ViewData["PageTitle"] = "مدیریت اسناد تبدیل مواد";
    ViewData["PageDesc"] = "نمایش و مدیریت کلیه اسناد تبدیل مواد اولیه به محصولات";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="mb-4">
    <a asp-action="Create" asp-controller="Conversion" asp-area="WarehouseManagement"
       class="btn btn-primary">
        <i class="fa fa-plus me-2"></i>سند جدید
    </a>
</div>

<div class="card custom-card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped table-nowrap mb-0">
                <thead class="bg-primary text-white">
                    <tr>
                        <th class="text-center py-3" width="10%">شناسه سند</th>
                        <th class="text-center py-3" width="15%">تاریخ ایجاد</th>
                        <th class="text-center py-3" width="20%">مواد مصرفی</th>
                        <th class="text-center py-3" width="15%">محصولات تولیدی</th>
                        <th class="text-center py-3" width="15%">عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var doc in Model)
                        {
                            <tr class="vertical-align-middle">
                                <td class="text-center fw-bold text-primary">#@doc.Id</td>
                                <td class="text-center">
                                    <span class="badge bg-light text-dark">@doc.CreatedAt.ToString("yyyy/MM/dd")</span>
                                    <small class="d-block text-muted">@doc.CreatedAt.ToString("HH:mm")</small>
                                </td>
                                <td>
                                    @if (doc.ConsumedProducts.Any())
                                    {
                                        <div class="d-flex flex-column gap-2">
                                            @foreach (var item in doc.ConsumedProducts)
                                            {
                                                <div class="d-flex justify-content-between align-items-center bg-light-warning bg-opacity-10 p-2 rounded">
                                                    <span class="fw-semibold">@item.ProductName</span>
                                                  
                                                </div>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-light-warning text-center py-2 mb-0">
                                            <i class="fa fa-exclamation-circle me-2"></i> بدون مواد مصرفی
                                        </div>
                                    }
                                </td>
                                <td>
                                    @if (doc.ProducedProducts.Any())
                                    {
                                        <div class="d-flex flex-column gap-2">
                                            @foreach (var item in doc.ProducedProducts)
                                            {
                                                <div class="d-flex justify-content-between align-items-center bg-light-success bg-opacity-10 p-2 rounded">
                                                    <span class="fw-semibold">@item.ProductName</span>
                                                </div>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-light-info text-center py-2 mb-0">
                                            <i class="fa fa-exclamation-circle me-2"></i> بدون محصول تولیدی
                                        </div>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="d-flex justify-content-center gap-2">
                                        <a asp-action="Edit" asp-controller="Conversion" asp-area="WarehouseManagement"
                                           asp-route-id="@doc.Id" class="btn btn-sm btn-primary"
                                           data-bs-toggle="tooltip" title="ویرایش">
                                            <i class="fa fa-edit me-1"></i>ویرایش
                                        </a>
                                        <a asp-action="Delete" asp-controller="Conversion" asp-area="WarehouseManagement"
                                           asp-route-id="@doc.Id" class="btn btn-sm btn-danger"
                                           onclick="return confirm('آیا از حذف این سند اطمینان دارید؟');"
                                           data-bs-toggle="tooltip" title="حذف">
                                            <i class="fa fa-trash me-1"></i>حذف
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5">
                                <div class="empty-state">
                                    <div class="empty-state-icon">
                                        <i class="fas fa-file-alt fa-3x text-muted"></i>
                                    </div>
                                    <h4 class="empty-state-title">هیچ سند تبدیلی یافت نشد</h4>
                                    <p class="empty-state-text">هنوز هیچ سند تبدیلی در سیستم ثبت نشده است.</p>
                                    <a asp-action="Create" asp-controller="Conversion" asp-area="WarehouseManagement"
                                       class="btn btn-primary mt-3">
                                        <i class="fa fa-plus me-2"></i>ایجاد سند جدید
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer bg-light">
        <div class="d-flex justify-content-between align-items-center">
            <div class="text-muted">
                <i class="fa fa-info-circle me-2"></i> تعداد کل اسناد: <strong>@Model?.Count</strong>
            </div>
            <div>
                <nav aria-label="Page navigation">
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">قبلی</a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">بعدی</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>


    <style>
        .custom-card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
            overflow: hidden;
        }

        .empty-state {
            padding: 3rem;
            text-align: center;
        }

        .empty-state-icon {
            margin-bottom: 1.5rem;
        }

        .empty-state-title {
            font-size: 1.25rem;
            margin-bottom: 0.5rem;
            color: #495057;
        }

        .empty-state-text {
            color: #6c757d;
            margin-bottom: 1.5rem;
        }

        .table-nowrap td, .table-nowrap th {
            white-space: nowrap;
        }

        .vertical-align-middle td {
            vertical-align: middle !important;
        }

        .badge {
            font-weight: 500;
            padding: 0.35em 0.65em;
        }

        /* استایل جدید برای دکمه‌های عملیات */
        .btn-operation {
            min-width: 80px;
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
        }
    </style>
