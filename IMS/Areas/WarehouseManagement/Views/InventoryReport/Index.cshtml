@using System.Text.Json
@model IMS.Application.WarehouseManagement.DTOs.InventoryReportFilterDto

@{
    ViewData["Title"] = "گزارش موجودی انبارها";
    Layout = "~/Areas/WarehouseManagement/Views/Shared/_MyLayout.cshtml";
}
