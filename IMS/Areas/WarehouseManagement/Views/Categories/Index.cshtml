@model List<IMS.Application.WarehouseManagement.DTOs.CategoryDto>
@{
    ViewData["Title"] = "مدیریت دسته‌بندی‌ها";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/fontawesome/css/all.min.css" />
<link href="~/vazirmatn/webfonts.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/management.css" />
<link rel="stylesheet" href="~/css/Warehouses.css" />

<style>
    .clickable-row {
        cursor: pointer;
    }

        .clickable-row:hover {
            background-color: rgba(26, 74, 90, 0.05);
        }

    .action-cell {
        pointer-events: auto;
    }
</style>

<div class="header-sidebar-wrapper">
    @await Html.PartialAsync("_Sidebar")

    <div class="container-fluid py-4" dir="rtl">
        <div class="row">
            <div class="col-12">
                <div class="card card-primary border-0 shadow">
                    <div class="card-header py-3 d-flex justify-content-between align-items-center">
                        <h4 class="mb-0 text-white">
                            <i class="fas fa-tags me-2"></i> @ViewData["Title"]
                        </h4>
                        <a asp-action="Create" asp-controller="Categories" class="btn btn-light btn-sm">
                            <i class="fas fa-plus me-1"></i> دسته‌بندی جدید
                        </a>
                    </div>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div class="card-body">
                        @if (!Model.Any())
                        {
                            <div class="alert alert-info rounded-3 text-center py-4">
                                <i class="fas fa-info-circle fa-2x mb-3"></i>
                                <h5 class="fw-bold">هیچ دسته‌بندی ثبت نشده است</h5>
                                <p class="mb-0">برای افزودن دسته‌بندی جدید روی دکمه "دسته‌بندی جدید" کلیک کنید</p>
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-hover table-striped table-bordered">
                                    <thead class="table-primary">
                                        <tr>
                                            <th class="text-center">کد</th>
                                            <th class="text-center">دسته‌بندی</th>
                                            <th class="text-center">عملیات</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var category in Model)
                                        {
                                            <tr class="clickable-row" data-href="@Url.Action("Index", "Groups", new { categoryId = category.Id })">
                                                <td class="fw-bold">@category.DisplayCode</td>
                                                <td>@category.Name</td>
                                                <td class="action-cell">
                                                    <div class="d-flex justify-content-center gap-2">
                                                        <a asp-action="Edit"
                                                           asp-route-id="@category.Id"
                                                           class="btn btn-sm btn-outline-warning">
                                                            <i class="fas fa-edit"></i>
                                                        </a>

                                                        <button type="button"
                                                                class="btn btn-sm btn-outline-danger"
                                                                data-bs-toggle="modal"
                                                                data-bs-target="#deleteModal-@category.Id">
                                                            <i class="fas fa-trash-alt"></i>
                                                        </button>
                                                    </div>

                                                    <!-- Modal for Delete Confirmation -->
                                                    <div class="modal fade" id="deleteModal-@category.Id" tabindex="-1" aria-hidden="true">
                                                        <div class="modal-dialog modal-dialog-centered">
                                                            <div class="modal-content">
                                                                <div class="modal-header bg-danger text-white">
                                                                    <h5 class="modal-title">
                                                                        <i class="fas fa-exclamation-triangle me-2"></i>
                                                                        تایید حذف دسته‌بندی
                                                                    </h5>
                                                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <div class="alert alert-warning">
                                                                        <i class="fas fa-exclamation-circle me-2"></i>
                                                                        آیا از حذف دسته‌بندی <strong>@category.Name</strong> با کد <strong>@category.DisplayCode</strong> مطمئن هستید؟
                                                                    </div>
                                                                    <p class="text-muted small">این عمل غیرقابل بازگشت است و تمام گروه‌های این دسته‌بندی نیز حذف خواهند شد.</p>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                                        <i class="fas fa-times me-1"></i> انصراف
                                                                    </button>
                                                                    <form asp-action="Delete" method="post">
                                                                        <input type="hidden" name="id" value="@category.Id" />
                                                                        <button type="submit" class="btn btn-danger">
                                                                            <i class="fas fa-trash-alt me-1"></i> تایید حذف
                                                                        </button>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>

                    <div class="card-footer bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="text-muted small">
                                <i class="fas fa-info-circle me-1"></i>
                                تعداد دسته‌بندی‌ها: @Model.Count
                            </div>
                            <div>
                                <nav aria-label="Page navigation">
                                    <ul class="pagination pagination-sm mb-0">
                                        <li class="page-item disabled">
                                            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">قبلی</a>
                                        </li>
                                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                                        <li class="page-item">
                                            <a class="page-link" href="#">بعدی</a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('[data-bs-toggle="tooltip"]').tooltip();

            $('.clickable-row').click(function(e) {
                // اگر روی دکمه‌ها کلیک شده باشد، از اجرای این تابع جلوگیری می‌کنیم
                if ($(e.target).closest('.action-cell, .btn').length === 0) {
                    window.location = $(this).data('href');
                }
            });
        });
    </script>
}