@model List<IMS.Application.WarehouseManagement.DTOs.StorageZoneDto>
@{
    ViewData["Title"] = "مدیریت قسمت‌های انبار";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var warehouseId = ViewBag.WarehouseId;
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card card-primary border-0 shadow">
                <div class="card-header bg-primary py-3 d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-0 text-white">
                            <i class="fas fa-map-marked-alt me-2"></i>@ViewData["Title"]
                        </h4>
                        <small class="text-white-50">انبار: @ViewBag.WarehouseName</small>
                    </div>
                    <div>
                        <a asp-action="Index" asp-controller="Warehouses" class="btn btn-light btn-sm me-2">
                            <i class="fas fa-warehouse me-1"></i> بازگشت به انبارها
                        </a>
                        <a asp-action="Create" asp-controller="Zones" asp-route-warehouseId="@warehouseId" class="btn btn-light btn-sm">
                            <i class="fas fa-plus me-1"></i> افزودن قسمت جدید
                        </a>

                    </div>
                </div>
            
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle me-1"></i>
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-1"></i>
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <div class="alert alert-info rounded-3 text-center py-4">
                            <i class="fas fa-info-circle fa-2x mb-3"></i>
                            <h5 class="fw-bold">هیچ قسمتی برای این انبار ثبت نشده است</h5>
                            <p class="mb-0">برای افزودن قسمت جدید روی دکمه "افزودن قسمت جدید" کلیک کنید</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-striped table-bordered">
                                <thead class="table-primary">
                                    <tr>
                                        <th class="text-center">کد</th>
                                        <th class="text-center">نام قسمت</th>
                                        <th class="text-center">تعداد بخش‌ها</th>
                                        <th class="text-center">مدیریت بخش‌ها</th>
                                        <th class="text-center">عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var zone in Model)
                                    {
                                        <tr>
                                            <td class="fw-bold">@zone.FullCode</td>
                                            <td>@zone.Name</td>
                                            <td>
                                                <span class="badge bg-primary rounded-pill">@(zone.Sections?.Count ?? 0)</span>
                                            </td>
                                            <td>
                                                <a asp-area="WarehouseManagement"
                                                   asp-controller="Sections"
                                                   asp-action="Index"
                                                   asp-route-id="@zone.Id"
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-sitemap me-1"></i> مشاهده بخش‌ها
                                                </a>
                                            </td>
                                            <td>
                                                <div class="d-flex justify-content-center gap-2">
                                                    <a asp-action="Edit"
                                                       asp-controller="Zones"
                                                       asp-area="WarehouseManagement"
                                                       asp-route-id="@zone.Id"
                                                       class="btn btn-sm btn-outline-warning">
                                                        <i class="fas fa-edit me-1"></i> ویرایش
                                                    </a>

                                                    <button type="button"
                                                            class="btn btn-sm btn-outline-danger"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#deleteModal-@zone.Id">
                                                        <i class="fas fa-trash-alt me-1"></i> حذف
                                                    </button>
                                                </div>

                                                <!-- Modal for Delete Confirmation -->
                                                <div class="modal fade" id="deleteModal-@zone.Id" tabindex="-1" aria-hidden="true">
                                                    <div class="modal-dialog modal-dialog-centered">
                                                        <div class="modal-content">
                                                            <div class="modal-header bg-danger text-white">
                                                                <h5 class="modal-title">
                                                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                                                    تایید حذف قسمت
                                                                </h5>
                                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <div class="alert alert-warning">
                                                                    <i class="fas fa-exclamation-circle me-2"></i>
                                                                    آیا از حذف قسمت <strong>@zone.Name</strong> با کد <strong>@zone.FullCode</strong> مطمئن هستید؟
                                                                </div>
                                                                <p class="text-muted small">این عمل غیرقابل بازگشت است و تمام بخش‌های این قسمت نیز حذف خواهند شد.</p>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                                    <i class="fas fa-times me-1"></i> انصراف
                                                                </button>
                                                                <form asp-controller="Zones" asp-area="WarehouseManagement" asp-action="Delete" method="post">
                                                                    <input type="hidden" name="id" value="@zone.Id" />
                                                                    <input type="hidden" name="warehouseId" value="@zone.WarehouseId" />
                                                                    <button type="submit" class="btn btn-danger">
                                                                        <i class="fas fa-trash-alt me-1"></i> تایید حذف
                                                                    </button>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>

                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="text-muted small">
                            <i class="fas fa-info-circle me-1"></i>
                            تعداد قسمت‌ها: @Model.Count
                        </div>
                        <div>
                            <nav aria-label="Page navigation">
                                <ul class="pagination pagination-sm mb-0">
                                    <li class="page-item disabled">
                                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">قبلی</a>
                                    </li>
                                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">بعدی</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


    <style>
        .table {
            font-size: 0.9rem;
        text-align: center; /* ← اضافه شده برای وسط‌چین کردن محتوا */
        }

            .table th {
                font-weight: 600;
                white-space: nowrap;
                background-color: #f8f9fa;
            }

        .table-hover tbody tr:hover {
            background-color: rgba(13, 110, 253, 0.05);
        }

        .badge {
            padding: 0.5em 0.75em;
            font-weight: 500;
        }

        .modal-header {
            border-bottom: none;
        }

        .modal-footer {
            border-top: none;
            justify-content: flex-start;
        }

        .card-footer {
            border-top: 1px solid rgba(0, 0, 0, 0.05);
        }
    </style>


@section Scripts {
    <script>
        // فعال سازی tooltip برای دکمه‌ها
        $(document).ready(function(){
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}