@model IMS.Application.WarehouseManagement.DTOs.StorageZoneDto

@{
    ViewData["Title"] = "قسمت جدید";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>


    <div class="container-fluid py-3" dir="rtl">
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow" style="box-shadow: var(--card-shadow); background-color: white;">
                    <div class="card-header py-2 d-flex justify-content-between align-items-center" style="background-color: var(--primary-color); border-bottom: 1px solid var(--border-color);">
                        <h5 class="mb-0 text-white">
                            <i class="fas fa-map-marked-alt me-2"></i> @ViewData["Title"]
                        </h5>
                        <a asp-action="Index" asp-route-id="@Model.WarehouseId" class="btn btn-light btn-sm">
                            <i class="fas fa-arrow-right me-1"></i> بازگشت به لیست
                        </a>
                    </div>

                    <div class="card-body" style="background-color: white;">
                        <form asp-action="Create" method="post" class="needs-validation" novalidate>
                            <input type="hidden" asp-for="WarehouseId" />

                            <div class="row g-2 mb-3">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="ZoneCode" class="form-label fw-bold mb-1 small">
                                            <i class="fas fa-barcode me-1 text-muted"></i> کد قسمت
                                        </label>
                                        <div class="input-group input-group-sm">
                                            <span class="input-group-text bg-light"><i class="fas fa-hashtag text-primary"></i></span>
                                            <input asp-for="ZoneCode" class="form-control" placeholder="کد منحصر به فرد قسمت را وارد کنید" />
                                        </div>
                                        <span asp-validation-for="ZoneCode" class="text-danger small mt-1 d-block"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Name" class="form-label fw-bold mb-1 small">
                                            <i class="fas fa-tag me-1 text-muted"></i> نام قسمت
                                        </label>
                                        <div class="input-group input-group-sm">
                                            <span class="input-group-text bg-light"><i class="fas fa-map-signs text-primary"></i></span>
                                            <input asp-for="Name" class="form-control" placeholder="نام کامل قسمت را وارد کنید" />
                                        </div>
                                        <span asp-validation-for="Name" class="text-danger small mt-1 d-block"></span>
                                        <div class="form-text small text-muted">مثال: انبار مرکزی، قسمت مواد اولیه</div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-footer border-top pt-3 mt-3 d-flex justify-content-end gap-2" style="border-top-color: #dee2e6 !important;">
                                <button type="submit" class="btn btn-primary px-3" style="background-color: var(--accent-color); border-color: var(--accent-color); font-size: 0.875rem;">
                                    <i class="fas fa-save me-2"></i> ثبت قسمت
                                </button>
                                <a asp-action="Index" asp-route-id="@Model.WarehouseId" class="btn btn-outline-secondary" style="color: #6c757d; border-color: #6c757d; font-size: 0.875rem;">
                                    <i class="fas fa-times me-2"></i> انصراف
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // فعال سازی اعتبارسنجی فرم
        (function () {
            'use strict'

            var forms = document.querySelectorAll('.needs-validation')

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}