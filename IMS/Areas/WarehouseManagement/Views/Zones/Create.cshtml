@model IMS.Application.WarehouseManagement.DTOs.StorageZoneDto

@{
    ViewData["Title"] = "قسمت جدید";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/fontawesome/css/all.min.css" />
<link href="~/vazirmatn/webfonts.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/management.css" />
<link rel="stylesheet" href="~/css/Warehouses.css" />

<style>
    .form-label i,
    .input-group-text i {
        color: #000 !important;
    }

    .form-label {
        color: #000 !important;
    }

    .form-text {
        color: #6c757d !important;
    }
</style>

<div class="header-sidebar-wrapper">
    @await Html.PartialAsync("_Sidebar")

    <div class="container-fluid py-4" dir="rtl">
        <div class="row">
            <div class="col-12">
                <div class="card card-primary border-0 shadow">
                    <div class="card-header py-3 d-flex justify-content-between align-items-center">
                        <h4 class="mb-0 text-white">
                            <i class="fas fa-map-marked-alt me-2"></i> @ViewData["Title"]
                        </h4>
                        <a asp-action="Index" asp-route-id="@Model.WarehouseId" class="btn btn-light btn-sm">
                            <i class="fas fa-arrow-right me-1"></i> بازگشت به لیست
                        </a>
                    </div>

                    <div class="card-body">
                        <form asp-action="Create" method="post" class="needs-validation" novalidate>
                            <input type="hidden" asp-for="WarehouseId" />

                            <div class="row g-3 mb-4">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="ZoneCode" class="form-label fw-bold mb-2">
                                            <i class="fas fa-barcode me-1"></i> کد قسمت
                                        </label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light"><i class="fas fa-hashtag"></i></span>
                                            <input asp-for="ZoneCode" class="form-control" placeholder="کد منحصر به فرد قسمت را وارد کنید" />
                                        </div>
                                        <span asp-validation-for="ZoneCode" class="text-danger small mt-1 d-block"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Name" class="form-label fw-bold mb-2">
                                            <i class="fas fa-tag me-1"></i> نام قسمت
                                        </label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light"><i class="fas fa-map-signs"></i></span>
                                            <input asp-for="Name" class="form-control" placeholder="نام کامل قسمت را وارد کنید" />
                                        </div>
                                        <span asp-validation-for="Name" class="text-danger small mt-1 d-block"></span>
                                        <div class="form-text small text-muted">مثال: انبار مرکزی، قسمت مواد اولیه</div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-footer border-top pt-4 mt-4 d-flex justify-content-end gap-3">
                                <button type="submit" class="btn btn-primary px-4">
                                    <i class="fas fa-save me-2"></i> ثبت قسمت
                                </button>
                                <a asp-action="Index" asp-route-id="@Model.WarehouseId" class="btn btn-outline-secondary">
                                    <i class="fas fa-times me-2"></i> انصراف
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // فعال سازی اعتبارسنجی فرم
        (function () {
            'use strict'

            var forms = document.querySelectorAll('.needs-validation')

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}