@model IMS.Application.WarehouseManagement.DTOs.StorageZoneDto

@{
    ViewData["Title"] = " قسمت جدید";

    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card card-primary border-0 shadow">
                    <div class="card-header bg-primary py-3 d-flex justify-content-between align-items-center">
                        <h4 class="mb-0 text-white">
                            <i class="fas fa-map-marked-alt me-2"></i>@ViewData["Title"]
                        </h4>
                    </div>

                    <div class="card-body">
                        <form asp-action="Create" method="post" class="needs-validation" novalidate>
                            <input type="hidden" asp-for="WarehouseId" />

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label asp-for="ZoneCode" class="form-label fw-bold">
                                            <i class="fas fa-barcode me-1 text-muted"></i> کد 
                                        </label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light"><i class="fas fa-hashtag text-primary"></i></span>
                                            <input asp-for="ZoneCode" class="form-control form-control-lg" placeholder="کد منحصر به فرد قسمت را وارد کنید" />
                                        </div>
                                        <span asp-validation-for="ZoneCode" class="text-danger small mt-1 d-block"></span>
                                        
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label asp-for="Name" class="form-label fw-bold">
                                            <i class="fas fa-tag me-1 text-muted"></i> نام 
                                        </label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light"><i class="fas fa-map-signs text-primary"></i></span>
                                            <input asp-for="Name" class="form-control form-control-lg" placeholder="نام کامل قسمت را وارد کنید" />
                                        </div>
                                        <span asp-validation-for="Name" class="text-danger small mt-1 d-block"></span>
                                        <div class="form-text small text-muted">مثال: انبار مرکزی، قسمت مواد اولیه</div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-footer border-top pt-4 mt-3">
                                <button type="submit" class="btn btn-primary btn-lg px-5">
                                    <i class="fas fa-save me-2"></i> ثبت
                                </button>
                            <a asp-action="Index" asp-route-id="@Model.WarehouseId" class="btn btn-outline-secondary btn-lg me-2">
                                <i class="fas fa-times me-2"></i> انصراف
                            </a>


                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <style>
        .form-control-lg {
            padding: 0.75rem 1rem;
            font-size: 1rem;
            border-radius: 0.375rem;
        }

        .input-group-text {
            min-width: 45px;
            justify-content: center;
        }

        .form-footer {
            display: flex;
            justify-content: flex-start;
            gap: 1rem;
        }

        .card {
            border-radius: 0.5rem;
            overflow: hidden;
        }

        .card-header {
            border-bottom: none;
        }

        .form-label {
            margin-bottom: 0.5rem;
            color: #495057;
        }
    </style>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // فعال سازی اعتبارسنجی فرم
        (function () {
            'use strict'

            var forms = document.querySelectorAll('.needs-validation')

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()


        function goBackToZones() {
            const id = document.getElementById('warehouseId')?.value;

            if (id && parseInt(id) > 0) {
                window.location.href = `/Zones/GoToIndex?warehouseId=${id}`;
            } else {
                alert("شناسه انبار یافت نشد!");
            }
        }

    </script>
}