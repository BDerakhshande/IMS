@model PurchaseRequestDetailsViewModel
@using IMS.Domain.ProcurementManagement.Enums
@using IMS.Models.ProMan
@using System.Reflection
@{
    Layout = null;
    var statusDescription = Model.Status.GetType()
        .GetField(Model.Status.ToString())
        .GetCustomAttribute<System.ComponentModel.DescriptionAttribute>()?
        .Description ?? Model.Status.ToString();
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>پرینت درخواست کالا شماره @Model.RequestNumber</title>
    <style>
        /* Reset and Base Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'B Nazanin', 'Iranian Sans', Tahoma, Arial, sans-serif;
        }

        @@page {
            size: A4 portrait;
            margin: 10mm;
        }

        body {
            padding: 20px;
            color: #333;
            line-height: 1.6;
            font-size: 14px;
        }

        /* Header Styles */
        .header {
            text-align: center;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 2px solid #1a4a5a;
        }

            .header h1 {
                color: #1a4a5a;
                font-size: 24px;
                margin-bottom: 10px;
            }

        .report-info {
            display: flex;
            justify-content: space-between;
            margin-bottom: 15px;
            font-size: 12px;
            color: #7f8c8d;
        }

        /* Request Info Section */
        .request-info {
            background-color: #f8f9fa;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 20px;
            border-right: 4px solid #1a4a5a;
        }

            .request-info h4 {
                color: #1a4a5a;
                margin-bottom: 10px;
                font-size: 16px;
            }

        .request-details {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
        }

        .request-detail-item {
            background-color: #e8f4fc;
            padding: 8px 12px;
            border-radius: 3px;
            font-size: 13px;
        }

        /* Table Styles */
        .data-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
        }

            .data-table th {
                background-color: #1a4a5a;
                color: white;
                padding: 12px 8px;
                text-align: center;
                font-weight: bold;
                font-size: 13px;
            }

            .data-table td {
                padding: 10px 8px;
                border-bottom: 1px solid #ddd;
                text-align: center;
                font-size: 13px;
            }

            .data-table tr:nth-child(even) {
                background-color: #f8f9fa;
            }

        .summary-row {
            font-weight: bold;
            background-color: #f1f1f1 !important;
        }

            .summary-row td {
                border-top: 2px solid #1a4a5a;
                border-bottom: 2px solid #1a4a5a;
                padding: 12px 8px;
            }

        /* Checkmark styles */
        .checkmark {
            color: green;
            font-weight: bold;
        }

        .dash {
            color: #ccc;
        }

        /* Footer */
        .footer {
            text-align: center;
            margin-top: 30px;
            padding-top: 15px;
            border-top: 1px solid #ddd;
            font-size: 12px;
            color: #7f8c8d;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>جزئیات درخواست خرید شماره @Model.RequestNumber</h1>
        <div class="report-info">
            <span>تاریخ چاپ: @DateTime.Now.ToString("yyyy/MM/dd HH:mm")</span>
        </div>
    </div>

    <section class="request-info">
        <h4>اطلاعات درخواست:</h4>
        <div class="request-details">
            <div class="request-detail-item">
                <strong>تاریخ درخواست:</strong> @Model.RequestDate.ToString("yyyy/MM/dd")
            </div>
            <div class="request-detail-item">
                <strong>عنوان:</strong> @Model.Title
            </div>
            <div class="request-detail-item">
                <strong>وضعیت:</strong> @statusDescription
            </div>
        </div>
    </section>

    <table class="data-table">
        <thead>
            <tr>
                <th>کالا</th>
                <th>درخواست اولیه</th>
                <th>درخواست باقی مانده</th>
                <th>موجودی انبار</th>
                <th>نیاز به تامین</th>
                <th>تأمین کامل</th>
                <th>تحویل کامل</th>
                <th>توضیحات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.CategoryName | @item.GroupName | @item.Status | @item.ProductName</td>
                    <td>@item.InitialQuantity.ToString("0")</td>
                    <td>@item.RemainingQuantity.ToString("0")</td>
                    <td>@item.TotalStock.ToString("0")</td>
                    <td>@item.NeedToSupply.ToString("0")</td>
                    <td style="text-align: center;">
                        @if (item.IsFullySupplied)
                        {
                            <span class="checkmark">✓</span>
                        }
                        else
                        {
                            <span class="dash">-</span>
                        }
                    </td>
                    <td style="text-align: center;">
                        @if (item.IsFullyDelivered)
                        {
                            <span class="checkmark">✓</span>
                        }
                        else
                        {
                            <span class="dash">-</span>
                        }
                    </td>
                    <td>@item.Description</td>
                </tr>
            }
           @*  <tr class="summary-row">
                <td>جمع کل</td>
                <td>@Model.Items.Sum(i => i.InitialQuantity).ToString("0")</td>
                <td>@Model.Items.Sum(i => i.RemainingQuantity).ToString("0")</td>
                <td>@Model.Items.Sum(i => i.TotalStock).ToString("0")</td>
                <td>@Model.Items.Sum(i => i.NeedToSupply).ToString("0")</td>
                <td>@Model.Items.Count(i => i.IsFullySupplied).ToString("0")</td>
                <td>@Model.Items.Count(i => i.IsFullyDelivered).ToString("0")</td>
                <td>-</td>
            </tr> *@
        </tbody>
    </table>

    <div class="footer">
        <p>سیستم مدیریت موجودی - چاپ شده در تاریخ: @DateTime.Now.ToString("yyyy/MM/dd HH:mm")</p>
    </div>
</body>
</html>