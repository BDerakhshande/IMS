@{
    ViewData["Title"] = "صفحه اصلی مدیریت پروژه";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- فونت و آیکون‌ها -->
    <link rel="stylesheet" href="~/fontawesome/css/all.min.css" />
    <link href="~/vazirmatn/webfonts.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/management.css" />
</head>
<body>
    <div class="header-bar">
        <button class="toggle-btn" id="toggleBtn">☰</button>
        <img src="/image/logo.png" alt="لوگو" id="logo" class="logo-icon" />
    </div>


    <div class="sidebar" id="sidebar">
        <div class="sidebar-content">
            <a href="/ProjectManagement/Dashboard" class="menu-item active">
                <i class="fas fa-home"></i>
                <span>داشبورد</span>
            </a>

            <div class="menu-item has-submenu">
                <i class="fas fa-user"></i>
                <span>تعاریف</span>
                <i class="submenu-toggle fas fa-chevron-down"></i>
            </div>
            <div class="submenu">
                <a class="submenu-item" href="/ProjectManagement/Project/Index"><i class="fas fa-box"></i> <span>مدیریت پروژه</span></a>
                <a class="submenu-item" href="/ProjectManagement/ProjectType/Index"><i class="fas fa-tags"></i> <span>مدیریت نوع پروژه</span></a>
                <a class="submenu-item" href="/ProjectManagement/Employers/Index"><i class="fas fa-tags"></i> <span>مدیریت کارفرما</span></a>
            </div>

            <a asp-area ="ProjectManagementHome" asp-controller="ProjectReport" asp-action="Index" class="menu-item active">
                <i class="fas fa-chart-bar"></i>
                <span>گزارشات</span>
            </a>
            <a asp-controller="ProjectManagementHome" asp-action="Index" class="menu-item active">
                <i class="fas fa-right-from-bracket"></i>
                <span>خروج</span>
            </a>
        </div>
    </div>

    <div class="main-content">
        <h1>Main Content ...drhsh</h1>
    </div>

    <script src="~/js/management.js"></script>
</body>
</html>
