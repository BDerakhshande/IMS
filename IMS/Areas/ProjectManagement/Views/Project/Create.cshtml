@model IMS.Application.ProjectManagement.DTOs.ProjectDto
@{
    ViewData["Title"] = "ایجاد پروژه جدید";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow rounded-4 border-0">
        <div class="card-header bg-success text-white fw-bold fs-5 rounded-top-4">
            <i class="bi bi-plus-circle"></i> ایجاد پروژه جدید
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="ProjectName" class="form-label">نام پروژه</label>
                        <input asp-for="ProjectName" class="form-control" />
                        <span asp-validation-for="ProjectName" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="StartDate" class="form-label">تاریخ شروع</label>
                        <input asp-for="StartDate" type="date" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="EndDate" class="form-label">تاریخ پایان</label>
                        <input asp-for="EndDate" type="date" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="EmployerId" class="form-label">کارفرما</label>
                        <select asp-for="EmployerId" class="form-select" asp-items="ViewBag.Employers">
                            <option value="">انتخاب کنید</option>
                        </select>
                        <span asp-validation-for="EmployerId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="ProjectTypeId">نوع پروژه</label>
                        <select asp-for="ProjectTypeId" class="form-control" asp-items="ViewBag.ProjectTypes">
                            <option value="">انتخاب کنید...</option>
                        </select>
                        <span asp-validation-for="ProjectTypeId" class="text-danger"></span>
                    </div>

                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Location" class="form-label">موقعیت مکانی</label>
                        <input asp-for="Location" class="form-control" />
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Objectives" class="form-label">اهداف پروژه</label>
                        <input asp-for="Objectives" class="form-control" />
                        <span asp-validation-for="Objectives" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="Budget" class="form-label">بودجه</label>
                        <input asp-for="Budget" class="form-control" />
                        <span asp-validation-for="Budget" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Currency" class="form-label">واحد پول</label>
                        <select asp-for="Currency" class="form-select" asp-items="Html.GetEnumSelectList<IMS.Domain.ProjectManagement.Enums.CurrencyType>()">
                            <option value="">انتخاب کنید</option>
                        </select>
                        <span asp-validation-for="Currency" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="ProgressPercent" class="form-label">درصد پیشرفت</label>
                        <input asp-for="ProgressPercent" type="number" class="form-control" />
                        <span asp-validation-for="ProgressPercent" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="ProjectManager" class="form-label">مدیر پروژه</label>
                        <input asp-for="ProjectManager" type="text" class="form-control" />
                        <span asp-validation-for="ProjectManager" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Priority" class="form-label">اولویت</label>
                        <select asp-for="Priority" class="form-select" asp-items="Html.GetEnumSelectList<IMS.Domain.ProjectManagement.Enums.ProjectPriority>()">
                            <option value="">انتخاب کنید</option>
                        </select>
                        <span asp-validation-for="Priority" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Status" class="form-label">وضعیت</label>
                        <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<IMS.Domain.ProjectManagement.Enums.ProjectStatus>()">
                            <option value="">انتخاب کنید</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">توضیحات</label>
                    <textarea asp-for="Description" rows="4" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">بازگشت</a>
                    <button type="submit" class="btn btn-success fw-bold">ذخیره</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
