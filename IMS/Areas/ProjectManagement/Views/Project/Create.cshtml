@model IMS.Application.ProjectManagement.DTOs.ProjectDto
@{
    ViewData["Title"] = "پروژه جدید";
    Layout = "~/Areas/ProjectManagement/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/fontawesome/css/all.min.css" />
<link href="~/vazirmatn/webfonts.css" rel="stylesheet" />

<div class="container-fluid py-3" dir="rtl">
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow" style="box-shadow: 0 4px 8px rgba(13, 110, 253, 0.1);">
                <div class="card-header py-2 d-flex justify-content-between align-items-center"
                     style="background-color: #1a4959; color: white;">
                    <h5 class="mb-0 text-white">
                        <i class="fas fa-project-diagram me-2"></i> @ViewData["Title"]
                    </h5>
                    <a asp-action="Index" class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-right me-1"></i> بازگشت به لیست
                    </a>
                </div>

                <div class="card-body p-3">
                    <form asp-action="Create" method="post" class="needs-validation" novalidate>
                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ProjectName" class="form-label fw-bold mb-1 small">
                                        <i class="fas fa-tag me-1"></i> نام پروژه
                                    </label>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text bg-light"><i class="fas fa-font small"></i></span>
                                        <input asp-for="ProjectName" class="form-control form-control-sm" placeholder="نام کامل پروژه را وارد کنید" />
                                    </div>
                                    <span asp-validation-for="ProjectName" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="StartDate" class="form-label fw-bold mb-1 small">
                                        <i class="fas me-1"></i> تاریخ شروع
                                    </label>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text bg-light"><i class="fas fa-clock small"></i></span>
                                        <input asp-for="StartDate" id="StartDate" type="text" class="form-control form-control-sm"
                                               value="@ViewBag.TodayShamsi" placeholder="تاریخ شروع را وارد کنید" />
                                    </div>
                                    <span asp-validation-for="StartDate" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="EndDate" class="form-label fw-bold mb-1 small">
                                        <i class="fas me-1"></i> تاریخ پایان
                                    </label>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text bg-light"><i class="fas fa-clock small"></i></span>
                                        <input asp-for="EndDate" id="EndDate" type="text" class="form-control form-control-sm"
                                               value="@ViewBag.TodayShamsi" placeholder="تاریخ پایان را وارد کنید" />
                                    </div>
                                    <span asp-validation-for="EndDate" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="EmployerId" class="form-label fw-bold mb-1 small">
                                        <i class="fas fa-building me-1"></i> کارفرما
                                    </label>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text bg-light"><i class="fas fa-list small"></i></span>
                                        <select asp-for="EmployerId" class="form-control form-control-sm" asp-items="ViewBag.Employers">
                                            <option value="">انتخاب کنید</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="EmployerId" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ProjectTypeId" class="form-label fw-bold mb-1 small">
                                        <i class="fas fa-tasks me-1"></i> نوع پروژه
                                    </label>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text bg-light"><i class="fas fa-list small"></i></span>
                                        <select asp-for="ProjectTypeId" class="form-control form-control-sm" asp-items="ViewBag.ProjectTypes">
                                            <option value="">انتخاب کنید</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="ProjectTypeId" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Location" class="form-label fw-bold mb-1 small">
                                        <i class="fas fa-map-marker-alt me-1"></i> موقعیت مکانی
                                    </label>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text bg-light"><i class="fas fa-map small"></i></span>
                                        <input asp-for="Location" class="form-control form-control-sm" placeholder="موقعیت پروژه را وارد کنید" />
                                    </div>
                                    <span asp-validation-for="Location" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>

                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="ProgressPercent" class="form-label fw-bold mb-1 small">
                                        <i class="fas fa-percent me-1"></i> درصد پیشرفت
                                    </label>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text bg-light"><i class="fas fa-chart-line small"></i></span>
                                        <input asp-for="ProgressPercent" type="number" class="form-control form-control-sm" placeholder="درصد پیشرفت را وارد کنید" />
                                    </div>
                                    <span asp-validation-for="ProgressPercent" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="ProjectManager" class="form-label fw-bold mb-1 small">
                                        <i class="fas fa-user-tie me-1"></i> مدیر پروژه
                                    </label>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text bg-light"><i class="fas fa-user small"></i></span>
                                        <input asp-for="ProjectManager" type="text" class="form-control form-control-sm" placeholder="نام مدیر پروژه را وارد کنید" />
                                    </div>
                                    <span asp-validation-for="ProjectManager" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Priority" class="form-label fw-bold mb-1 small">
                                        <i class="fas fa-exclamation-circle me-1"></i> اولویت
                                    </label>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text bg-light"><i class="fas fa-sort-amount-up small"></i></span>
                                        <select asp-for="Priority" class="form-control form-control-sm" asp-items="Html.GetEnumSelectList<IMS.Domain.ProjectManagement.Enums.ProjectPriority>()">
                                            <option value="">انتخاب کنید</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="Priority" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Status" class="form-label fw-bold mb-1 small">
                                        <i class="fas fa-info-circle me-1"></i> وضعیت
                                    </label>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text bg-light"><i class="fas fa-flag small"></i></span>
                                        <select asp-for="Status" class="form-control form-control-sm" asp-items="Html.GetEnumSelectList<IMS.Domain.ProjectManagement.Enums.ProjectStatus>()">
                                            <option value="">انتخاب کنید</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="Status" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-group">
                                <label asp-for="Description" class="form-label fw-bold mb-1 small">
                                    <i class="fas fa-align-left me-1"></i> توضیحات
                                </label>
                                <textarea asp-for="Description" rows="4" class="form-control form-control-sm" placeholder="توضیحات پروژه را وارد کنید"></textarea>
                                <span asp-validation-for="Description" class="text-danger small mt-1 d-block"></span>
                            </div>
                        </div>

                        <div class="border-top pt-3 mt-3 d-flex justify-content-end gap-2">
                            <button type="submit" class="btn btn-primary btn-sm px-3">
                                <i class="fas fa-save me-1"></i> ثبت پروژه
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-times me-1"></i> انصراف
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="/js/MenuJs.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // فعال سازی اعتبارسنجی فرم
        (function () {
            'use strict'

            var forms = document.querySelectorAll('.needs-validation')

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}