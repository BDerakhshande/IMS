@using IMS.Application.ProjectManagement.Helper
@model List<IMS.Application.ProjectManagement.DTOs.ProjectDto>
@{
    ViewData["Title"] = "مدیریت پروژه‌ها";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/fontawesome/css/all.min.css" />
<link href="~/vazirmatn/webfonts.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/management.css" />
<link rel="stylesheet" href="~/css/Warehouses.css" />

<div class="header-sidebar-wrapper">
   @*  @await Html.PartialAsync("_Sidebar") *@

    <div class="container-fluid py-4" dir="rtl">
        <div class="row">
            <div class="col-12">
                <div class="card card-primary border-0 shadow">
                    <div class="card-header py-3 d-flex justify-content-between align-items-center">
                        <h4 class="mb-0 text-white">
                            <i class="fas fa-project-diagram me-2"></i> @ViewData["Title"]
                        </h4>
                        <a asp-action="Create" class="btn btn-light btn-sm">
                            <i class="fas fa-plus me-1"></i> پروژه جدید
                        </a>
                    </div>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div class="card-body">
                        @if (!Model.Any())
                        {
                            <div class="alert alert-info shadow-sm rounded">هیچ پروژه‌ای ثبت نشده است.</div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-hover table-striped table-bordered">
                                    <thead class="table-primary">
                                        <tr>
                                            <th class="text-center">#</th>
                                            <th class="text-center">عنوان پروژه</th>
                                            <th class="text-center">کارفرما</th>
                                            <th class="text-center">نوع پروژه</th>
                                            <th class="text-center">تاریخ شروع</th>
                                            <th class="text-center">تاریخ پایان</th>
                                            <th class="text-center">درصد پیشرفت</th>
                                            <th class="text-center">وضعیت</th>
                                            <th class="text-center">عملیات</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.Count; i++)
                                        {
                                            var item = Model[i];
                                            var progressColor = item.ProgressPercent switch
                                            {
                                                >= 80 => "bg-success",
                                                >= 50 => "bg-info",
                                                >= 30 => "bg-warning",
                                                _ => "bg-danger"
                                            };

                                            <tr>
                                                <td class="fw-bold">@(i + 1)</td>
                                                <td>@item.ProjectName</td>
                                                <td>@item.EmployerName</td>
                                                <td>@item.ProjectTypeName</td>
                                                <td>@item.StartDate.ToShortDateString()</td>
                                                <td>@item.EndDate.ToShortDateString()</td>
                                                <td>
                                                    <div class="progress" style="height: 20px;">
                                                        <div class="progress-bar @progressColor"
                                                             style="width: @item.ProgressPercent%;"
                                                             role="progressbar">
                                                            @item.ProgressPercent%
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <span class="badge rounded-pill bg-secondary">
                                                        @item.Status.GetDisplayName()
                                                    </span>
                                                </td>
                                                <td>
                                                    <div class="d-flex justify-content-center gap-2">

                                                        <a asp-area="ProjectManagement" asp-action="Edit" asp-route-id="@item.Id"
                                                           class="btn btn-sm btn-outline-warning"
                                                           data-bs-toggle="tooltip" title="ویرایش">
                                                            <i class="fas fa-edit me-1"></i>
                                                        </a>
                                                        <a asp-area="ProjectManagement" asp-action="Delete" asp-route-id="@item.Id"
                                                           class="btn btn-sm btn-outline-danger"
                                                           data-bs-toggle="tooltip" title="حذف">
                                                            <i class="fas fa-trash-alt me-1"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>

                    <div class="card-footer bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="text-muted small">
                                <i class="fas fa-info-circle me-1"></i>
                                تعداد پروژه‌ها: @Model.Count
                            </div>
                            <div>
                                <nav aria-label="Page navigation">
                                    <ul class="pagination pagination-sm mb-0">
                                        <li class="page-item disabled">
                                            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">قبلی</a>
                                        </li>
                                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                                        <li class="page-item">
                                            <a class="page-link" href="#">بعدی</a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/management.js"></script>
    <script>
        $(document).ready(function () {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}