@using System.Text.Json
@using IMS.Areas.ProjectManagement.Helper
@model IMS.Application.ProjectManagement.DTOs.ProjectReportRequestDto

@{
    ViewData["Title"] = "گزارش پروژه‌ها";
    Layout = "~/Areas/ProjectManagement/Views/Shared/_Layout.cshtml";
}

<style>
    /* استایل‌های مشابه ویو موجودی انبار */
    body {
        font-size: 0.9rem;
    }

    select.form-select[dir="rtl"],
    select.form-select.text-end {
        direction: rtl;
        text-align: right;
        padding-right: 1rem;
        padding-left: 2rem;
        background-position: left 0.75rem center !important;
        background-size: 16px 16px;
        background-repeat: no-repeat;
    }

    select.form-select,
    select.select2-hidden-accessible {
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
        background-image: none !important;
    }

    .table-sm-custom {
        font-size: 0.8rem;
    }

        .table-sm-custom .form-select,
        .table-sm-custom .form-control {
            font-size: 0.8rem;
            padding: 0.2rem 0.4rem;
            height: auto;
        }

        .table-sm-custom label,
        .table-sm-custom .accordion-button {
            font-size: 0.78rem;
        }

        .table-sm-custom .btn-sm {
            padding: 0.2rem 0.4rem;
            font-size: 0.75rem;
        }

    .card-header {
        padding: 0.4rem 0.8rem;
    }

    .card-body {
        padding: 0.8rem;
    }

    .form-label {
        font-size: 0.8rem;
        font-weight: 500;
        margin-bottom: 0.2rem;
    }

    .btn-xs {
        padding: 0.15rem 0.3rem;
        font-size: 0.7rem;
        line-height: 1.2;
    }

    .action-buttons {
        position: relative;
        margin-bottom: 1rem;
    }

    .action-buttons-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.3rem 0;
        border-bottom: 1px solid #dee2e6;
        margin-bottom: 0.8rem;
    }

    .action-buttons-right {
        display: flex;
        gap: 0.5rem;
    }

    .table-responsive {
        border-radius: 0.35rem;
        overflow: hidden;
    }

    .table {
        margin-bottom: 0;
    }

        .table th {
            font-size: 0.78rem;
            font-weight: 600;
            padding: 0.5rem 0.75rem;
        }

        .table td {
            font-size: 0.78rem;
            padding: 0.4rem 0.75rem;
            vertical-align: middle;
        }

    .alert {
        font-size: 0.85rem;
        padding: 0.75rem 1rem;
    }

        .alert i {
            font-size: 1.5rem;
        }
</style>

<link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

<div class="card border-0 shadow-sm" dir="rtl">
    <div class="card-header py-1 d-flex justify-content-between align-items-center" style="background-color: #1a4959; color: white;">
        <div class="d-flex align-items-center">
            <i class="fas fa-project-diagram ms-1" style="font-size: 0.85rem;"></i>
            <h5 class="mb-0 fw-bold" style="font-size: 0.9rem;">@ViewData["Title"]</h5>
        </div>
    </div>

    <div class="card-body p-2">
        <form method="post" asp-action="Index" id="projectReportForm">
            <!-- فیلترهای تاریخ -->
            <div class="card mb-4 border-primary">
                <div class="card-header bg-light-primary d-flex justify-content-between align-items-center">
                    <h6 class="mb-0 fw-bold text-black">
                        <i class="fas fa-calendar-alt me-2"></i>فیلتر بر اساس تاریخ
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row g-2">
                        <div class="col-md-3">
                            <label class="form-label small">تاریخ شروع از</label>
                            <input asp-for="Filter.StartDateFromShamsi" class="form-control form-control-sm shadow-sm persian-date" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label small">تاریخ شروع تا</label>
                            <input asp-for="Filter.StartDateToShamsi" class="form-control form-control-sm shadow-sm persian-date" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label small">تاریخ پایان از</label>
                            <input asp-for="Filter.EndDateFromShamsi" type="text" class="form-control form-control-sm shadow-sm persian-date" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label small">تاریخ پایان تا</label>
                            <input asp-for="Filter.EndDateToShamsi" type="text" class="form-control form-control-sm shadow-sm persian-date" />
                        </div>

                    </div>
                </div>
            </div>

            <!-- فیلترهای پروژه -->
            <div class="card mb-4 border-success">
                <div class="card-header bg-light-success d-flex justify-content-between align-items-center">
                    <h6 class="mb-0 fw-bold text-black">
                        <i class="fas fa-filter me-2"></i>فیلترهای پروژه
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row g-2">
                        <div class="col-md-6">
                            <label class="form-label small">کارفرما</label>
                            <select asp-for="Filter.EmployerId" asp-items="ViewBag.Employers" class="form-select form-select-sm shadow-sm">
                                <option value="">همه کارفرماها</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label small">نوع پروژه</label>
                            <select asp-for="Filter.ProjectTypeId" asp-items="ViewBag.ProjectTypes" class="form-select form-select-sm shadow-sm">
                                <option value="">همه انواع پروژه</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-md-12 text-center">
                    <button type="submit" class="btn btn-sm btn-primary px-4 rounded-pill">
                        <i class="fas fa-search me-2"></i> جستجو
                    </button>
                    <button type="reset" class="btn btn-sm btn-outline-secondary ms-2 rounded-pill" onclick="resetForm()">
                        <i class="fas fa-undo me-2"></i> بازنشانی
                    </button>
                </div>
            </div>
        </form>

        <form method="post" asp-action="ExportToPdf" id="pdfExportForm" style="display:none;">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Filter.StartDateFrom)
            @Html.HiddenFor(m => m.Filter.StartDateTo)
            @Html.HiddenFor(m => m.Filter.EndDateFrom)
            @Html.HiddenFor(m => m.Filter.EndDateTo)
            @Html.HiddenFor(m => m.Filter.EmployerId)
            @Html.HiddenFor(m => m.Filter.ProjectTypeId)
        </form>
    </div>
</div>

@if (Model.ReportItems.Any())
{
    <!-- نمایش جدول گزارشات با چیدمان بهبود یافته -->
    <div class="action-buttons" dir="rtl">
        <div class="action-buttons-container">
            <h6 class="mb-0 fw-bold" style="font-size: 0.85rem;">
                <i class="fas fa-list-alt ms-1"></i> نتایج گزارش
            </h6>
            <div class="action-buttons-right">
                <button type="button" class="btn btn-xs btn-outline-primary rounded-pill" onclick="document.getElementById('pdfExportForm').submit();">
                    <i class="fas fa-file-pdf me-2"></i> پرینت
                </button>
                <button type="button" class="btn btn-xs btn-outline-success rounded-pill" onclick="exportToExcel()">
                    <i class="fas fa-file-excel me-1"></i> اکسل
                </button>
            </div>
        </div>
    </div>

    <div id="reportResults" class="mt-2" dir="rtl">
        <div class="card shadow-sm">
            <div class="card-header py-1 d-flex justify-content-between align-items-center" style="background-color: #1a4959; color: white;">
                <div class="d-flex align-items-center">
                    <i class="fas fa-project-diagram ms-1" style="font-size: 0.8rem;"></i>
                    <h5 class="mb-0 fw-bold" style="font-size: 0.85rem;">گزارش پروژه‌ها</h5>
                </div>
                <span class="badge bg-light text-dark" style="font-size: 0.75rem;">
                    تعداد: @Model.ReportItems.Count.ToString("N0")
                </span>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-sm table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th scope="col" width="25%" class="text-start ps-4">نام پروژه</th>
                                <th scope="col" width="20%" class="text-start">کارفرما</th>
                                <th scope="col" width="15%" class="text-start">نوع پروژه</th>
                                <th scope="col" width="15%" class="text-center">تاریخ شروع</th>
                                <th scope="col" width="15%" class="text-center">تاریخ پایان</th>
                                <th scope="col" width="10%" class="text-end pe-4">وضعیت</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ReportItems)
                            {
                                <tr class="align-middle">
                                    <td class="text-start ps-4">
                                        <div class="small">@item.ProjectName</div>
                                    </td>
                                    <td class="text-start">
                                        <div class="small">@item.EmployerName</div>
                                    </td>
                                    <td class="text-start">
                                        <div class="small">@item.ProjectTypeName</div>
                                    </td>
                                    <td class="text-center">
                                        <span class="small">@item.StartDate.ToShamsi()</span>
                                    </td>
                                    <td class="text-center">
                                        <span class="small">@item.EndDate.ToShamsi()</span>
                                    </td>
                                    <td class="text-end pe-4">
                                        @{
                                            var statusClass = item.Status switch
                                            {
                                                "در حال انجام" => "bg-warning bg-opacity-10 text-warning",
                                                "تکمیل شده" => "bg-success bg-opacity-10 text-success",
                                                "متوقف شده" => "bg-danger bg-opacity-10 text-danger",
                                                _ => "bg-secondary bg-opacity-10 text-secondary"
                                            };
                                        }
                                        <span class="badge @statusClass" style="font-size: 0.7rem;">
                                            @item.Status
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
else if (ViewBag.SearchPerformed == true)
{
    <div class="alert alert-info mt-3 text-center py-2" dir="rtl">
        <i class="fas fa-box-open fa-1x mb-2 d-block"></i>
        <h5 class="fw-semibold" style="font-size: 0.9rem;">موردی برای نمایش وجود ندارد</h5>
        <p class="text-muted mb-0" style="font-size: 0.8rem;">هیچ پروژه‌ای با فیلترهای انتخاب شده یافت نشد.</p>
    </div>
}
else
{
    <div class="alert alert-warning mt-3 text-center py-2" dir="rtl">
        <i class="fas fa-info-circle fa-1x mb-2 d-block"></i>
        <h5 class="fw-semibold" style="font-size: 0.9rem;">لطفاً ابتدا فیلترها را انتخاب کنید</h5>
        <p class="text-muted mb-0" style="font-size: 0.8rem;">برای مشاهده گزارش، باید ابتدا پارامترهای فیلتر را تنظیم کنید.</p>
    </div>
}

@section Scripts {
    <script src="~/js/MenuJs.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap-5.1.3-dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/select2/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            // فعال‌سازی Select2
            $('.form-select').select2({
                placeholder: 'انتخاب کنید',
                allowClear: true,
                width: '100%',
                dir: 'rtl'
            });

            // اسکرول به نتایج اگر وجود داشته باشد
            if ($('#reportResults').length) {
                $('html, body').animate({
                    scrollTop: $('#reportResults').offset().top - 100
                }, 500);
            }
        });
                 $('.persian-date').persianDatepicker({
            format: 'YYYY/MM/DD',
            autoClose: true,
            initialValue: false
        });


                function resetForm() {
            const form = document.getElementById('projectReportForm');
            form.reset();

            $('.form-select').each(function() {
                $(this).val(null).trigger('change');
            });
        }

        async function exportToExcel() {
            const filter = @Html.Raw(JsonSerializer.Serialize(Model.Filter));

            try {
                const response = await fetch('@Url.Action("ExportProjectsToExcel", "ProjectReport", new { area = "ProjectManagement" })', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(filter)
                });

                if (!response.ok) throw new Error('خطا در دریافت فایل اکسل.');

                const blob = await response.blob();
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = `ProjectReport_${new Date().toISOString().slice(0,19).replace(/[:T]/g, '')}.xlsx`;
                document.body.appendChild(a);
                a.click();
                a.remove();
                window.URL.revokeObjectURL(url);
            }
            catch (err) {
                alert(err.message);
            }
        }
    </script>
}