@model List<IMS.Application.ProjectManagement.DTOs.ProjectTypeDto>
@{
    ViewData["Title"] = "لیست انواع پروژه‌ها";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary fw-bold">لیست انواع پروژه‌ها</h2>
        <a class="btn btn-success" asp-action="Create">
            <i class="bi bi-plus-circle me-1"></i> افزودن نوع پروژه جدید
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover text-center align-middle table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>ردیف</th>
                        <th>عنوان نوع پروژه</th>
                        <th>توضیحات</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@Model[i].Name</td>
                            <td>@Model[i].Description</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@Model[i].Id" class="btn btn-sm btn-info text-white">
                                    <i class="bi bi-eye"></i> مشاهده
                                </a>
                                <a asp-action="Edit" asp-route-id="@Model[i].Id" class="btn btn-sm btn-warning text-dark">
                                    <i class="bi bi-pencil-square"></i> ویرایش
                                </a>
                                <a asp-action="Delete" asp-route-id="@Model[i].Id" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> حذف
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            هیچ نوع پروژه‌ای ثبت نشده است.
        </div>
    }
</div>
