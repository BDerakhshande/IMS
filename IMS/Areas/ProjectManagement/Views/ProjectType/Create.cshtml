@model IMS.Application.ProjectManagement.DTOs.ProjectTypeDto
@{
    ViewData["Title"] = "ایجاد نوع پروژه جدید";
}

<div class="container mt-4">
    <h2 class="text-primary fw-bold mb-4">ایجاد نوع پروژه جدید</h2>

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="Name" class="form-label fw-semibold"> نام</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label fw-semibold">توضیحات</label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-right"></i> بازگشت
            </a>
            <button type="submit" class="btn btn-success">
                <i class="bi bi-check-circle"></i> ثبت نوع پروژه
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
